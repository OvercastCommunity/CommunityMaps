<map proto="1.5.0" min-server-version="1.21">
<name>Tartarus</name>
<version>1.0.2</version>
<objective>Jump into the enemy team's portal, located below their spawn point!</objective>
<created>2025-12-04</created>
<include id="tension"/>
<constants>
    <constant id="map-origin">0.5,0,0.5</constant>
    <constant id="void-plane">154</constant>
    <!-- Teams -->
    <constant id="team-one-spawn">37.5,170,22.5</constant>
    <constant id="team-one-yaw">130</constant>
    <constant id="team-two-spawn">-36.5,170,-21.5</constant>
    <constant id="team-two-yaw">-60</constant>
</constants>
<authors>
    <author uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128"/> <!-- zzuf -->
</authors>
<terrain environment="nether"/>
<teams>
    <team id="team-one" color="dark red" max="7">Crimson</team>
    <team id="team-two" color="dark aqua" max="7">Warped</team>
</teams>
<spawns>
    <default>
        <regions>
             <point>0.5,185,-35.5</point>
             <point yaw="180">0.5,185,36.5</point>
        </regions>
    </default>
</spawns>
<kits>
    <give filter="web-region-effect">
        <kit>
          <!-- <effect duration="1s" amplifier="255">slow falling</effect> -->
            <effect duration="0.5s">levitation</effect>
        </kit>
    </give>
</kits>
<filters>
    <any id="block-list">
        <material>scaffolding</material>
        <material>iron block</material>
        <material>warped roots</material>
        <material>crimson roots</material>
        <material>warped fungus</material>
        <material>crimson fungus</material>
    </any>
    <deny id="deny-physics">
        <any>
            <material>warped roots</material>
            <material>crimson roots</material>
            <material>redstone wire</material>
            <material>redstone torch</material>
            <material>red stained glass pane</material>
            <material>cyan stained glass pane</material>
        </any>
    </deny>
    <deny id="deny-respawn-anchor">
        <material>respawn anchor</material>
    </deny>
</filters>
<regions>
    <negative id="not-buildable">
        <union>
            <cuboid min="-28,155,25" max="23,170,-12"/>
            <cuboid min="29,155,-24" max="-22,170,13"/>
        </union>
    </negative>
    <!-- Portals -->
    <cuboid id="team-one-portal" min="34,155,19" size="3,1,3"/>
    <mirror id="team-one-portal-mirror" region="team-one-portal" origin="${map-origin}" normal="1,0,0"/>
    <mirror id="team-two-portal" region="team-one-portal-mirror" origin="${map-origin}" normal="0,0,1"/>
    <!-- Round cages -->
    <union id="cages">
        <cylinder id="team-one-spawn-cage" base="${team-one-spawn}" height="3" radius="2"/>
        <cylinder id="team-two-spawn-cage" base="${team-two-spawn}" height="3" radius="2"/>
    </union>
    <!-- Tartarus -->
    <point id="pier-caps-spawner">0,157.2,0.5</point>
    <apply block-physics="deny-physics"/>
    <apply use="deny-respawn-anchor"/>
    <union id="web-region">
        <block>-35,165,-20</block>
        <block>35,165,20</block>
    </union>
    <union id="web-region-effect">
        <block>-35,168,-20</block>
        <block>35,168,20</block>
    </union>
</regions>
<actions>
    <trigger scope="match" filter="match-running">
        <action>
            <fill material="air" region="web-region"/>
        </action>
    </trigger>
</actions>
<disabledamage>
    <damage>lava</damage>
</disabledamage>
<itemremove>
    <item>crimson roots</item>
    <item>warped roots</item>
    <item>crimson fungus</item>
    <item>warped fungus</item>
</itemremove>
</map>
