<map proto="1.5.0" min-server-version="1.21.6">
<name>Thistle Mini</name>
<version>1.0.1</version>
<objective>Jump into the enemy team's portal, located below their spawn point!</objective>
<created>2026-02-04</created>
<include id="tension"/>
<game>Tension</game>
<constants>
    <constant id="map-origin">0,0,-35.5</constant>
    <constant id="void-plane">154</constant>
    <!-- Teams -->
    <constant id="team-one-spawn">38.5,170,-42.5</constant>
    <constant id="team-one-yaw">90</constant>
    <constant id="team-two-spawn">-38.5,170,-35.5</constant>
    <constant id="team-two-yaw">-90</constant>
</constants>
<authors>
    <author uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128"/> <!-- zzuf -->
</authors>
<teams>
    <team id="team-one" color="yellow" max="3">Yellow</team>
    <team id="team-two" color="blue" max="3">Blue</team>
</teams>
<spawns>
    <default>
        <regions>
             <point>0,187,-81.5</point>
             <point yaw="180">0,187,1.5</point>
        </regions>
    </default>
</spawns>
<filters>
    <any id="block-list">
        <material>scaffolding</material>
        <material>iron block</material>
        <material>short grass</material>
        <material>large fern</material>
    </any>
    <deny id="deny-physics">
        <any>
            <material>long grass</material>
            <material>large fern</material>
            <material>sunflower</material>
        </any>
    </deny>
</filters>
<regions>
    <negative id="not-buildable">
        <complement>
            <cuboid min="40,155,-30" max="-40,170,-48"/>
            <rectangle id="blue-portal-area" min="-32,-42" max="-43,-30"/>
            <rectangle id="yellow-portal-area" min="32,-36" max="43,-48"/>
        </complement>
    </negative>
    <!-- Portals -->
    <cuboid id="team-one-portal" min="37,155,-44" size="3,1,3"/>
    <cuboid id="team-two-portal" min="-40,155,-37" size="3,1,3"/>
    <!-- Round cages -->
    <union id="cages">
        <cylinder id="team-one-spawn-cage" base="${team-one-spawn}" height="3" radius="2"/>
        <cylinder id="team-two-spawn-cage" base="${team-two-spawn}" height="3" radius="2"/>
    </union>
    <!-- Thistle Mini -->
    <point id="pier-caps-spawner">0,157.2,-39</point>
    <apply block-physics="deny-physics"/>
</regions>
<itemremove>
    <item>seeds</item>
</itemremove>
</map>
