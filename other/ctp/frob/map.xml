    </kit>
    <kit id="red-kit" parents="base-kit">
        <item slot="2" damage="14" amount="64">stained clay</item>
        <item slot="29" damage="14" amount="64">stained clay</item>
        <item slot="20" damage="14" amount="64">stained clay</item>
