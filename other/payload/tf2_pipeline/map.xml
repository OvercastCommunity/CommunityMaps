<map proto="1.4.2">
<name>TF2: Pipeline</name>
<version>1.0.1</version>
<objective>Push your team's cart to the end point!</objective>
<phase>development</phase>
<time result="objectives">8m</time>
<authors>
    <author uuid="b1521072-6993-4fe4-ae60-dbeeb7dc0cfa"/> <!-- Antnecb -->
</authors>
<contributors>
    <contributor uuid="e82603df-417d-4a95-bd1f-1720648be0b4" contribution="Sanity checking and DN"/> <!-- Pablete1234 -->
</contributors>
<teams>
    <team id="blue" color="blue" max="10">Blue</team>
    <team id="red" color="dark red" max="10">Red</team>
</teams>
<kits>
    <kit id="spawn">
        <game-mode>adventure</game-mode>
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" amount="1">golden apple</item>
        <item slot="8" amount="12">arrow</item>
        <leggings unbreakable="true" material="chainmail leggings"/>
        <boots unbreakable="true" material="iron boots"/>
    </kit>
    <kit id="red-kit" parents="spawn">
        <helmet color="cd0000" unbreakable="true">leather helmet</helmet>
        <chestplate color="cd0000" enchantment="protection projectile:3" unbreakable="true">leather chestplate</chestplate>
    </kit>
    <kit id="blue-kit" parents="spawn">
        <helmet color="0066cc" unbreakable="true">leather helmet</helmet>
        <chestplate color="0066cc" enchantment="protection projectile:3" unbreakable="true">leather chestplate</chestplate>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="red-kit">
        <regions yaw="0">
            <block>-5.5,11,-51.5</block>
        </regions>
    </spawn>
    <spawn team="blue" kit="blue-kit">
        <regions yaw="-180">
            <block>-5.5,11,50.5</block>
        </regions>
    </spawn>
    <default>
        <region yaw="-0">
            <block>-12.5,25,-0</block>
        </region>
    </default>
</spawns>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
</filters>
<regions>
<!--Regions-->
    <union id="red-spawn-full">
        <cuboid id="red-spawn-1" min="-25,7,-44" max="-20,11,-37"/>
        <cuboid id="red-spawn-2" min="5,10,-43" max="10,14,-38"/>
    </union>
    <union id="blue-spawn-full">
        <cuboid id="blue-spawn-1" min="-26,7,41" max="-20,11,36"/>
        <cuboid id="blue-spawn-2" min="5,10,36" max="10,14,41"/>
    </union>
    <!--<rectangle id="everywhere" min="-oo,-oo" max="oo,oo"/>-->
<!--Applies-->
    <apply enter="only-red" message="You may not enter the enemy's spawn." region="red-spawn-full"/>
    <apply enter="only-blue" message="You may not enter the enemy's spawn." region="blue-spawn-full"/>
    <apply block="never" region="everywhere"/>
</regions>
<portals>
<!--Blue side portal-->
    <portal id="blue-low" x="@-32" y="@16.5" z="@-8" yaw="@180">
        <region>
            <cuboid min="-18,10,5" max="-17,14,8"/>
        </region>
    </portal>
     <portal id="blue-high" x="@-18" y="@10.5" z="@7" yaw="@90">
        <region>
            <cuboid min="-34,16,-8" max="-31,21,-7"/>
        </region>
    </portal>
<!--Red side portal-->
    <portal id="red-low" x="@-32" y="@16.5" z="@7" yaw="90">
        <region>
            <cuboid min="-18,10,-10" max="-17,14,-7"/>
        </region>
    </portal>
     <portal id="red-high" x="@-18" y="@10.5" z="@-8" yaw="@90">
        <region>
            <cuboid min="-34,16,5" max="-31,21,6"/>
        </region>
    </portal>
</portals>
<payloads>
    <payload location="-6.5,10,34.5" name="Blue Payload" radius="4" capture-time="90s" decay-rate="0.25" capture-filter="only-blue" score="1"/> <!--display-filter="filter"--><!---->
    <payload location="-6.5,10,-35.5" name="Red Payload" radius="4" capture-time="90s" decay-rate="0.25" capture-filter="only-red" score="1"/> <!--display-filter="filter"-->
</payloads>
<score>
    <limit>1</limit>
</score>
<hunger>
    <depletion>off</depletion>
</hunger>
<killreward>
    <item>golden apple</item>
    <item amount="4">arrow</item>
</killreward>
<itemremove>
    <item>stone sword</item>
    <item>bow</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
</map>