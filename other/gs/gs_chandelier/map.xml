<map proto="1.4.2">
<name>GS: Chandelier</name>
<version>1.0</version>
<created>2022-11-14</created>
<!-- <include id="gs"/> -->
<objective>Eliminate the other team before the time runs out!</objective>
<authors>
    <author uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128"/> <!-- zzuf -->
</authors>
<teams>
    <team id="red-team" color="dark red" max="5" show-name-tags="allies">Red</team>
    <team id="yellow-team" color="yellow" max="5" show-name-tags="allies">Yellow</team>
    <team id="green-team" color="dark green" max="5" show-name-tags="allies">Green</team>
    <team id="purple-team" color="dark purple" max="5" show-name-tags="allies">Purple</team>
</teams>
<spawns>
    <spawn team="red-team" yaw="90">
        <region>
            <point>35.5,9,0.5</point>
        </region>
    </spawn>
    <spawn team="yellow-team" yaw="0">
        <region>
            <point>0.5,9,-34.5</point>
        </region>
    </spawn>
    <spawn team="green-team" yaw="-90">
        <region>
            <point>-34.5,9,0.5</point>
        </region>
    </spawn>
    <spawn team="purple-team" yaw="180">
        <region>
            <point>0.5,9,35.5</point>
        </region>
    </spawn>
    <default>
        <regions>
            <point yaw="45">30.5,28,-29.5</point> <!-- NE -->
            <point yaw="-45">-29.5,28,-29.5</point> <!-- NW -->
            <point yaw="135">30.5,28,30.5</point> <!-- SE -->
            <point yaw="-135">-29.5,28,30.5</point> <!-- SW -->
        </regions>
    </default>
</spawns>
<regions>
    <union id="deny-entry"> <!-- failsafe: shouldn't be able to get there anyway but just in case -->
        <above y="16"/> <!-- ceiling -->
    </union>
    <union id="second-floor"> <!-- failsafe: shouldn't be able to get there anyway but just in case -->
        <cuboid min="-3,13,3" max="4,18,-2"/> <!-- second floor: green to red -->
        <cuboid min="-2,13,-3" max="3,18,4"/> <!-- second floor: yellow to purple -->
    </union>
    <apply enter="never" region="deny-entry"/>
    <apply enter="never" region="second-floor" message="You may not climb up here!"/>
</regions>
<!-- ********** -->
<!-- GS Include -->
<!-- ********** -->
<!-- Modified by zzuf from the original gs.xml file from the Overcast Network -->
<gamemode>blitz</gamemode>
<game>Ghost Squadron</game>
<kits>
    <kit id="potions" potion-particles="true">
        <effect ambient="true" duration="3" amplifier="3">heal</effect>
        <effect ambient="true" duration="oo" amplifier="2">damage resistance</effect>
        <effect ambient="true" duration="oo" amplifier="1">increase damage</effect>
        <effect ambient="false" duration="150" amplifier="1">invisibility</effect>
        <item slot="8" amount="10">cooked beef</item>
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<classes family="ghost" sticky="true">
    <class name="Scout" description="Fast with knockback!" longdescription="You spawn with Speed I, a stick that has Knockback and an extra 20% speed. Perfect for knocking enemies around!" icon="stick">
        <kit parents="potions">
            <effect ambient="true" duration="oo" amplifier="1">speed</effect>
            <item slot="0" name="`dNight Stick" enchantment="knockback:1" attributes="generic.movementSpeed:base:0.2" material="stick"/>
        </kit>
    </class>
    <class name="Archer" default="true" description="Pew pew, lots of arrows!" longdescription="With a bow and plenty of arrows, it's easy to follow shot enemies!" icon="bow">
        <kit parents="potions">
            <item slot="0" name="`3Reveal Bow" enchantment="thorns:1">bow</item>
            <item slot="7" amount="64" material="arrow"/>
        </kit>
    </class>
    <class name="Pyro" description="Light players on fire via bow or melee!" longdescription="A fire melee tool and 10 arrows (with Flame) help you get several hits on an enemy!" icon="flint and steel">
        <kit parents="potions">
            <item slot="0" enchantment="fire aspect:1" name="`6Fire Stick" material="blaze rod"/> <!-- this was used in the original Ghost Squadron map, instead of the flint and steel -->
            <item slot="1" enchantment="arrow fire:1" name="`6Fire Bow" material="bow"/>
            <item slot="7" amount="10" material="arrow"/>
        </kit>
    </class>
    <class name="Bruiser" description="A wooden sword! Break cobwebs!" longdescription="A wooden sword and the ability to break cobwebs -- very useful for removing artifacts of the Spider class!" icon="wood sword">
        <kit parents="potions">
            <item slot="0" unbreakable="true" material="wood sword">
                <can-destroy>
                    <material>web</material>
                </can-destroy>
            </item>
            <effect ambient="true" duration="oo" amplifier="1">slow</effect>
            <effect ambient="true" duration="oo" amplifier="-2">health boost</effect>
        </kit>
    </class>
    <class name="Alchemist" description="Throw various helpful/harmful potions!" longdescription="A variety of potions that include Poison, Instant Damage II, Instant Health II, and Revealing!" icon="potion">
        <kit parents="potions">
            <item slot="0" amount="3" damage="16388">potion</item> <!-- Poison I -->
            <item slot="1" amount="3" damage="16428">potion</item> <!-- Instant Damage II -->
            <item slot="3" amount="3" damage="16421">potion</item> <!-- Instant Damage II -->
            <item slot="4" amount="2" damage="16430" name="`rSplash Potion of Revealing" material="potion">
                <effect duration="5s" amplifier="5">invisibility</effect>
            </item>
        </kit>
    </class>
    <class name="Spawner" description="Spawn Slimes, Zombies, Creepers and Skeletons!" longdescription="Scare your enemies with Slimes, Creepers and Zombies! You also get Skeletons for each kill!" icon="monster egg">
        <kit parents="potions">
            <item slot="0" amount="2" damage="55" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Slime -->
                <can-place-on>
                    <all-blocks/>
                </can-place-on>
            </item>
            <item slot="2" amount="3" damage="54" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Zombie -->
                <can-place-on>
                    <all-blocks/>
                </can-place-on>
            </item>
            <item slot="3" amount="1" damage="50" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Creeper -->
                <can-place-on>
                    <all-blocks/>
                </can-place-on>
            </item>
        </kit>
    </class>
    <class name="Wolf Tamer" description="Be part of a wolf pack!" longdescription="Spawn up to 2 wolves to assist you in battle" icon="bone">
        <kit parents="potions">
            <item slot="0" amount="64" attributes="generic.attackDamage:add:1" name="`rWolf Food" material="bone"/>
            <item slot="1" amount="2" damage="95" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Wolf -->
                <can-place-on>
                    <all-blocks/>
                </can-place-on>
            </item>
        </kit>
    </class>
    <class name="Demo" description="Place landmines or fire grenades!" longdescription="BOOM! Combine grenades and landmines together to destroy your enemies!" icon="tnt">
        <kit parents="potions">
            <item slot="0" amount="3" name="`4Landmine" lore="`7Use grenades to ignite!" material="tnt" show-can-place-on="false">
                <can-place-on>
                    <all-blocks/>
                </can-place-on>
            </item>
            <item slot="1" amount="12" name="`4Grenade" grenade="true" grenade-power="1.2" material="snow ball"/>
        </kit>
    </class>
    <class name="Spider" description="Some webs to trap players!" longdescription="Place some webs around the map to trap players!" icon="web">
        <kit parents="potions">
            <item slot="0" attributes="generic.attackDamage:add:1.25" material="spider eye"/>
            <item slot="2" amount="6" material="web" show-can-place-on="false">
                <can-place-on>
                    <all-blocks/>
                </can-place-on>
            </item>
            <!-- <item slot="1" name="`aWeb Bow">bow</item> -->
            <!-- <item slot="2" amount="3">web</item> -->
            <!-- <item slot="7" name="`aWeb Ammo" amount="16">arrow</item> -->
        </kit>
    </class>
    <class name="Wizard" description="Summon a witch minion!" longdescription="Spawn a witch to follow your orders." icon="brewing stand item">
        <kit parents="potions">
            <item slot="0" amount="1" attributes="generic.attackDamage:add:1" material="ghast tear"/>
            <item slot="1" amount="1" damage="66" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Witch -->
                <can-place-on>
                    <all-blocks/>
                </can-place-on>
            </item>
            <item slot="2" amount="2" damage="16460" material="potion"/> <!-- Instant Damage I -->
        </kit>
    </class>
    <class name="Specialist" description="Shock enemies with special brews!" longdescription="An array of special shockifying potions." icon="milk bucket">
        <kit parents="potions">
            <item slot="0" name="`eElectrical Bucket" attributes="generic.attackDamage:add:0.75" material="milk bucket"/>
            <item slot="1" name="`eExplosive Rocket Launcher" material="bow"/>
            <item slot="2" name="`eShocker Potion" amount="5" damage="16419" potions="poison:75:15:true;slow:75:5:true" material="potion"/>
            <item slot="7" name="`eRocket Ammo" amount="5" grenade="true" grenade-power="1.5" material="arrow"/>
        </kit>
    </class>
    <class name="Ninja" description="Who? What? Where?" longdescription="Jump, Speed, Fishing Rod, less health! Remember: Use the fishing rod to track your enemies, but be careful, as it also reveals your position!" icon="iron fence">
        <kit parents="potions">
            <effect ambient="true" duration="oo" amplifier="2">jump</effect>
            <effect ambient="true" duration="oo" amplifier="1">speed</effect>
            <effect ambient="true" duration="oo" amplifier="-1">health boost</effect>
            <item slot="0" enchantment="thorns:1" unbreakable="true" material="fishing rod"/>
        </kit>
    </class>
    <!-- ************ Disabled Classes ************ -->
    <!-- Disabled as it doesn't work without <ghostsquadron/> -->
    <!-- <class name="Tracker" description="Easily track your enemies!" longdescription="View enemy footsteps and reveal them using the compass melee!" icon="compass">
        <kit parents="potions">
            <item slot="0" amount="1" name="`bPlayer Locator" attributes="generic.attackDamage:add:1">compass</item>
        </kit>
    </class> -->
    <!-- Disabled as it's pretty useless without sticky XP orbs -->
    <!-- <class name="Leprechaun" description="XP Orbs with double jump!" longdescription="XP bar is a double-jump cooldown, use Bottle O' Enchanting to track enemies with XP orbs (be sure to use them sparingly!)!" icon="exp bottle">
        <kit parents="potions">
            <item slot="0" amount="8" name="`aBottle o' Gold">exp bottle</item
            <double-jump/>
        </kit>
    </class> -->
</classes>
<kill-rewards>
    <kill-reward>
        <item amount="3">cooked beef</item>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Alchemist</class>
            </all>
        </filter>
        <item amount="2" damage="16428">potion</item>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Archer</class>
            </all>
        </filter>
        <item amount="1" name="`3Explosive Arrow" enchantment="thorns:1" grenade="true" grenade-fire="true" grenade-power="2">arrow</item>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Bruiser</class>
            </all>
        </filter>
        <kit force="true">
            <potion ambient="true" duration="3" amplifier="2">regeneration</potion>
        </kit>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Demo</class>
            </all>
        </filter>
        <item amount="3" name="`4Landmine" lore="`7Use grenades to ignite!" material="tnt" show-can-place-on="false">
            <can-place-on>
                <all-blocks/>
            </can-place-on>
        </item>
        <item amount="5" name="`4Grenade" grenade="true" grenade-power="1.2">snow ball</item>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <any>
                    <class>Ninja</class>
                    <class>Scout</class>
                </any>
            </all>
        </filter>
        <kit force="true">
            <potion ambient="true" duration="oo" amplifier="2">speed</potion>
        </kit>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Pyro</class>
            </all>
        </filter>
        <item amount="5">arrow</item>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Spawner</class>
            </all>
        </filter>
        <item amount="1" damage="54" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Zombie -->
            <can-place-on>
                <all-blocks/>
            </can-place-on>
        </item>
        <item amount="1" damage="50" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Creeper -->
            <can-place-on>
                <all-blocks/>
            </can-place-on>
        </item>
        <item amount="1" damage="51" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Skeleton -->
            <can-place-on>
                <all-blocks/>
            </can-place-on>
        </item>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Spider</class>
            </all>
        </filter>
        <item amount="3" material="web" show-can-place-on="false">
            <can-place-on>
                <all-blocks/>
            </can-place-on>
        </item>
        <!-- <item name="`aWeb Ammo" amount="8">arrow</item> -->
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Wolf Tamer</class>
            </all>
        </filter>
        <item amount="8" attributes="generic.attackDamage:add:1" name="`rWolf Food">bone</item>
        <item amount="1" damage="95" enchantment="thorns:1" material="monster egg" show-can-place-on="false"> <!-- Wolf -->
            <can-place-on>
                <all-blocks/>
            </can-place-on>
        </item>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Specialist</class>
            </all>
        </filter>
        <item name="`eShocker Potion" amount="3" damage="16419" potions="poison:75:15:true;slow:75:5:true">potion</item>
        <item name="`eRocket Ammo" amount="5" grenade="true" grenade-power="1.5">arrow</item>
    </kill-reward>
    <kill-reward>
        <filter>
            <all>
                <kill-streak count="1" repeat="true"/>
                <class>Wizard</class>
            </all>
        </filter>
        <item amount="3" damage="16460">potion</item>
    </kill-reward>
</kill-rewards>
<rules>
    <rule>Do not prolong a match by avoiding combat or hiding.</rule>
</rules>
<blitz/>
<time>4m</time>
<filters>
    <not id="blacklist">
        <any>
            <material>anvil</material>
            <material>workbench</material>
            <material>furnace</material>
            <material>burning furnace</material>
            <material>chest</material>
            <material>dispenser</material>
            <material>mob spawner</material>
        </any>
    </not>
    <any id="placeable">
        <material>tnt</material>
        <material>web</material>
    </any>
    <all id="only-bruiser-web">
        <class>Bruiser</class>
        <material>web</material>
    </all>
</filters>
<regions>
    <apply block-break="only-bruiser-web" block-place="placeable" use="blacklist"/>
</regions>
<broadcasts>
    <alert after="1m30s">`7All players will be visible in `c`l1 minute`7!</alert>
    <alert after="2m">`7All players will be visible in `c`l30 seconds`7!</alert>
    <alert after="2m10s">`7All players will be visible in `c`l20 seconds`7!</alert>
    <alert after="2m20s">`7All players will be visible in `c`l10 seconds`7!</alert>
    <alert after="2m30s">`c`lAll players are now visible!</alert>
</broadcasts>
<timelock>on</timelock>
<gamerules>
    <doFireTick>false</doFireTick>
    <doTileDrops>false</doTileDrops>
</gamerules>
<mobs>
    <filter>
        <any>
            <spawn>spawner</spawn>
            <spawn>spawner egg</spawn>
        </any>
    </filter>
</mobs>
<damage>
    <not>
        <any>
            <relation>ally</relation>
        </any>
    </not>
</damage>
<toolrepair>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>stick</item>
    <item>tnt</item>
    <item>snow ball</item>
    <item>bow</item>
    <item>blaze rod</item>
    <item>flint and steel</item>
    <item>web</item>
    <item>monster egg</item>
    <item>arrow</item>
    <item>exp bottle</item>
    <item>potion</item>
    <item>cooked beef</item>
    <item>bone</item>
    <item>ghast tear</item>
    <item>compass</item>
    <item>wood sword</item>
    <item>spider eye</item>
    <item>sulphur</item>
    <item>redstone</item>
    <item>glowstone dust</item>
    <item>sugar</item>
    <item>glass bottle</item>
    <item>slime ball</item>
</itemremove>
</map>
