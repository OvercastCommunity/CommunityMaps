<!--before stuff, this is so messy-->
<map proto="1.5.0">
<name>ClayClay</name>
<created>2025-08-27</created>
<version>1.1.0</version>
<objective>Capture the wool</objective>
<authors>
	<author uuid="9c14b7e9-8488-427a-bc81-7193becde2d3" contribution="XML and map"/> <!--TinyPigMX-->
</authors>
<contributors>
	<contributor uuid="644521d7-9437-47c1-b1d2-698eb757df3d" contribution="Made the map look better"/> <!--minuyo-->
</contributors>
<maxbuildheight>26</maxbuildheight>
<!--teams-->
<teams>
	<team id="team-red" color="dark red" max="13">Red</team>
	<team id="team-blue" color="blue" max="13">Blue</team>
</teams>
<!--wools-->
<wools craftable="false">
	<wool team="team-red" color="red" monument="red-wool-placement" location="23,13,-53"/>
	<wool team="team-blue" color="blue" monument="blue-wool-placement" location="70,13,82"/>
</wools>
<!--spawns-->
<spawns player-kit="resistance-spawn-kit">
	<spawn team="team-red" yaw="-90">
		<region>
			<point>-15.5,16.2,-8.5</point>
		</region>
	</spawn>
	<spawn team="team-blue" yaw="90">
		<region>
			<point>109.5,16.2,38.5</point>
		</region>
	</spawn>
	<default yaw="-90">  <!--obs spawn (for me so i dont forget)-->
		<region>
			<point>47,53.2,14</point>
		</region>
	</default>
</spawns>
<!--kits-->
<kits>
	<kit id="resistance-spawn-kit"> <!--funny how i named it that but its just spawnkit-->
		<effect duration="4s" amplifier="5">instant health</effect> <!--anti spawncamping-->
		<item slot="0" material="iron sword" unbreakable="true"/>
		<item slot="1" material="bow" unbreakable="true">
			<enchantment>power</enchantment>
		</item>
		<item slot="2" material="iron axe" unbreakable="true"/>
		<item slot="3" material="diamond pickaxe" unbreakable="true"/>
		<item slot="4" material="diamond spade" unbreakable="true">
			<enchantment level="2">efficiency</enchantment>
		</item>
		<item slot="6" material="stained clay" team-color="true" amount="32"/>
		<item slot="7" material="water bucket"/>
		<item slot="8" material="golden apple"/>
		<item slot="28" material="arrow" amount="24"/>
		<item slot="33" material="log 2" damage="1" amount="8"/>
		<!--armor-->
		<helmet material="leather helmet" team-color="true" unbreakable="true"/>
		<chestplate material="leather chestplate" team-color="true" unbreakable="true"/>
		<leggings material="leather leggings" team-color="true" unbreakable="true">
			<enchantment level="2">projectile protection</enchantment> <!--why was this blast prot lol-->
		</leggings>
		<boots material="iron boots" unbreakable="true">
			<enchantment level="2">protection</enchantment>
		</boots>
	</kit>
</kits>
<!--filters-->
<filters>
	<all id="only-iron-renew">
		<material id="only-iron">iron block</material>
		<cause>world</cause>
	</all>
	<all id="only-wool-room"> <!--lol-->
		<blocks region="wool-room-blocks">
			<not>
				<material>chest</material>
			</not>
		</blocks>
		<blocks region="wool-room-blocks">
			<not>
				<material>mob spawner</material>
			</not>
		</blocks>
	</all>
	<deny id="deny-web">
		<all>
			<material>web</material>
		</all>
	</deny>
</filters>
<!--regions-->
<regions>
	<union id="game-zone"> <!-- i dont know how to use mirror-->
		<union id="first-half">
			<rectangle min="76.5,-14.5" max="-6.5,-2.5"/>
			<rectangle min="-23.5,-0.5" max="-7.5,-16.5"/>
			<rectangle min="17.5,-63.5" max="29.5,31.5"/>
		</union>
		<union id="second-half">
			<rectangle min="17.5,44.5" max="100.5,32.5"/>
			<rectangle min="117.5,30.5" max="101.5,46.5"/>
			<rectangle min="76.5,93.5" max="64.5,-14.5"/>
		</union>
	</union>
	<complement id="void-zone">
		<everywhere/>
		<region id="game-zone"/>
	</complement>
	<apply block-place="deny(void)" block-break="deny-web" region="void-zone" message="You may not edit the void!"/>
	<!--spawnareas-->
	<union id="spawn-zones">
		<rectangle id="red-spawn-zone" min="-7.5,-16.5" max="-23.5,-0.5"/>
		<rectangle id="blue-spawn-zone" min="101.5,46.5" max="117.5,30.5"/>
	</union>
	<!--uuh,woolzones-->
	<union id="wool-areas">
		<rectangle id="blue-wool" min="17.5,-63.5" max="29.5,-51.5"/>
		<rectangle id="red-wool" min="76.5,93.5" max="64.5,81.5"/>
	</union>
	<union id="wool-room-blocks">
		<cuboid id="red-wool-room-blocks" min="76.5,28,81.5" max="64.5,12,93.5"/>
		<cuboid id="blue-wool-room-blocks" min="17.5,28,-51.5" max="29.5,12,-63.5"/>
	</union>
	<!--apply-->
	<apply enter="deny(team-blue)" region="red-spawn-zone" message="You may not enter your enemies' spawn!"/>
	<apply enter="deny(team-red)" region="blue-spawn-zone" message="You may not enter your enemies' spawn!"/>
	<apply block-place="only-iron-renew" block-break="only-iron" region="spawn-zones" message="You may not modify spawn areas!"/>
	<apply enter="team-blue" region="blue-wool" message="You may not enter your team's wool room!"/>
	<apply enter="team-red" region="red-wool" message="You may not enter your team's wool room!"/>
	<apply block="deny(team-red)" region="blue-wool" message="You may not modify the wool room!"/>
	<apply block="deny(team-blue)" region="red-wool" message="You may not modify the wool room!"/>
	<apply block="only-wool-room" region="wool-room-blocks" message="You may not break important blocks!"/>
	<!--point and block-->
	<point id="red-wool-spawner">70.5,12,87.5</point>
	<point id="blue-wool-spawner">23.5,12,-57.5</point>
	<block id="red-wool-placement">-13,17,-9</block>
	<block id="blue-wool-placement">106,17,38</block>
</regions>
<!--spawners-->
<spawners>
	<spawner spawn-region="red-wool-spawner" player-region="red-wool-room-blocks" max-entities="8" delay="4">
		<item material="wool" amount="1" damage="14"/>
	</spawner>
	<spawner spawn-region="blue-wool-spawner" player-region="blue-wool-room-blocks" max-entities="8" delay="4">
		<item material="wool" amount="1" damage="11"/>
	</spawner>
</spawners>
<!--randomstuff ig-->
<renewables>
	<renewable region="spawn-zones" renew-filter="only-iron"/>
</renewables>
<kill-rewards>
	<kill-reward>
		<item material="stained clay" team-color="true" amount="16"/>
		<item material="wood" damage="5" amount="16"/>
		<item material="golden apple"/>
		<item material="arrow" amount="8"/>
	</kill-reward>
</kill-rewards>
<itemkeep>
    <item>iron sword</item>
    <item>bow</item>
    <item>diamond pickaxe</item>
    <item>iron axe</item>
    <item>diamond spade</item>
    <item>arrow</item>
    <item>wood</item>
    <item>stained clay</item>
    <item>golden apple</item>
    <item>bucket</item>
</itemkeep>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
</itemremove>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron axe</tool>
    <tool>diamond spade</tool>
</toolrepair>
<hunger>
	<depletion>off</depletion>
</hunger>
</map>