<map proto="1.5.0">
<name>Temple Trouble</name>
<version>1.0.0</version>
<created>2025-10-23</created>
<objective>Take the enemy's wool located to either side of the enemy's base and place it in your victory monument.</objective>
<gamemode>ctw</gamemode>
<include id="gapple-kill-reward"/>
<phase>staging</phase>
<authors>
    <author uuid="233d04a2-6bd3-440e-979d-969f415e9ad1" contribution="Map Author"/> <!-- Salgadoh -->
</authors>
<contributors>
    <contributor uuid="9c14b7e9-8488-427a-bc81-7193becde2d3" contribution="Map XML"/> <!-- TinyPigMX -->
    <contributor uuid="838f13f5-caaf-4eaa-9be3-e9f4f1c6be22" contribution="Corrections and BIG BANANA"/> <!-- diKali -->
</contributors>
<teams>
    <team id="red-team" color="dark red" max="12">Monitos Rojos</team>
    <team id="blue-team" color="blue" max="12">Monitos Azules</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" material="stone sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true"/>
        <item slot="28" material="arrow" amount="16"/>
        <item slot="30" material="iron spade" unbreakable="true"/>
        <item slot="2" material="iron axe" unbreakable="true"/>
        <item slot="3" material="iron pickaxe" unbreakable="true"/>
        <item slot="4" material="bucket"/>
        <item slot="6" material="wood" damage="3" amount="32"/>
        <item slot="7" material="stained glass" team-color="true" amount="64"/>
        <item slot="8" material="golden apple"/>
        <effect duration="3s" amplifier="5">instant health</effect>
        <helmet material="leather helmet" team-color="true" unbreakable="true"/>
        <chestplate material="leather chestplate" team-color="true" unbreakable="true"/>
        <leggings material="leather leggings" team-color="true" unbreakable="true"/>
        <boots material="leather boots" team-color="true" unbreakable="true"/>
    </kit>
</kits>
<spawns player-kit="spawn-kit">
    <spawn team="red-team">
        <region>
            <point>0.5,16.5,-82.5</point>
        </region>
    </spawn>
    <spawn team="blue-team" yaw="180">
        <region>
            <point>0.5,16.5,83.5</point>
        </region>
    </spawn>
    <default yaw="-90">
        <region>
            <point>-44.5,40.5,0.5</point>
        </region>
    </default>
</spawns>
<wools>
    <wool team="red-team" color="red" monument="red-team-red-wool" location="52,62,70"/>
    <wool team="red-team" color="pink" monument="red-team-pink-wool" location="-52,62,70"/>
    <wool team="blue-team" color="blue" monument="blue-team-blue-wool" location="-52,62,70"/>
    <wool team="blue-team" color="cyan" monument="blue-team-cyan-wool" location="52,62,70"/>
</wools>
<filters>
    <all id="gold-blocks"> <!-- only world placed blocks -->
        <material>gold block</material>
        <cause>world</cause>
    </all>
    <all id="only-wool-room">
        <blocks region="wool-room-blocks">
            <any>
                <material>air</material>
                <material>stained glass pane</material>
            </any>
        </blocks>
    </all>
</filters>
<regions>
    <cuboid id="sowaterdoesntflowdownlol" min="70,1,-106" max="-70,2,106"/>
    <apply block="never" region="sowaterdoesntflowdownlol" message="You may not edit the void area!"/>
    <block id="red-team-red-wool">-4,17,-83</block>
    <block id="red-team-pink-wool">4,17,-83</block>
    <block id="blue-team-blue-wool">4,17,83</block>
    <block id="blue-team-cyan-wool">-4,17,83</block>
    <union id="spawn-areas">
        <rectangle id="red-spawn" min="-8.5,-91.5" max="9.5,-71.5"/>
        <rectangle id="blue-spawn" min="9.5,92.5" max="-8.5,72.5"/>
    </union>
    <union id="wool-room-blocks">
        <cuboid min="57.5,4,76.5" max="48.5,100,66.5"/> <!-- red wool -->
        <cuboid min="-56.5,4,66.5" max="-47.5,100,76.5"/> <!-- pink wool -->
        <cuboid min="-56.5,4,-75.5" max="-47.5,100,-65.5"/> <!-- blue wool -->
        <cuboid min="57.5,4,-65.5" max="48.5,100,-75.5"/> <!-- cyan wool -->
    </union>
    <union id="wool-rooms">
        <union id="blue-team-wools">
            <rectangle id="cyan-wool" min="59.5,-76.5" max="43.5,-62.5"/>
            <rectangle id="blue-wool" min="-58.5,-62.5" max="-42.5,-76.5"/>
        </union>
        <union id="red-team-wools">
            <rectangle id="pink-wool" min="-58.5,63.5" max="-42.5,77.5"/>
            <rectangle id="red-wool" min="59.5,63.5" max="43.5,77.5"/>
        </union>
    </union>
    <apply enter="deny(red-team)" region="blue-team-wools" message="You may not enter your own wool room!"/>
    <apply enter="deny(blue-team)" region="red-team-wools" message="You may not enter your own wool room!"/>
    <apply block="deny(red-team)" region="blue-team-wools" message="You may not modify your own wool rooms!"/>
    <apply block="deny(blue-team)" region="red-team-wools" message="You may not modify your own wool rooms!"/>
    <apply block="never" region="spawn-areas" message="You may not edit the spawn areas!"/>
    <apply enter="deny(red-team)" region="blue-spawn" message="You may not enter the enemy spawn!"/>
    <apply enter="deny(blue-team)" region="red-spawn" message="You may noy enter the enemy spawn!"/>
    <apply block="only-wool-room" region="wool-room-blocks" message="You may not modify the wool room!"/>
    <apply block="deny(void)" message="You may not edit the void area!">
        <region>
            <rectangle id="main-area" min="63.5,-96.5" max="-62.5,97.5"/>
        </region>
    </apply>
 </regions>
<renewables>
    <renewable renew-filter="gold-blocks" avoid-players="1"/>
</renewables>
<kill-rewards>
    <kill-reward>
        <item material="stained glass" team-color="true" amount="16"/>
        <item material="wood" damage="3" amount="24"/>
        <item material="arrow" amount="8"/>
    </kill-reward>
</kill-rewards>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>sapling</item>
    <item>apple</item>
</itemremove>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>27</maxbuildheight>
</map>
