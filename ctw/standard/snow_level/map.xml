<map proto="1.4.2">
<name>Snow Level</name>
<version>1.0.3</version>
<objective>Capture the enemy team's wools.</objective>
<created>2022-01-07</created>
<authors>
    <author uuid="2d372806-0e62-4e44-87f7-2394540f5203"/> <!-- Tkes -->
</authors>
<contributors>
    <contributor uuid="fe3608b7-d105-4029-8800-34b3147065b6" contribution="Map Building"/> <!--rockymine-->
    <contributor uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06" contribution="Feedback"/> <!--Strangey-->
    <contributor uuid="ec5ec930-5cf3-4f8a-ad9f-09056aeed71b" contribution="Feedback"/> <!--Tundren-->
    <contributor uuid="97d1cc45-0f69-482b-9974-09351aef9dfa" contribution="XML"/> <!-- lunaceee -->
</contributors>
<broadcasts>
    <tip after="1s" every="180s">Use the water on the void as a guide to know where to build!</tip>
</broadcasts>
<teams>
    <team id="blue" color="blue" max="8">Blue</team>
    <team id="green" color="green" max="8">Green</team>
    <team id="red" color="red" max="8">Red</team>
    <team id="yellow" color="yellow" max="8">Yellow</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow">
            <enchantment>infinity</enchantment>
        </item>
        <item slot="28" material="arrow"/>
        <item slot="2" unbreakable="true" material="iron pickaxe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="3" unbreakable="true" material="stone axe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="8" material="golden apple"/>
        <item slot="30" unbreakable="true" material="wood spade"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="iron leggings"/>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="3" amplifier="255">damage resistance</effect>
    </kit>
    <kit id="blue-kit" parents="spawn-kit">
        <item slot="4" amount="32" material="stained clay" damage="11"/>
        <item slot="5" amount="16" material="stained glass" damage="11"/>
    </kit>
    <kit id="green-kit" parents="spawn-kit">
        <item slot="4" amount="32" material="stained clay" damage="5"/>
        <item slot="5" amount="16" material="stained glass" damage="5"/>
    </kit>
    <kit id="red-kit" parents="spawn-kit">
        <item slot="4" amount="32" material="stained clay" damage="14"/>
        <item slot="5" amount="16" material="stained glass" damage="14"/>
    </kit>
    <kit id="yellow-kit" parents="spawn-kit">
        <item slot="4" amount="32" material="stained clay" damage="4"/>
        <item slot="5" amount="16" material="stained glass" damage="4"/>
    </kit>
</kits>
<spawns>
    <default>
        <region>
            <block>0,46,0</block>
        </region>
    </default>
    <spawn team="blue" kit="blue-kit">
        <region yaw="0">
            <point>34.5,11,-51</point>
        </region>
    </spawn>
    <spawn team="green" kit="green-kit">
        <region yaw="180">
            <point>-34.5,11,51</point>
        </region>
    </spawn>
    <spawn team="red" kit="red-kit">
        <region yaw="-90">
            <point>-50,11,-34.5</point>
        </region>
    </spawn>
    <spawn team="yellow" kit="yellow-kit">
        <region yaw="90">
            <point>51,11,34.5</point>
        </region>
    </spawn>
</spawns>
<filters>
    <not id="not-red">
        <team id="only-red">red</team>
    </not>
    <not id="not-blue">
        <team id="only-blue">blue</team>
    </not>
    <not id="not-yellow">
        <team id="only-yellow">yellow</team>
    </not>
    <not id="not-green">
        <team id="only-green">green</team>
    </not>
    <deny id="deny-void">
        <void/>
    </deny>
    <deny id="deny-safeties">
        <material>wool</material>
    </deny>
    <deny id="no-break">
        <any>
            <material>mob spawner</material>
            <material>barrier</material>
        </any>
    </deny>
    <material id="only-web">web</material>
    <material id="only-glass">glass</material>
    <material id="only-clay">hard clay</material>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="blue-spawn" max="29.5,-44.5" min="39.5,-53.5"/>
        <rectangle id="green-spawn" max="-29.5,44.5" min="-39.5,53.5"/>
        <rectangle id="red-spawn" max="-44.5,-29.5" min="-53.5,-39.5"/>
        <rectangle id="yellow-spawn" max="44.5,29.5" min="53.5,39.5"/>
    </union>
    <union id="wool-rooms">
        <rectangle id="blue-wr" min="56.5,-28.5" max="66.5,-18.5"/>
        <rectangle id="green-wr" min="-56.5,28.5" max="-66.5,18.5"/>
        <rectangle id="red-wr" min="-18.5,-56.5" max="-28.5,-66.5"/>
        <rectangle id="yellow-wr" min="18.5,56.5" max="28.5,66.5"/>
    </union>
    <union id="spawners">
        <point id="blue-wool">62,12,-20.5</point>
        <point id="green-wool">-62,12,20.5</point>
        <point id="red-wool">-20.5,12,-62</point>
        <point id="yellow-wool">20.5,12,62</point>
        <point id="middle">0,4.5,0</point>
    </union>
    <union id="gapple">
        <cuboid id="gapple-spawn" min="66,0,66" max="-66,30,-66"/>
        <cylinder id="gold-protection" base="0,3,0" radius="1" height="4"/>
    </union>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy team spawns!"/>
    <apply enter="only-green" region="green-spawn" message="You may not enter the enemy team spawns!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy team spawns!"/>
    <apply enter="only-yellow" region="yellow-spawn" message="You may not enter the enemy team spawns!"/>
    <apply enter="not-blue" region="blue-wr" message="You may not enter your team's own wool room!"/>
    <apply enter="not-green" region="green-wr" message="You may not enter your team's own wool room!"/>
    <apply enter="not-red" region="red-wr" message="You may not enter your team's own wool room!"/>
    <apply enter="not-yellow" region="yellow-wr" message="You may not enter your team's own wool room!"/>
    <apply block="never" region="spawns" message="You may not modify the spawns!"/>
    <apply block-break="only-web" block-place="never" region="wool-rooms" message="You may not modify the wool rooms!"/>
    <apply block="never" region="gold-protection" message="You may not edit the spawners!"/>
    <apply block-place="deny-safeties" message="You may not place safeties!"/>
    <apply block-place="deny-void" message="You may not build in the void areas!"/>
</regions>
<spawners>
    <spawner player-region="blue-wr" spawn-region="blue-wool" delay="7s">
        <item damage="11" material="wool"/>
    </spawner>
    <spawner player-region="green-wr" spawn-region="green-wool" delay="7s">
        <item damage="13" material="wool"/>
    </spawner>
    <spawner player-region="red-wr" spawn-region="red-wool" delay="7s">
        <item damage="14" material="wool"/>
    </spawner>
    <spawner player-region="yellow-wr" spawn-region="yellow-wool" delay="7s">
        <item damage="4" material="wool"/>
    </spawner>
    <spawner player-region="gapple-spawn" spawn-region="middle" min-delay="15s" max-delay="20s">
        <item material="golden apple"/>
    </spawner>
</spawners>
<!-- BLUE TEAM -->
<wools craftable="false" team="blue">
    <wool color="green" location="-62,12,20.5">
        <monument>
            <block>35,8,-46</block>
        </monument>
    </wool>
    <wool color="red" location="-20.5,12,-62">
        <monument>
            <block>36,8,-46</block>
        </monument>
    </wool>
    <wool color="yellow" location="20.5,12,62">
        <monument>
            <block>37,8,-46</block>
        </monument>
    </wool>
</wools>
<!-- GREEN TEAM -->
<wools craftable="false" team="green">
    <wool color="blue" location="62,12,-20.5">
        <monument>
            <block>-38,8,45</block>
        </monument>
    </wool>
    <wool color="red" location="-20.5,12,-62">
        <monument>
            <block>-37,8,45</block>
        </monument>
    </wool>
    <wool color="yellow" location="20.5,12,62">
        <monument>
            <block>-36,8,45</block>
        </monument>
    </wool>
</wools>
<!-- RED TEAM -->
<wools craftable="false" team="red">
    <wool color="blue" location="62,12,-20.5">
        <monument>
            <block>-46,8,-38</block>
        </monument>
    </wool>
    <wool color="green" location="-62,12,20.5">
        <monument>
            <block>-46,8,-36</block>
        </monument>
    </wool>
    <wool color="yellow" location="20.5,12,62">
        <monument>
            <block>-46,8,-37</block>
        </monument>
    </wool>
</wools>
<!-- YELLOW TEAM -->
<wools craftable="false" team="yellow">
    <wool color="blue" location="62,12,-20.5">
        <monument>
            <block>45,8,37</block>
        </monument>
    </wool>
    <wool color="green" location="-62,12,20.5">
        <monument>
            <block>45,8,35</block>
        </monument>
    </wool>
    <wool color="red" location="-20.5,12,-62">
        <monument>
            <block>45,8,36</block>
        </monument>
    </wool>
</wools>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>stone axe</tool>
    <tool>wood spade</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>iron leggings</item>
    <item>leather boots</item>
    <item>yellow flower</item>
    <item>red rose</item>
    <item>seeds</item>
    <item>wooden door</item>
    <item>hard clay</item>
    <item>glass</item>
    <item>string</item>
    <item>sapling</item>
</itemremove>
<block-drops>
    <rule wrong-tool="true">
        <filter>
            <material>snow block</material>
        </filter>
        <drops>
            <item material="snow block"/>
        </drops>
    </rule>
    <rule>
        <filter>
            <any>
                <material>stained clay</material>
                <material>stained glass</material>
            </any>
        </filter>
        <drops>
            <item chance="0" material="glass"/>
        </drops>
    </rule>
</block-drops>
<itemkeep>
    <item>golden apple</item>
    <item>stained clay</item>
    <item>stained glass</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
    </kill-reward>
    <kill-reward filter="only-blue">
        <item material="stained clay" damage="11" amount="8"/>
        <item material="stained glass" damage="11" amount="4"/>
    </kill-reward>
    <kill-reward filter="only-green">
        <item material="stained clay" damage="5" amount="8"/>
        <item material="stained glass" damage="5" amount="4"/>
    </kill-reward>
    <kill-reward filter="only-red">
        <item material="stained clay" damage="14" amount="8"/>
        <item material="stained glass" damage="14" amount="4"/>
    </kill-reward>
    <kill-reward filter="only-yellow">
        <item material="stained clay" damage="4" amount="8"/>
        <item material="stained glass" damage="4" amount="4"/>
    </kill-reward>
</kill-rewards>
<maxbuildheight>21</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
<respawn delay="3s" auto="true"/>
<crafting>
    <disable>boat</disable>
    <disable>stone spade</disable>
</crafting>
<world>
    <timeset>6000</timeset>
</world>
</map>
