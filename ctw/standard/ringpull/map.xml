<map proto="1.4.2">
<name>Ringpull</name>
<version>1.1</version>
<objective>Capture the enemy team's wool!</objective>
<created>2022-03-08</created>
<gamemode>ctw</gamemode>
<authors>
    <author uuid="6863869b-4b8c-4445-b778-a8e016775ae4"/> <!-- Cazadorian -->
</authors>
<teams>
    <team id="blue" color="blue" max="8">Blue</team>
    <team id="red" color="dark red" max="8">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow" />
        <item slot="2" unbreakable="true" material="iron pickaxe"/>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="4" amount="64" material="wood"/>
        <item slot="6" material="bucket"/>
        <item slot="8" material="golden apple"/>
        <item slot="28" material="arrow" amount="48"/>
        <item slot="31" unbreakable="true" material="iron spade"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings material="leather leggings" team-color="true" unbreakable="true"/>
        <boots material="iron boots" unbreakable="true"/>
        <effect duration="4" amplifier="255">damage resistance</effect>
    </kit>
    <kit id="blue-kit" parent="spawn-kit">
        <item slot="5" material="stained glass" damage="11" amount="64"/>
    </kit>
    <kit id="red-kit" parent="spawn-kit">
        <item slot="5" material="stained glass" damage="14" amount="64"/>
    </kit>
</kits>
<spawns>
    <default yaw="0">
        <regions>
            <point>27.5,53,1.5</point>
        </regions>
    </default>
    <spawn team="red" kit="red-kit" yaw="90">
        <regions>
            <point>75.5,11,1.5</point>
        </regions>
    </spawn>
    <spawn team="blue" kit="blue-kit" yaw="-90">
        <regions>
            <point>-20.5,11,1.5</point>
        </regions>
    </spawn>
</spawns>
<wools craftable="false">
    <wool team="blue" color="orange" location="104.5,14,1.5">
        <monument>
            <block>-24,12,1</block>
        </monument>
    </wool>
    <wool team="red" color="cyan" location="-49.5,14,1.5">
        <monument>
            <block>78,12,1</block>
        </monument>
   </wool>
</wools>
<filters>
    <not id="blue-in-wr">
        <any>
            <team id="only-red">red</team>
            <filter id="wr-filter"/>
        </any>
    </not>
    <not id="red-in-wr">
        <any>
            <team id="only-blue">blue</team>
            <filter id="wr-filter"/>
        </any>
    </not>
    <any id="wr-filter">
        <material>chest</material>
        <material>smooth brick</material>
        <material>smooth stairs</material>
        <material>step</material>
        <material>double step</material>
        <material>stained clay</material>
        <material>stained glass:1</material>
        <material>stained glass:9</material>
        <material>stained glass pane</material>
        <material>redstone wire</material>
        <material>redstone torch on</material>
        <material>wool</material>
        <material>cobble wall</material>
        <material>beacon</material>
        <material>carpet</material>
        <material>piston base</material>
    </any>
    <not id="deny-void">
       <void/>
    </not>
</filters>
<regions>
    <union id="spawn-protection">
        <rectangle id="blue-prot" min="-26,-5" max="-12,8"/>
        <rectangle id="red-prot" min="67,-5" max="81,8"/>
    </union>
    <union id="wool-rooms">
        <rectangle id="cyan-wool-room" min="-44,8" max="-55,-5"/> <!-- blue defends -->
        <rectangle id="orange-wool-room" min="99,8" max="110,-5"/> <!-- red defends -->
    </union>
    <negative id="void-area">
        <region id="spawn-protection"/>
        <region id="wool-rooms"/>
        <rectangle id="middle" min="45,-10" max="10,13"/>
    </negative>
    <apply enter="only-blue" region="blue-prot" message="You may not enter the opponent's spawn!"/>
    <apply enter="only-red" region="red-prot" message="You may not enter the opponent's spawn!"/>
    <apply enter="only-blue" region="orange-wool-room" message="You may not enter your own wool room!"/>
    <apply enter="only-red" region="cyan-wool-room" message="You may not enter your own wool room!"/>
    <apply block="blue-in-wr" use="only-blue" region="orange-wool-room" message="You may not break the wool rooms!"/>
    <apply block="red-in-wr" use="only-red" region="cyan-wool-room" message="You may not break the wool rooms!"/>
    <apply block-place="deny-void" region="void-area" message="You may not build in the void area!"/>
    <apply block="never" region="spawn-protection" message="You may not modify the spawns!"/>
</regions>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>red rose</item>
    <item>string</item>
    <item>redstone</item>
    <item>redstone torch off</item>
    <item>flint</item>
</itemremove>
<itemkeep>
    <item>arrow</item>
    <item>wood</item>
    <item>stained glass</item>
    <item>golden apple</item>
    <item>water bucket</item>
    <item>bucket</item>
</itemkeep>
<block-drops>
    <rule>
        <filter>
            <material>wood</material>
        </filter>
        <drops>
            <item chance="0" material="wood"/>
        </drops>
    </rule>
</block-drops>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>25</maxbuildheight>
<kill-rewards>
    <kill-reward>
        <item material="wood" amount="16"/>
        <item material="arrow" amount="16"/>
        <item material="golden apple"/>
    </kill-reward>
</kill-rewards>
</map>