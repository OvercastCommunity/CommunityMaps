<map proto="1.4.2">
<name>Edo</name>
<version>1.0.3</version>
<include id="gapple-kill-reward"/>
<objective>Capture the enemy's two wools!</objective>
<created>2022-01-08</created>
<authors>
    <author uuid="b8add1ba-8e13-4673-bc73-4e3ed524d40e"/> <!-- Blazy -->
</authors>
<teams>
    <team id="blue" color="blue" max="16">Blue</team>
    <team id="red" color="dark red" max="16">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow">
            <enchantment>infinity</enchantment>
        </item>
        <item slot="28" material="arrow"/>
        <item slot="2" unbreakable="true" material="iron pickaxe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="3" unbreakable="true" material="iron axe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="30" unbreakable="true" material="iron spade"/>
        <item slot="4" amount="64" damage="1" material="wood"/>
        <item slot="5" amount="48" material="glass"/>
        <item slot="8" material="golden apple"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="iron leggings"/>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="6s" amplifier="255">resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region>
            <cuboid min="-371,47,72" max="-372,47,71"/>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <regions>
            <cuboid min="-448.5,11,110.5" max="-448.5,11,112.5" yaw="-90"/>
        </regions>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <regions>
            <cuboid min="-294.5,11,112.5" max="-294.5,11,110.5" yaw="90"/>
        </regions>
    </spawn>
</spawns>
<wools>
    <wool team="blue" color="green" craftable="false" location="-293,12,80">
        <monument>
            <block>-443.5,12,107.5</block>
        </monument>
    </wool>
    <wool team="blue" color="lime" craftable="false" location="-292,8,142">
        <monument>
            <block>-443.5,12,115.5</block>
        </monument>
    </wool>
    <wool team="red" color="pink" craftable="false" location="-452,8,80">
        <monument>
            <block>-299.5,12,107.5</block>
        </monument>
    </wool>
    <wool team="red" color="purple" craftable="false" location="-451,12,142">
        <monument>
            <block>-299.5,12,115.5</block>
        </monument>
    </wool>
</wools>
<filters>
    <deny id="no-void">
        <void/>
    </deny>
    <deny id="deny-blue-wool-room">
        <any>
            <team id="only-blue">blue</team>
            <material>chest</material>
        </any>
    </deny>
    <deny id="deny-red-wool-room">
        <any>
            <team id="only-red">red</team>
            <material>chest</material>
        </any>
    </deny>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="blue-spawn" min="-437,101" max="-458,122"/>
        <rectangle id="red-spawn" min="-306,122" max="-282,101"/>
    </union>
    <union id="wool-rooms">
        <union id="blue-wool-rooms"> <!-- Blue defends these -->
            <rectangle id="pink-wool-room" min="-439,73" max="-454,84"/>
            <rectangle id="purple-wool-room" min="-439,139" max="-454,150"/>
        </union>
        <union id="red-wool-rooms"> <!-- Red defends these -->
            <rectangle id="green-wool-room" min="-304,84" max="-289,73"/>
            <rectangle id="lime-wool-room" min="-304,150" max="-289,139"/>
        </union>
    </union>
    <apply block="never" region="spawns" message="You may not edit the spawn area!"/>
    <apply block="deny-blue-wool-room" region="blue-wool-rooms"/>
    <apply block="deny-red-wool-room" region="red-wool-rooms"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy team's spawn area!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy team's spawn area!"/>
    <apply enter="only-blue" region="red-wool-rooms" message="You may not enter your own wool room!"/>
    <apply enter="only-red" region="blue-wool-rooms" message="You may not enter your own wool room!"/>
    <apply block-place="no-void" message="You may not edit the void here!"/>
</regions>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>iron leggings</item>
    <item>leather boots</item>
    <item>string</item>
    <item>redstone</item>
    <item>seeds</item>
    <item>sapling</item>
    <item>stick</item>
</itemremove>
<block-drops>
    <rule>
        <filter>
            <any>
                <material>wood</material>
                <material>glass</material>
            </any>
        </filter>
        <drops>
            <item chance="0" material="glass"/>
        </drops>
    </rule>
</block-drops>
<itemkeep>
    <item>golden apple</item>
    <item>wood</item>
    <item>glass</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item amount="16" damage="1" material="wood"/>
        <item amount="12" material="glass"/>
    </kill-reward>
</kill-rewards>
<maxbuildheight>25</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>