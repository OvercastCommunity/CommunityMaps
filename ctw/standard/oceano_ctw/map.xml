<?xml version="1.0"?>
<map proto="1.4.0">
<name>Oceano CTW</name>
<version>1.0.0</version>
<objective>Capture the wool!</objective>
<gamemode>ctw</gamemode>
<created>2021-11-02</created>
<authors>
    <author uuid="cc01304f-907b-4c80-b9c2-8f61872969d1"/> <!-- Just_ -->
</authors>
<contributors>
    <contributor uuid="e2d2c2c6-cea9-4510-9ab2-a091b5605b30" contribution="xml"/> <!-- Ruediger_LP -->
</contributors>
<teams>
    <team id="cyan-team" color="dark_aqua" max="24" max-overfill="28">Cyan</team>
    <team id="purple-team" color="dark_purple" max="24" max-overfill="28">Purple</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" material="iron sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true" enchantment="arrow infinite"/>
        <item slot="2" material="iron pickaxe" unbreakable="true" enchantment="dig speed"/>
        <item slot="3" material="iron axe" unbreakable="true" enchantment="dig speed"/>
        <item slot="4" material="wood" amount="64" damage="2"/>
        <item slot="5" material="wood" amount="64" damage="2"/>
        <item slot="7" material="vine" amount="24"/>
        <item slot="8" material="golden apple"/>
        <item slot="28" material="arrow"/>
        <item slot="31" material="wood" amount="64" damage="2"/>
        <item slot="32" material="wood" amount="64" damage="2"/>
        <helmet material="leather helmet" team-color="true" unbreakable="true"/>
        <chestplate material="leather chestplate" team-color="true" unbreakable="true"/>
        <effect duration="oo" amplifier="100">damage resistance</effect>
    </kit>
    <kit force="true" id="reset-resitance-kit">
        <effect duration="0" amplifier="0">damage resistance</effect>
    </kit>
    <kit id="cyan-kit" parent="spawn-kit">
        <item slot="6" material="stained glass" damage="9" amount="64"/>
    </kit>
    <kit id="purple-kit" parent="spawn-kit">
        <item slot="6" material="stained glass" damage="10" amount="64"/>
    </kit>
</kits>
<spawns>
    <spawn team="cyan-team" kit="cyan-kit" yaw="0" region="cyan-spawn-point"/>
    <spawn team="purple-team" kit="purple-kit" yaw="180" region="purple-spawn-point"/>
    <default yaw="0" region="obs-spawn-point"/>
</spawns>
<wools craftable="false">
    <wool team="cyan-team" color="light blue" monument="cyan-team-light-blue-wool" location="148.5,18,20.5"/>
    <wool team="purple-team" color="magenta" monument="purple-team-magenta-wool" location="-147.5,18,-18.5"/>
</wools>
<filters>
    <team id="only-cyan">cyan-team</team>
    <team id="only-purple">purple-team</team>
    <not id="not-void-filter">
        <void/>
    </not>
    <all id="purples-woolrooms-filter">
        <team>cyan-team</team>
        <filter id="woolrooms-filter"/>
    </all>
    <all id="cyans-woolrooms-filter">
        <team>purple-team</team>
        <filter id="woolrooms-filter"/>
    </all>
    <any id="woolrooms-filter">
        <material>web</material>
        <material>wood:2</material>
        <material>glass</material>
        <material>stained clay:3</material>
        <material>stained clay:2</material>
        <material>stained glass:9</material>
        <material>stained glass:10</material>
        <material>workbench</material>
    </any>
    <all id="only-iron-cause-world">
        <material id="only-iron">iron block</material>
        <cause>world</cause>
    </all>
    <material id="only-air">air</material>
</filters>
<regions>
    <cuboid id="cyan-spawn-point" base="0,20,0" min="-78.5,16.2,-76.5" max="-78.5,16.2,-72.5"/>
    <cuboid id="purple-spawn-point" base="0,20,0" min="79.5,16.2,74.5" max="79.5,16.2,78.5"/>
    <cylinder id="obs-spawn-point" base="0.5,57.2,0.5" radius="3" height="0"/>
    <block id="cyan-team-light-blue-wool">-79,17,-82</block>
    <block id="purple-team-magenta-wool">79,17,83</block>
    <negative id="not-spawns">
        <union id="spawns">
            <rectangle id="cyan-spawn" min="-86,-82" max="-71,-55"/>
            <rectangle id="purple-spawn" min="72,57" max="87,84"/>
        </union>
    </negative>
    <union id="cyans-woolrooms"> <!-- cyan defends / purple attacks -->
        <rectangle min="-155,-26" max="-140,-11"/> <!-- magenta woolroom -->
    </union>
    <union id="purples-woolrooms"> <!-- purple defends / cyan attacks -->
        <rectangle min="141,13" max="156,28"/> <!-- light cyan woolroom -->
    </union>
    <negative id="not-build-area">
        <union id="build-area">
            <rectangle min="-19,-22" max="20,24"/> <!-- mid -->
            <complement> <!-- cyan side -->
                <rectangle min="-86,-38" max="-40,24"/>
                <rectangle min="-71,-38" max="-40,9"/>
            </complement>
            <complement><!-- purple side -->
                <rectangle min="41,-22" max="87,40"/>
                <rectangle min="41,-7" max="72,40"/>
            </complement>
        </union>
    </negative>
    <!-- applicators -->
    <apply enter="only-cyan" region="cyan-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-purple" region="purple-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-purple" region="cyans-woolrooms" message="You may not enter your own wool room!"/>
    <apply enter="only-cyan" region="purples-woolrooms" message="You may not enter your own wool room!"/>
    <apply block-place="only-iron-cause-world" block-break="only-iron" region="spawns" message="You may not edit spawn!"/>
    <apply block="cyans-woolrooms-filter" region="cyans-woolrooms" message="You may not edit the wool room!"/>
    <apply block="purples-woolrooms-filter" region="purples-woolrooms" message="You may not edit the wool room!"/>
    <apply block-place="not-void-filter" region="not-build-area" message="You may not edit the void!"/>
    <apply kit="reset-resitance-kit" region="not-spawns"/>
</regions>
<itemkeep>
    <item>iron sword</item>
    <item>bow</item>
    <item>iron pickaxe</item>
    <item>iron axe</item>
    <item>arrow</item>
    <item>wood</item>
    <item>stained glass</item>
    <item>vine</item>
    <item>golden apple</item>
</itemkeep>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>stone</item>
    <item>prismarine</item>
    <item>stained clay</item>
    <item>step</item>
    <item>quartz stairs</item>
    <item>prismarine crystals</item>
</itemremove>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>arrow</tool>
</toolrepair>
<item-mods>
    <rule>
        <match>
            <material>iron helmet</material>
            <material>iron chestplate</material>
            <material>iron leggings</material>
            <material>iron boots</material>
            <material>iron sword</material>
            <material>iron pickaxe</material>
            <material>iron axe</material>
            <material>iron spade</material>
            <material>shears</material>
            <material>diamond chestplate</material>
        </match>
        <modify unbreakable="true"/>
    </rule>
</item-mods>
<crafting>
    <!-- bulkcrafting -->
    <shaped override="false">
        <result material="iron helmet" amount="9"/>
        <shape>
            <row>III</row>
            <row>I.I</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="iron chestplate" amount="9"/>
        <shape>
            <row>I.I</row>
            <row>III</row>
            <row>III</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="iron leggings" amount="9"/>
        <shape>
            <row>III</row>
            <row>I.I</row>
            <row>I.I</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="bucket" amount="9"/>
        <shape>
            <row>I.I</row>
            <row>.I.</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
</crafting>
<renewables>
    <renewable rate="0.5" sound="false" region="spawns" renew-filter="only-iron" replace-filter="only-air" avoid-players="1"/>
</renewables>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>30</maxbuildheight>
<kill-rewards>
    <kill-reward>
        <item material="golden apple" amount="1"/>
        <item material="wood" amount="16" damage="2"/>
    </kill-reward>
    <kill-reward filter="only-cyan">
        <item material="stained glass" damage="9" amount="16"/>
    </kill-reward>
    <kill-reward filter="only-purple">
        <item material="stained glass" damage="10" amount="16"/>
    </kill-reward>
</kill-rewards>
</map>
