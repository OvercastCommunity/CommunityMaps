<map proto="1.4.2">
<name>Greenhill</name>
<version>1.0.2</version>
<objective>Capture the other team's wools to win!</objective>
<created>2023-01-13</created>
<time result="objectives">30m</time>
<phase>development</phase>
<authors>
    <author uuid="a9f11454-beac-4cc3-a138-1780802c8794"/> <!-- Crazy_ -->
</authors>
<teams>
    <team id="red" color="dark red" max="16">Red</team>
    <team id="blue" color="blue" max="16">Blue</team>
</teams>
<kits>
    <kit id="spawn">
        <clear/>
        <item slot="0" unbreakable="true">iron sword</item>
        <item slot="1" unbreakable="true" enchantment="infinity">bow</item>
        <item slot="28">arrow</item>
        <item slot="2" unbreakable="true">iron pickaxe</item>
        <item slot="3" unbreakable="true">iron axe</item>
        <item slot="30" unbreakable="true">stone spade</item>
        <item slot="4" amount="64" damage="2">wood</item>
        <item slot="5" amount="32">glass</item>
        <item slot="8">golden apple</item>
        <helmet unbreakable="true" team-color="true">leather helmet</helmet>
        <chestplate unbreakable="true" team-color="true">leather chestplate</chestplate>
        <leggings unbreakable="true">chainmail leggings</leggings>
        <boots unbreakable="true">iron boots</boots>
        <effect duration="4s" amplifier="20">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="spawn" region="red-spawn-point" yaw="-180"/>
    <spawn team="blue" kit="spawn" region="blue-spawn-point"/>
    <default region="obs-spawn" yaw="-90"/>
</spawns>
<filters>
    <deny id="not-void">
        <void/>
    </deny>
    <deny id="not-woolroom">
        <any>
            <material>chest</material>
            <material>stained glass pane:15</material>
        </any>
    </deny>
    <any id="only-iron">
    	<material>iron block</material>
    </any>
    <team id="only-red">red</team>
    <team id="only-blue">blue</team>
    <deny id="not-red"><team>red</team></deny>
    <deny id="not-blue"><team>blue</team></deny>
</filters>
<regions>
    <union id="spawn-islands">
        <rectangle id="red-spawn" min="-1,37" max="-11,18"/>
        <rectangle id="blue-spawn" min="-1,-133" max="-11,-152"/>
    </union>
    <union id="wool-rooms">
        <union id="wool-rooms-red-side">
            <cuboid id="green-woolroom" min="-16,0,49" max="-39,64,67"/>
            <cuboid id="yellow-woolroom" min="4,0,49" max="27,64,67"/>
        </union>
        <union id="wool-rooms-blue-side">
            <cuboid id="pink-woolroom" min="27,0,-182" max="4,64,-164"/>
            <cuboid id="skyblue-woolroom" min="-16,0,-164" max="-39,64,-182"/>
        </union>
    </union>
    <union id="wool-spawners">
        <point id="green-wool">-28,19,57</point>
        <point id="yellow-wool">15,19,57</point>
        <point id="pink-wool">15,19,-173</point>
        <point id="skyblue-wool">-28,19,-173</point>
    </union>
    <union id="iron-deposits">
        <cuboid id="iron-red-side" min="-9,9,-20" max="-3,11,-15"/>
        <cuboid id="iron-blue-side" min="-9,9,-100" max="-3,11,-95"/>
    </union>
    <union id="spawn-points">
        <cuboid id="red-spawn-point" min="-5,3,34" max="-7,3,32"/>
        <cuboid id="blue-spawn-point" min="-5,3,-147" max="-7,3,-149"/>
        <cuboid id="obs-spawn" min="13,38,59" max="16,39,56"/>
    </union>

    <apply enter="only-red" region="red-spawn" message="You may not enter the other team's spawn!"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the other team's spawn!"/>

    <apply block="not-woolroom" region="wool-rooms" message="You may not interact with these blocks here!"/> <!-- Denies chests and black glass panes -->
    <apply enter="only-red" block="not-blue" region="wool-rooms-blue-side" message="You may not interact with these wool rooms!"/>
    <apply enter="only-blue" block="not-red" region="wool-rooms-red-side" message="You may not interact with these wool rooms!"/>

    <apply block="never" region="spawn-islands" message="You may not alter the spawn islands!"/>

    <apply block-break="always" block-place="not-void" message="You may not place blocks here!"/>
</regions>
<spawners>
    <spawner spawn-region="yellow-wool" player-region="yellow-woolroom" max-entities="16" delay="2s">
        <item amount="1" material="wool" damage="4"/>
    </spawner> 
    <spawner spawn-region="green-wool" player-region="green-woolroom" max-entities="16" delay="2s">
        <item amount="1" material="wool" damage="5"/>
    </spawner> 
    <spawner spawn-region="skyblue-wool" player-region="skyblue-woolroom" max-entities="16" delay="2s">
        <item amount="1" material="wool" damage="3"/>
    </spawner> 
    <spawner spawn-region="pink-wool" player-region="pink-woolroom" max-entities="16" delay="2s">
        <item amount="1" material="wool" damage="6"/>
    </spawner>
</spawners>
<wools team="red" craftable="false">
    <wool color="pink" location="15,19,-173">
        <monument>
            <block>-6,4,35</block>
        </monument>
    </wool>
    <wool color="light blue" location="-28,19,-173">
        <monument>
            <block>-7,4,35</block>
        </monument>
    </wool>
</wools>
<wools team="blue" craftable="false">
    <wool color="yellow" location="15,19,57">
        <monument>
            <block>-6,4,-151</block>
        </monument>
    </wool>
    <wool color="lime" location="-28,19,57">
        <monument>
            <block>-7,4,-151</block>
        </monument>
    </wool>
</wools>
<renewables>
	<renewable region="iron-deposits" renew-filter="only-iron"/>
</renewables>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>stone spade</tool>
    <tool>iron spade</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
    <item>seeds</item>
    <item>sapling</item>
    <item>string</item>
    <item>wood</item>
    <item>glass</item>
    <item>flint</item>
    <item>red rose</item>
    <item>yellow flower</item>
    <item>double plant</item>
    <item>long grass</item>
    <item>torch</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>bucket</item>
    <item>water bucket</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item>golden apple</item>
        <item amount="16">wood</item>
        <item amount="8">glass</item>
    </kill-reward>
</kill-rewards>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>30</maxbuildheight>
<timelock>on</timelock>
</map>
