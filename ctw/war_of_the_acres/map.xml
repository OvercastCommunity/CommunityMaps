<map proto="1.5.0">
<name>War of the Acres</name>
<version>1.0.0</version>
<phase>staging</phase>
<created>2025-12-14</created>
<objective>Capture the enemy team's wools!</objective>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="1af9f952-e33e-42a5-8e1e-296757747fdc"/> <!-- Alphaboy98yt -->
</authors>
<contributors>
    <contributor uuid="a23a1d91-7e97-40b4-8f5e-1ab82d8f5ade" contribution="Inspiration"/> <!-- chle_ -->
    <contributor uuid="06a2e238-df82-49d2-8cad-9374856bad0c" contribution="Inspiration"/> <!-- LordDracula -->
    <contributor uuid="63ddf58a-ba2c-4d39-8481-6358bb46c63a" contribution="xml"/> <!-- samschaap -->
</contributors>
<broadcasts>
    <tip after="5s" every="3m">You can only go to the other teams bases by using the portals at the sides of your frontline!</tip>
</broadcasts>
<teams>
    <team id="red-team" color="dark red" max="16">Red</team>
    <team id="blue-team" color="blue" max="16">Blue</team>
    <team id="yellow-team" color="yellow" max="16">Yellow</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" enchantment="infinity" material="bow"/>
        <item slot="2" unbreakable="true" enchantment="efficiency" material="iron pickaxe"/>
        <item slot="3" unbreakable="true" enchantment="efficiency" material="iron axe"/>
        <item slot="4" amount="64" damage="2" material="wood"/>
        <item slot="31" amount="64" damage="2" material="wood"/>
        <item slot="5" amount="64" team-color="true" material="stained clay"/>
        <item slot="8" material="golden apple"/>
        <item slot="28" material="arrow"/>
        <helmet team-color="true" unbreakable="true" material="leather helmet"/>
        <chestplate team-color="true" unbreakable="true" material="leather chestplate"/>
        <leggings unbreakable="true" enchantment="protection projectile" material="chainmail leggings"/>
        <boots team-color="true" unbreakable="true" material="leather boots"/>
        <effect duration="3s" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="spawn-kit" yaw="180">
        <region>
            <point>-87.5,10,161.5</point>
        </region>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit" yaw="180">
        <region>
            <point>-87.5,10,-244.5</point>
        </region>
    </spawn>
    <spawn team="yellow-team" kit="spawn-kit" yaw="180">
        <region>
            <point>-87.5,10,-41.5</point>
        </region>
    </spawn>
    <default yaw="-90">
        <regions>
            <cuboid min="-235,38.5,-100" max="-233,38.5,-98"/>
            <cuboid min="-235,38.5,-95" max="-233,38.5,-93"/>
        </regions>
    </default>
</spawns>
<filters>
    <material id="only-web">web</material>
    <all id="only-iron-renew">
        <material id="only-iron">iron block</material>
        <cause>world</cause>
    </all>
</filters>
<regions>
    <negative id="void-area">
        <union id="return-bridges">
            <rectangle id="yellow-return-bridge" min="-140,-109" max="-169,-84"/>
            <translate id="blue-return-bridge" offset="0,0,-203" region="yellow-return-bridge"/>
            <translate id="red-return-bridge" offset="0,0,203" region="yellow-return-bridge"/>
        </union>
    </negative>
    <!-- Yellow -> Blue: Z-203 -->
    <!-- Yellow -> Red: Z+203 -->
    <union id="spawns">
        <rectangle id="yellow-spawn" min="-104,-68" max="-71,-36"/>
        <translate id="blue-spawn" offset="0,0,-203" region="yellow-spawn"/>
        <translate id="red-spawn" offset="0,0,203" region="yellow-spawn"/>
    </union>
    <union id="woolrooms">
        <rectangle id="yellow-woolroom" min="-53,-83" max="-34,-110"/>
        <translate id="blue-woolroom" offset="0,0,-203" region="yellow-woolroom"/>
        <translate id="red-woolroom" offset="0,0,203" region="yellow-woolroom"/>
    </union>
    <union id="iron-barns">
        <rectangle id="yellow-iron-barn" min="-81,-134" max="-94,-154"/>
        <translate id="blue-iron-barn" offset="0,0,-203" region="yellow-iron-barn"/>
        <translate id="red-iron-barn" offset="0,0,203" region="yellow-iron-barn"/>
    </union>
    <union id="portal-buildings">
        <rectangle id="yellow-to-blue-portal-building" min="-128,-77" max="-146,-57"/>
        <rectangle id="yellow-to-red-portal-building" min="-128,-116" max="-146,-136"/>
        <translate id="blue-to-red-portal-building" offset="0,0,-203" region="yellow-to-blue-portal-building"/>
        <translate id="blue-to-yellow-portal-building" offset="0,0,-203" region="yellow-to-red-portal-building"/>
        <translate id="red-to-yellow-portal-building" offset="0,0,203" region="yellow-to-blue-portal-building"/>
        <translate id="red-to-blue-portal-building" offset="0,0,203" region="yellow-to-red-portal-building"/>
    </union>
    <!-- Portals -->
    <cuboid id="yellow-to-blue" min="-139,8,-66" max="-138,11,-64"/>
    <cuboid id="yellow-to-red" min="-139,8,-129" max="-138,12,-127"/>
    <translate id="blue-to-red" offset="0,0,-203" region="yellow-to-blue"/>
    <translate id="blue-to-yellow" offset="0,0,-203" region="yellow-to-red"/>
    <translate id="red-to-yellow" offset="0,0,203" region="yellow-to-blue"/>
    <translate id="red-to-blue" offset="0,0,203" region="yellow-to-red"/>
    <!-- Portal destination protection -->
    <union id="portal-destinations">
        <rectangle id="yellow-from-red" min="-195,-131" max="-187,-123"/>
        <rectangle id="yellow-from-blue" min="-195,-62" max="-186,-70"/>
        <translate id="blue-from-red" offset="0,0,-203" region="yellow-from-blue"/>
        <translate id="blue-from-yellow" offset="0,0,-203" region="yellow-from-red"/>
        <translate id="red-from-yellow" offset="0,0,203" region="yellow-from-blue"/>
        <translate id="red-from-blue" offset="0,0,203" region="yellow-from-red"/>
    </union>
    <!-- Wool spawns -->
    <point id="yellow-wool-spawn">-42,13,-97</point>
    <point id="blue-wool-spawn">-42,13,-300</point>
    <point id="red-wool-spawn">-42,13,106</point>
    <apply enter="deny(yellow-team)" region="yellow-woolroom" message="You may not enter your own wool room!"/>
    <apply enter="deny(blue-team)" region="blue-woolroom" message="You may not enter your own wool room!"/>
    <apply enter="deny(red-team)" region="red-woolroom" message="You may not enter your own wool room!"/>
    <apply enter="yellow-team" region="yellow-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply enter="blue-team" region="blue-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply enter="red-team" region="red-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply block="never" region="spawns" message="You may not edit the spawns!"/>
    <apply block="only-web" region="woolrooms" message="You may not modify the wool rooms!"/>
    <apply block-place="only-iron-renew" block-break="only-iron" region="iron-barns" message="You may only break iron blocks here!"/>
    <apply block="never" region="portal-buildings" message="You may not modify the portal buildings!"/>
    <apply block="never" region="portal-destinations" message="You may not obstruct the portal destinations!"/>
    <apply block="deny(void)" region="void-area" message="You may not modify the void area!"/>
</regions>
<wools craftable="false">
    <wool team="red-team" color="yellow" location="-42,13,-97">
        <monument>
            <block>-78,11,157</block>
        </monument>
    </wool>
    <wool team="red-team" color="blue" location="-42,13,-300">
        <monument>
            <block>-78,11,161</block>
        </monument>
    </wool>
    <wool team="blue-team" color="red" location="-42,13,106">
        <monument>
            <block>-78,11,-245</block>
        </monument>
    </wool>
    <wool team="blue-team" color="yellow" location="-42,13,-97">
        <monument>
            <block>-78,11,-249</block>
        </monument>
    </wool>
    <wool team="yellow-team" color="red" location="-42,13,106">
        <monument>
            <block>-78,11,-42</block>
        </monument>
    </wool>
    <wool team="yellow-team" color="blue" location="-42,13,-300">
        <monument>
            <block>-78,11,-46</block>
        </monument>
    </wool>
</wools>
<renewables>
    <renewable region="iron-barns" renew-filter="only-iron"/>
</renewables>
<spawners>
    <spawner spawn-region="red-wool-spawn" player-region="red-woolroom" delay="3s" max-entities="8">
        <item material="wool" amount="2" damage="14"/>
    </spawner>
    <spawner spawn-region="blue-wool-spawn" player-region="blue-woolroom" delay="3s" max-entities="8">
        <item material="wool" amount="2" damage="11"/>
    </spawner>
    <spawner spawn-region="yellow-wool-spawn" player-region="yellow-woolroom" delay="3s" max-entities="8">
        <item material="wool" amount="2" damage="4"/>
    </spawner>
</spawners>
<portals>
    <portal id="portal-yellow-to-blue" region="yellow-to-blue" x="@-191.5" y="@9" z="@-330.5" yaw="@-45"/>
    <portal id="portal-yellow-to-red" region="yellow-to-red" x="@-191.5" y="@9" z="@137.5" yaw="@-135"/>
    <portal id="portal-blue-to-red" region="blue-to-red" x="@-191.5" y="@9" z="@75.5" yaw="@-45"/>
    <portal id="portal-blue-to-yellow" region="blue-to-yellow" x="@-191.5" y="@9" z="@-65.5" yaw="@-135"/>
    <portal id="portal-red-to-yellow" region="red-to-yellow" x="@-191.5" y="@9" z="@-127.5" yaw="@-45"/>
    <portal id="portal-red-to-blue" region="red-to-blue" x="@-191.5" y="@9" z="@-268.5" yaw="@-135"/>
</portals>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>iron sword</item>
    <item>string</item>
    <item>flint</item>
    <item>seeds</item>
</itemremove>
<itemkeep>
    <item>stained clay</item>
    <item>wood</item>
    <item>golden apple</item>
</itemkeep>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>20</maxbuildheight>
<timelock>on</timelock>
</map>