<map proto="1.5.0" min-server-version="1.21.10">
<name>Allure</name>
<version>1.0</version>
<objective>Capture the enemy's wool!</objective>
<created>2025-08-19</created>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="f610e558-a3c8-44fb-8622-68cc49dbc18f"/> <!-- jcane -->
</authors>
<contributors>
    <contributor uuid="64e840c8-4fb5-4659-a36b-ff93e2f6113a" contribution="XML"/> <!-- Javg_ -->
</contributors>
<teams>
    <team id="red-team" max="12" max-overfill="14" color="dark red">Red</team>
    <team id="blue-team" max="12" max-overfill="14" color="blue">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" material="iron sword"/>
        <item slot="1" material="bow"/>
        <item slot="28" material="arrow" amount="32"/>
        <item slot="2" material="crossbow"/>
        <item slot="3" material="iron pickaxe"/>
        <item slot="4" material="iron axe"/>
        <item slot="31" material="iron spade"/>
        <item slot="5" material="wood" amount="64"/>
        <item slot="32" material="wood" amount="64"/>
        <item slot="6" material="concrete" team-color="true" amount="64"/>
        <item slot="7" material="wind charge"/>
        <item slot="8" material="golden apple"/>
        <chestplate material="leather chestplate" team-color="true"/>
        <boots material="leather boots" team-color="true"/>
        <effect amplifier="5" duration="5s">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <regions>
            <point>0.5,39,-58.5</point>
        </regions>
    </default>
    <spawn team="red-team" kit="spawn-kit">
        <regions yaw="50">
            <point>53.5,16,-41.5</point>
        </regions>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit">
        <regions yaw="-130">
            <point>-52.5,16,41.5</point>
        </regions>
    </spawn>
</spawns>
<wools>
    <wool team="red-team" color="yellow" location="-90.5,17,-20.5">
        <monument>
            <block>49.5,17,-42.5</block>
        </monument>
    </wool>
    <wool team="blue-team" color="purple" location="91.5,17,20.5">
        <monument>
            <block>-48.5,17,42.5</block>
        </monument>
    </wool>
</wools>
<filters>
    <any id="wool-room-blocks">
        <material>wood</material>
        <material>concrete</material>
        <material>cobweb</material>
    </any>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="red-spawn" min="42,-34" max="57,-45"/>
        <rectangle id="blue-spawn" min="-41,34" max="-56,45"/>
    </union>
    <union id="spawn-entrances">
        <rectangle id="red-spawn-entrance" min="44,-35" max="50,-32"/>
        <rectangle id="blue-spawn-entrance" min="-43,35" max="-49,32"/>
    </union>
    <union id="wools">
        <union id="purple-wool">
            <block id="purple-wool-spawn">91.5,17,20.5</block>
            <cuboid id="purple-wool-room" min="89,16,13" max="96,23,24"/>
            <rectangle id="purple-wool-area" min="83,9" max="97,25"/>
        </union>
        <union id="yellow-wool">
            <rectangle id="yellow-wool-area" min="-82,-9" max="-96,-25"/>
            <cuboid id="yellow-wool-room" min="-88,16,-13" max="-95,23,-24"/>
            <block id="yellow-wool-spawn">-90.5,17,-20.5</block>
        </union>
    </union>
    <negative id="void-area">
        <union id="playable-area">
            <complement>
                <rectangle min="71,-43" max="45,31"/>
                <rectangle min="68,23" max="71,31"/>
                <rectangle min="67,27" max="71,31"/>
                <rectangle min="66,29" max="71,31"/>
                <rectangle min="64,30" max="71,31"/>
            </complement>
            <rectangle min="-67,-23" max="-95,-10"/>
            <rectangle min="71,10" max="72,6"/>
            <rectangle min="71,10" max="73,7"/>
            <rectangle min="71,10" max="74,8"/>
            <rectangle min="71,10" max="75,9"/>
            <complement>
                <rectangle min="-70,37" max="-44,-31"/>
                <rectangle min="-67,-23" max="-70,-31"/>
                <rectangle min="-66,-27" max="-70,-31"/>
                <rectangle min="-65,-29" max="-70,-31"/>
                <rectangle min="-63,-30" max="-70,-31"/>
            </complement>
            <rectangle min="68,23" max="96,10"/>
            <rectangle min="-70,-10" max="-71,-6"/>
            <rectangle min="-70,-10" max="-72,-7"/>
            <rectangle min="-70,-10" max="-73,-8"/>
            <rectangle min="-70,-10" max="-74,-9"/>
            <rectangle min="45,-32" max="-44,32"/>
            <rectangle min="45,-32" max="30,-38"/>
            <rectangle min="45,-32" max="31,-39"/>
            <rectangle min="-44,32" max="-29,38"/>
            <rectangle min="-44,32" max="-30,39"/>
        </union>
    </negative>
    <!-- applies -->
    <apply region="spawns" block="never" message="You may not modify the spawn areas"/>
    <apply region="spawn-entrances" block="never" message="You may not modify the spawn entrances"/>
    <apply region="void-area" block="never" message="You may not build outside of the map"/>
    <apply region="yellow-wool" enter="red-team" message="You may not enter your own wool room"/>
    <apply region="purple-wool" enter="blue-team" message="You may not enter your own wool room"/>
    <apply region="yellow-wool" block="red-team" message="You may not modify your own wool room"/>
    <apply region="purple-wool" block="blue-team" message="You may not modify your own wool room"/>
    <apply region="red-spawn" enter="red-team" message="You may not enter the enemy spawn"/>
    <apply region="blue-spawn" enter="blue-team" message="You may not enter the enemy spawn"/>
    <apply region="wools" block="wool-room-blocks"/>
</regions>
<spawners>
    <spawner spawn-region="purple-wool-spawn" player-region="purple-wool-room" max-entities="2" delay="2s">
        <item amount="1" material="wool" damage="10"/>
    </spawner>
    <spawner spawn-region="yellow-wool-spawn" player-region="yellow-wool-room" max-entities="2" delay="2s">
        <item amount="1" material="wool" damage="4"/>
    </spawner>
</spawners>
<kill-rewards>
    <kill-reward>
        <item material="wind charge"/>
    </kill-reward>
</kill-rewards>
<toolrepair>
    <tool>iron sword</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
    <tool>crossbow</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather chestplate</item>
    <item>leather boots</item>
    <item>string</item>
</itemremove>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>35</maxbuildheight>
</map>