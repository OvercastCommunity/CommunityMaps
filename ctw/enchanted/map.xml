<maxbuildheight>24</maxbuildheight>
<respawn delay="3s" auto="true"/>
<hunger>
    <depletion>off</depletion>
</hunger>
<if variant="halloween">
    <world>
        <timeset>18000</timeset>
    </world>
    <crafting>
        <disable>bed</disable>
    </crafting>
</if>
<damage>
    <deny>
        <all>
            <relation>enemy</relation>
            <attacker>
                <filter id="wool-rooms"/>
            </attacker>
            <victim>
                <filter id="wool-rooms"/>
            </victim>
        </all>
    </deny>
</damage>
</map>