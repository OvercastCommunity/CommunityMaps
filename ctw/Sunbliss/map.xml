<map proto="1.5.0">
<name>Sunbliss</name>
<version>1.0.0</version>
<objective>Capture the enemy's wool!</objective>
<created>2026-01-10</created>
<phase>staging</phase>
<include id="gapple-kill-reward" />
<constants>
    <constant id="wr-msg">You may not enter or modify your wool room</constant>
    <constant id="void-msg">You may not build in the void</constant>
    <constant id="spawn-msg">You may not enter the enemy spawn</constant>
    <constant id="height-limit">24</constant>
</constants>
<maxbuildheight>${height-limit}</maxbuildheight>
<authors>
    <author uuid="1af9f952-e33e-42a5-8e1e-296757747fdc" /> <!-- Alphaboy98yt -->
</authors>
<contributors>
    <contributor uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128" contribution="XML" /> <!-- zzuf -->
</contributors>
<teams>
    <team id="red-team" color="dark red" max="20">Red</team>
    <team id="blue-team" color="blue" max="20">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear />
        <item slot="0" unbreakable="true" material="iron sword" />
        <item slot="1" unbreakable="true" material="bow">
            <enchantment>infinity</enchantment>
        </item>
        <item slot="28" material="arrow" />
        <item slot="2" unbreakable="true" material="iron pickaxe" />
        <item slot="3" unbreakable="true" material="iron axe" />
        <item slot="30" unbreakable="true" material="iron spade" />
        <item slot="4" amount="64" material="wood" />
        <item slot="31" amount="64" material="wood" />
        <item slot="5" amount="32" material="glass" />
        <item slot="8" material="golden apple" />
        <helmet unbreakable="true" team-color="true" material="leather helmet" />
        <chestplate unbreakable="true" team-color="true" material="leather chestplate" />
        <leggings unbreakable="true" enchantment="protectionprojectile:2"
            material="chainmail leggings" />
        <boots unbreakable="true" team-color="true" material="leather boots" />
        <effect duration="3" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="spawn-kit">
        <region yaw="-134">
            <point>113.5,9,271.5</point>
        </region>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit">
        <region yaw="44">
            <point>208,9,51</point>
        </region>
    </spawn>
    <default>
        <region yaw="90">
            <point>161,68,161</point>
        </region>
    </default>
</spawns>
<filters>
    <not id="not-void">
        <void />
    </not>
</filters>
<regions>
    <complement id="outside">
        <everywhere />
        <union>
            <union id="islands">
                <cuboid min="103.5,0,304.5" max="199.5,40,177.5" />
                <cuboid min="103.5,0,18.5" max="199.5,40,145.5" />
            </union>
            <union id="always-buildable">
                <union id="lanes">
                    <cuboid min="196.5,0,176.5" max="181.5,30,146.5" />
                    <cuboid min="140.5,0,176.5" max="125.5,30,146.5" />
                </union>
                <union id="monuments">
                    <block id="red-mon">107.5,10,271.5</block>
                    <block id="blue-mon">214.5,10,51.5</block>
                </union>
            </union>
        </union>
    </complement>
    <union id="spawns">
        <cuboid id="red-spawn" min="103.5,0,279.5" max="137.5,40,242.5" />
        <cuboid id="blue-spawn" min="218.5,0,43.5" max="185.5,39,80.5" />
    </union>
    <below id="below-limit" y="${height-limit}" />
    <cuboid id="red-wr" min="146.5,0,304.5" max="175.5,40,285.5" />
    <cuboid id="blue-wr" min="175.5,0,18.5" max="146.5,40,37.5" />
    <apply region="spawns" message="You can only break iron in spawn">
        <block-place>
            <all>
                <filter id="iron-block" />
                <cause>world</cause>
            </all>
        </block-place>
        <block-break>
            <material id="iron-block">iron block</material>
        </block-break>
    </apply>
    <apply region="always-buildable" block="always" />
    <apply region="red-wr" block="all(blue-team,not-void,below-limit)" enter="blue-team" message="${wr-msg}" />
    <apply region="blue-wr" block="all(red-team,not-void,below-limit)" enter="red-team" message="${wr-msg}" />
    <apply region="red-spawn" enter="red-team" message="${spawn-msg}" />
    <apply region="blue-spawn" enter="blue-team" message="${spawn-msg}" />
    <apply region="islands" block-place="not-void" message="${void-msg}" />
    <apply region="outside" block="never" message="You may not build outside the map" />
</regions>
<wools>
    <wool team="red-team" color="blue" monument="red-mon" location="172.5,19,26.5" />
    <wool team="blue-team" color="red" monument="blue-mon" location="172.5,19,26.5" />
</wools>
<renewables>
    <renewable region="spawns" renew-filter="iron-block" grow="false" />
</renewables>
<kill-reward>
    <item amount="16">wood</item>
    <item amount="8">glass</item>
</kill-reward>
<itemremove>
    <item>sapling</item>
    <item>apple</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
</itemremove>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
</toolrepair>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
    <item>wood</item>
    <item>glass</item>
</itemkeep>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>