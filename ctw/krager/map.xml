<map proto="1.5.0">
<name>Krager</name>
<version>1.1.0</version>
<phase>staging</phase>
<objective>Capture the enemy team's wool!</objective>
<gamemode>ctw</gamemode>
<created>2023-08-16</created>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="924c4e61-57b6-4931-afdb-6525b2ed34c0"/> <!-- OAF6 -->
</authors>
<teams>
    <team id="red-team" color="dark red" max="9">Red</team>
    <team id="blue-team" color="blue" max="9">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow" enchantment="infinity"/>
        <item slot="28" material="arrow"/>
        <item slot="2" unbreakable="true" material="iron pickaxe" enchantment="efficiency"/>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="4" amount="64" damage="1" material="wood"/>
        <item slot="5" amount="32" material="stained glass"/>
        <item slot="7" unbreakable="true" material="water bucket"/>
        <item slot="8" material="golden apple"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings"/>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="5" amplifier="255">damage resistance</effect>
    </kit>
    <kit id="woolrooms-gear" parents="woolrooms-boots">
        <item amount="12" material="golden apple"/>
        <action>
            <enchant-item enchantment="protection projectile" level="1">
                <find unbreakable="true" material="chainmail leggings"/>
            </enchant-item>
            <enchant-item enchantment="power" level="1">
                <find material="bow" unbreakable="true" enchantments="infinity"/>
            </enchant-item>
        </action>
    </kit>
    <kit id="woolrooms-boots" force="true">
        <boots material="diamond boots"/>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="spawn-kit" yaw="180">
        <region>
            <point>-40.5,13,64.5</point>
        </region>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit">
        <region>
            <point>101.5,13,20.5</point>
        </region>
    </spawn>
    <default>
        <region>
            <point>3.5,52,-22.5</point>
        </region>
    </default>
</spawns>
<filters>
    <team id="only-red">red-team</team>
    <team id="only-blue">blue-team</team>
    <all id="only-iron-renew">
        <material id="only-iron">iron block</material>
        <cause>world</cause>
    </all>
    <deny id="deny-void-break">
        <all>
            <any>
                <material>stone button</material>
                <material>web</material>
            </any>
            <void/>
        </all>
    </deny>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="red-spawn" min="-46,56" max="-35,69"/>
        <rectangle id="blue-spawn" min="107,29" max="96,16"/>
    </union>
    <union id="woolrooms">
        <rectangle id="red-wool-room" min="-24,16" max="-37,5"/> <!-- blue capture, red defend -->
        <rectangle id="blue-wool-room" min="85,69" max="98,80"/> <!-- red capture, blue defend -->
    </union>
    <negative id="void-area">
        <union id="bridgeable-area">
            <rectangle min="0,47" max="65,56"/> <!-- red -->
            <rectangle min="61,38" max="-4,29"/> <!-- blue -->
        </union>
    </negative>
    <point id="blue-wool-spawn">91.5,15,76</point>
    <point id="red-wool-spawn">-30.5,15,9</point>
    <!-- applicators -->
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply enter="only-red" region="blue-wool-room" message="You may not enter your own wool room!"/>
    <apply enter="only-blue" region="red-wool-room" message="You may not enter your own wool room!"/>
    <apply block="all(only-blue, not(void))" region="red-wool-room" message="You may not edit the wool room!"/>
    <apply block="all(only-red, not(void))" region="blue-wool-room" message="You may not edit the wool room!"/>
    <apply block-break="only-iron" block-place="only-iron-renew" region="spawns" message="You may not edit spawn!"/>
    <apply block-place="deny(void)" block-break="deny-void-break" region="void-area" message="You may not edit the void!"/>
    <apply kit="woolrooms-gear" region="woolrooms"/>
</regions>
<wools craftable="false">
    <wool team="blue-team" color="red" location="-30.5,15,9">
        <monument>
            <block>103,13,17</block>
        </monument>
    </wool>
    <wool team="red-team" color="blue" location="91.5,15,76">
        <monument>
            <block>-43,13,67</block>
        </monument>
    </wool>
</wools>
<spawners>
    <spawner spawn-region="red-wool-spawn" player-region="red-wool-room" delay="4s" max-entities="3">
        <item material="wool" amount="2" damage="14"/>
    </spawner>
    <spawner spawn-region="blue-wool-spawn" player-region="blue-wool-room" delay="4s" max-entities="3">
        <item material="wool" amount="2" damage="11"/>
    </spawner>
</spawners>
<renewables>
    <renewable region="spawns" renew-filter="only-iron"/>
</renewables>
<block-drops>
    <rule filter="only-iron">
        <drops>
            <item material="iron chestplate"/>
        </drops>
    </rule>
</block-drops>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>arrow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
    <item>ender stone</item>
    <item>sandstone</item>
    <item>redstone</item>
    <item>string</item>
</itemremove>
<itemkeep>
    <item>stained glass</item>
    <item>wood</item>
    <item>golden apple</item>
    <item>bucket</item>
    <item>water bucket</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item amount="10" damage="1" material="wood"/>
        <item amount="4" material="stained glass"/>
    </kill-reward>
</kill-rewards>
<maxbuildheight>25</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
