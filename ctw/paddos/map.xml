<map proto="1.5.0">
<name>Paddo's</name>
<version>1.1.0</version>
<objective>Capture the two wools of the enemy team!</objective>
<created>2023-01-09</created>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="744c1d83-486e-432d-b433-07553abbdd96"/> <!-- oseh -->
    <author uuid="20945afd-0a9b-4fe3-843e-5131eb036712"/> <!-- Sedum_Paul -->
    <author uuid="63ddf58a-ba2c-4d39-8481-6358bb46c63a"/> <!-- samschaap -->
    <author uuid="924c4e61-57b6-4931-afdb-6525b2ed34c0"/> <!-- OAF6 -->
</authors>
<contributors>
    <contributor uuid="510dae51-f405-4cf4-9fb6-6f1fd3f07d69" contribution="Building help"/> <!-- Zuiuzz -->
    <contributor uuid="6863869b-4b8c-4445-b778-a8e016775ae4" contribution="Building suggestions"/> <!-- Cazadorian -->
</contributors>
<teams>
    <team id="red-team" color="red" max="16">Red</team>
    <team id="blue-team" color="blue" max="16">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow">
            <enchantment>infinity</enchantment>
        </item>
        <item slot="28" material="arrow"/>
        <item slot="2" unbreakable="true" material="iron pickaxe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="30" unbreakable="true" material="iron spade"/>
        <item slot="4" amount="64" damage="2" material="wood"/>
        <item slot="5" amount="64" team-color="true" material="stained glass"/>
        <item slot="7" material="bucket"/>
        <item slot="8" material="golden apple"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment>projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="3s" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region>
            <point>24,29,-58</point>
        </region>
    </default>
    <spawn team="red-team" kit="spawn-kit" yaw="-90">
        <region>
            <point>-70,11,-3</point>
        </region>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit" yaw="90">
        <region>
            <point>117,11,-3</point>
        </region>
    </spawn>
</spawns>
<filters>
    <material id="chest">chest</material>
    <all id="only-iron-renew">
        <material id="only-iron">iron block</material>
        <cause>world</cause>
    </all>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="red-spawn" min="-47,-10" max="-75,4"/>
        <rectangle id="blue-spawn" min="94,-10" max="122,4"/>
    </union>
    <union id="wool-rooms">
        <union id="red-wool-rooms"> <!-- blue capture, red defend -->
            <rectangle id="magenta-wool-room" min="-73,35" max="-59,20"/>
            <rectangle id="red-wool-room" min="-73,-26" max="-59,-41"/>
        </union>
        <union id="blue-wool-rooms"> <!-- red capture, blue defend -->
            <rectangle id="light-blue-wool-room" min="106,-26" max="120,-41"/>
            <rectangle id="blue-wool-room" min="106,35" max="120,20"/>
        </union>
    </union>
    <negative id="void-area">
        <union id="bridgeable-area">
            <rectangle min="88,-39" max="54,33"/> <!-- Blue side -->
            <rectangle min="34,33" max="13,23"/> <!-- South lane -->
            <rectangle min="58,9" max="-11,-15"/> <!-- Middle lane -->
            <rectangle min="34,-29" max="13,-39"/> <!-- North lane -->
            <rectangle min="-41,33" max="-7,-39"/> <!-- Red side -->
        </union>
    </negative>
    <above id="build-limit" y="20"/>
    <apply enter="red-team" region="red-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="blue-team" region="blue-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="red-team" region="blue-wool-rooms" message="You may not enter your own wool rooms!"/>
    <apply enter="blue-team" region="red-wool-rooms" message="You may not enter your own wool rooms!"/>
    <apply block="never" region="build-limit">
        <message>{"translate":"match.maxBuildHeight"}</message>
    </apply>
    <apply block="deny(chest)" region="wool-rooms" message="You may not break this block!"/>
    <apply block="red-team" region="blue-wool-rooms" message="You may not modify your own wool rooms!"/>
    <apply block="blue-team" region="red-wool-rooms" message="You may not modify your own wool rooms!"/>
    <apply block-break="only-iron" block-place="only-iron-renew" region="spawns" message="You may only break iron blocks here!"/>
    <apply block="deny(void)" region="void-area" message="You may not modify the void area!"/>
</regions>
<wools craftable="false">
    <wool team="blue-team" color="magenta" location="-71,7,27">
        <monument>
            <block>120,12,0</block>
        </monument>
    </wool>
    <wool team="blue-team" color="red" location="-71,7,-34">
        <monument>
            <block>120,12,-7</block>
        </monument>
    </wool>
    <wool team="red-team" color="light blue" location="117,7,-34">
        <monument>
            <block>-74,12,-7</block>
        </monument>
    </wool>
    <wool team="red-team" color="blue" location="117,7,27">
        <monument>
            <block>-74,12,0</block>
        </monument>
    </wool>
</wools>
<renewables>
    <renewable region="spawns" renew-filter="only-iron"/>
</renewables>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>arrow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
    <tool>bucket</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>string</item>
    <item>redstone</item>
    <item>yellow flower</item>
    <item>red rose</item>
    <item>double plant</item>
    <item>seeds</item>
    <item>prismarine crystals</item>
    <item>brown mushroom</item>
    <item>red mushroom</item>
    <item>quartz block</item>
    <item>dirt</item>
    <item>cobblestone</item>
    <item>stone</item>
</itemremove>
<itemkeep>
    <item>wood</item>
    <item>stained glass</item>
    <item>golden apple</item>
    <item>bucket</item>
</itemkeep>
<kill-reward>
    <item amount="16" damage="2" material="wood"/>
    <item amount="16" team-color="true" material="stained glass"/>
</kill-reward>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
