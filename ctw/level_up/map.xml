<map proto="1.5.0">
<name>Level Up</name>
<version>1.0.5</version>
<objective>Capture the enemy's wool!</objective>
<created>2025-02-02</created>
<include id="gapple-kill-reward"/>
<include id="iron-bulkcrafting"/>
