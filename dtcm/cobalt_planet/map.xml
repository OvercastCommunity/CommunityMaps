<map proto="1.5.0">
<name>Cobalt Planet</name>
<version>1.0.1</version>
<phase>staging</phase>
<objective>Destroy the enemy team's two end stone monuments!</objective>
<created>2025-10-11</created>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="644521d7-9437-47c1-b1d2-698eb757df3d"/> <!-- minuyo -->
</authors>
<contributors>
    <contributor uuid="63ddf58a-ba2c-4d39-8481-6358bb46c63a" contribution="xml"/> <!-- samschaap -->
</contributors>
<teams>
    <team id="pink-team" color="light purple" max="24">Pink</team>
    <team id="blue-team" color="blue" max="24">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit" parents="nv-kit">
        <clear/>
        <item slot="0" unbreakable="true" enchantments="unbreaking" material="iron sword"/>
        <item slot="1" unbreakable="true" enchantments="unbreaking" material="bow"/>
        <item slot="28" material="arrow" amount="64"/>
        <item slot="2" unbreakable="true" enchantments="unbreaking" material="iron pickaxe"/>
        <item slot="29" unbreakable="true" enchantments="unbreaking" material="shears"/>
        <item slot="3" unbreakable="true" enchantments="unbreaking" material="iron axe"/>
        <item slot="30" unbreakable="true" enchantments="unbreaking" material="iron spade"/>
        <item slot="4" amount="64" damage="2" material="wood"/>
        <item slot="5" amount="64" damage="2" material="wood"/>
        <item slot="6" amount="32" material="glass"/>
        <item slot="7" material="bucket"/>
        <item slot="8" material="golden apple"/>
        <helmet unbreakable="true" enchantments="unbreaking" material="glass"/>
        <leggings unbreakable="true" enchantments="unbreaking" material="iron leggings"/>
        <boots unbreakable="true" enchantments="unbreaking" material="diamond boots"/>
        <effect duration="3s" amplifier="255">damage resistance</effect>
    </kit>
    <kit id="pink-kit" parents="spawn-kit">
        <chestplate unbreakable="true" enchantments="unbreaking" color="ff99bf" material="leather chestplate"/>
    </kit>
    <kit id="blue-kit" parents="spawn-kit">
        <chestplate unbreakable="true" enchantments="unbreaking" color="7fccff" material="leather chestplate"/>
    </kit>
    <kit id="nv-kit">
        <effect>night vision</effect>
    </kit>
</kits>
<spawns>
    <default kit="nv-kit" yaw="-90">
        <region>
            <point>0,76,0</point>
        </region>
    </default>
    <spawn team="pink-team" kit="pink-kit" yaw="0">
        <region>
            <point>83,15,-30</point>
        </region>
    </spawn>
    <spawn team="blue-team" kit="blue-kit" yaw="180">
        <region>
            <point>-83,15,30</point>
        </region>
    </spawn>
</spawns>
<filters>
    <material id="only-iron">iron block</material>
    <all id="only-some-world">
        <cause>world</cause>
        <not>
            <any>
                <material>water</material>
                <material>stationary water</material>
            </any>
        </not>
    </all>
</filters>
<regions>
    <negative id="void-area">
        <rectangle id="bridgeable-area" min="-96,36" max="96,-36"/>
    </negative>
    <union id="spawns">
        <cuboid id="pink-spawn" min="77,4,-35" max="89,30,-15"/>
        <cuboid id="blue-spawn" min="-77,4,35" max="-89,30,15"/>
    </union>
    <union id="iron">
        <cuboid id="pink-iron" min="54,9,-16" max="70,14,0"/>
        <cuboid id="blue-iron" min="-54,9,16" max="-70,14,0"/>
    </union>
    <cuboid id="pink-high-monument" min="55,24,-22" max="48,31,-29"/>
    <cuboid id="blue-high-monument" min="-55,24,22" max="-48,31,29"/>
    <cuboid id="blue-low-monument" min="-66,18,-12" max="-73,25,-19"/>
    <cuboid id="pink-low-monument" min="66,18,12" max="73,25,19"/>
    <apply block="only-some-world" region="spawns" message="You may not modify the spawn area!"/>
    <apply enter="pink-team" region="pink-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply enter="blue-team" region="blue-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply block="deny(void)" region="void-area" message="You may not modify the void area!"/>
</regions>
<destroyables materials="ender stone" required="true" show-progress="true">
    <destroyable name="High Monument" owner="pink-team" region="pink-high-monument"/>
    <destroyable name="Low Monument" owner="pink-team" region="pink-low-monument"/>
    <destroyable name="High Monument" owner="blue-team" region="blue-high-monument"/>
    <destroyable name="Low Monument" owner="blue-team" region="blue-low-monument"/>
</destroyables>
<renewables>
    <renewable region="iron" renew-filter="only-iron"/>
</renewables>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>shears</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
    <tool>bucket</tool>
</toolrepair>
<itemremove>
    <item>leather chestplate</item>
    <item>diamond boots</item>
    <item>ender stone</item>
    <item>clay ball</item>
    <item>dirt</item>
    <item>obsidian</item>
    <item>flint</item>
</itemremove>
<itemkeep>
    <item>arrow</item>
    <item>wood</item>
    <item>glass</item>
    <item>golden apple</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item amount="16" material="arrow"/>
        <item amount="16" damage="2" material="wood"/>
    </kill-reward>
    <kill-reward>
        <filter>
            <kill-streak count="3" repeat="true"/>
        </filter>
        <item amount="1" material="tnt"/>
    </kill-reward>
</kill-rewards>
<broadcasts>
    <tip after="10s" every="3m">After `e3`r kills, you will receive 1 `cTNT`r!</tip>
</broadcasts>
<maxbuildheight>36</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
