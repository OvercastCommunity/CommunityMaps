<map proto="1.5.0">
<include id="gapple-kill-reward"/>
<name>City of Colors DTM</name> 
<version>1.0.0</version>
<phase>development</phase>
<objective>Destroy all three of the enemy team's monuments!</objective>
<created>2024-12-14</created>
<authors>
    <author uuid="f1ff7ecc-2e79-4320-85de-adb392eb2822"/> <!-- DerStiv -->
</authors>
<contributors>
    <contributor uuid="63ddf58a-ba2c-4d39-8481-6358bb46c63a" contribution="xml"/> <!-- samschaap -->
</contributors>
<teams>
    <team id="red-team" color="red" max="16">Red</team>
    <team id="blue-team" color="blue" max="16">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" enchantment="infinity" material="bow"/>
        <item slot="2" unbreakable="true" material="diamond pickaxe"/>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="30" unbreakable="true" material="iron spade"/>
        <item slot="4" amount="64" material="wood"/>
        <item slot="5" amount="64" material="stained glass" team-color="true"/>
        <item slot="8" material="golden apple"/>
        <item slot="28" amount="1" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" enchantment="projectile protection" material="chainmail leggings"/>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="3s" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default yaw="90">
        <region>
            <point>55.5,30,0.5</point>
        </region>
    </default>
    <spawn team="red-team" kit="spawn-kit" yaw="180">
        <regions>
            <point>-18.5,20,84.5</point>
            <point>25.5,20,80.5</point>
        </regions>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit" yaw="0">
        <regions>
            <point>-24.5,20,-79.5</point>
            <point>19.5,20,-83.5</point>
        </regions>
    </spawn>
</spawns>
<destroyables material="obsidian" mode-changes="true">
    <destroyable owner="red-team" name="East Monument">
        <region>
            <cuboid min="17,16,39" max="18,18,40"/>
         </region>
    </destroyable>
    <destroyable owner="red-team" name="South Monument">
        <region>
            <cuboid min="0,25,55" max="1,27,56"/>
         </region>
    </destroyable>
    <destroyable owner="red-team" name="West Monument">
        <region>
            <cuboid min="-17,16,39" max="-11,18,40"/>
         </region>
    </destroyable>
    <destroyable owner="blue-team" name="East Monument">
        <region>
            <cuboid min="17,16,-39" max="18,18,-38"/>
         </region>
    </destroyable>
    <destroyable owner="blue-team" name="North Monument">
        <region>
            <cuboid min="0,25,-55" max="1,27,-54"/>
         </region>
    </destroyable>
    <destroyable owner="blue-team" name="West Monument">
        <region>
            <cuboid min="-17,16,-39" max="-16,18,-38"/>
         </region>
    </destroyable>
</destroyables>
<modes>
    <mode id="beacon-mode" after="20m" name="`bBEACON MONUMENT MODE" material="beacon"/>
    <mode id="coal-mode" after="40m" name="`8COAL MONUMENT MODE" material="coal block"/>
</modes>
<filters>
    <team id="only-red">red-team</team>
    <team id="only-blue">blue-team</team>
</filters>
<regions>
    <union id="side-houses">
        <above id="red-side" z="75"/>
        <below id="blue-side" z="-74"/>
    </union>
    <union id="spawns">
        <union id="red-spawn">
            <rectangle min="-16,79" max="-21,86"/>
            <rectangle min="28,75" max="23,82"/>
        </union>
        <union id="blue-spawn">
            <rectangle min="17,-78" max="22,-85"/>
            <rectangle min="-27,-74" max="-22,-81"/>
        </union>
    </union>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply block="never" region="side-houses" message="You may not modify this area!"/>
    <apply block-place="deny(void)" message="You may not modify the void area!"/>
</regions>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>seeds</item>
    <item>red rose</item>
    <item>double plant</item>
    <item>obsidian</item>
    <item>beacon</item>
    <item>coal block</item>
    <item>dirt</item>
    <item>gravel</item>
    <item>flint</item>
    <item>stone</item>
    <item>cobblestone</item>
    <item>quartz block</item>
    <item>emerald block</item>
    <item>gold block</item>
    <item>stained clay</item>
    <item>step</item>
    <item>carpet</item>
    <item>sapling</item>
    <item>cobble wall</item>
    <item>sugar cane</item>
    <item>water lily</item>
    <item>brown mushroom</item>
    <item>red mushroom</item>
    <item>torch</item>
    <item>book</item>
    <item>bed</item>
    <item>flower pot</item>
    <item>prismarine crystals</item>
</itemremove>
<itemkeep>
    <item>wood</item>
    <item>stained glass</item>
    <item>golden apple</item>
</itemkeep>
<block-drops>
    <rule>
        <filter>
            <material>wood</material>
        </filter>
        <drops>
            <item chance="0" material="wood"/>
        </drops>
    </rule>
</block-drops>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>35</maxbuildheight>
<respawn delay="3s"/>
<kill-rewards>
    <kill-reward>
        <item amount="16" material="wood"/>
        <item amount="16" material="stained glass" team-color="true"/>
    </kill-reward>
</kill-rewards>
</map>
