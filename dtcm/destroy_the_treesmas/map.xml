<map proto="1.5.0">
<name>Destroy the Treesmas</name>
<version>1.0.1</version>
<objective>Destroy your Christmas Tree first</objective>
<gamemode>dtm</gamemode>
<created>2025-12-01</created>
<authors>
    <author uuid="b0523368-9363-4d24-877a-aa1f6342eda0"/> <!-- Palmenikoo -->
    <author uuid="c25a6f7b-4c42-40da-8cd6-add53f0c84eb"/> <!-- arcadeboss -->
</authors>
<world>
    <timeset>13000</timeset>
    <timelock>on</timelock>
</world>
<teams>
    <team id="blue-team" color="blue" max="22">Blue</team>
    <team id="red-team" color="red" max="22">Red</team>
</teams>
<kits>
    <kit id="main-kit" force="true">
        <clear/>
        <effect duration="8s" amplifier="255">damage resistance</effect>
        <effect duration="8s">regeneration</effect>
        <item slot="0" material="iron axe" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true" name="Bow" enchantment="arrow infinite"/>
        <item slot="2" material="diamond pickaxe" unbreakable="true"/>
        <item slot="3" material="shears" unbreakable="true"/>
        <item slot="4" material="water bucket"/>
        <item slot="5" material="cobblestone" amount="64"/>
        <item slot="32" material="cobblestone" amount="64"/>
        <item slot="7" material="ladder" amount="40"/>
        <item slot="8" material="golden apple"/>
        <item slot="28" material="arrow"/>
        <item slot="16" material="cobblestone" amount="64"/>
        <helmet material="chainmail helmet" unbreakable="true" enchantment="protection"/>
        <chestplate material="leather chestplate" team-color="true" unbreakable="true" enchantment="protection"/>
        <leggings material="chainmail leggings" unbreakable="true" enchantment="protection"/>
        <boots material="leather boots" team-color="true" unbreakable="true" enchantment="protection;feather falling"/>
    </kit>
    <kit id="breaker-kit" force="true">
        <action>
            <sound key="fireworks.twinkle" volume="0.5" pitch="1"/>
        </action>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="main-kit" yaw="-15" region="red-spawn-point"/>
    <spawn team="blue-team" kit="main-kit" yaw="163" region="blue-spawn-point"/>
    <default yaw="-131.5" pitch="-21" region="obs-spawn-point"/>
</spawns>
<broadcasts>
    <alert after="1s">`r`f`lDo not try to bridge!`r</alert>
    <alert after="2s">`r`f`lDestroy your tree first to win!`r</alert>
    <alert after="15s">`r`f`lRemove the tree leaves, trunk, ornaments and presents!</alert>
</broadcasts>
<block-drops>
    <rule kit="breaker-kit">
        <filter>
            <any>
                <material>leaves</material>
                <material>stained clay</material>
                <material>wool</material>
                <material>log</material>
                <material>log_2</material>
                <material>quartz_block</material>
                <material>step</material>
                <material>stained_glass</material>
                <material>glowstone</material>
                <material>ice</material>
                <material>packed ice</material>
            </any>
        </filter>
    </rule>
</block-drops>
<regions>
    <cylinder id="red-spawn-point" base="-1.5,16,-110.5" radius="0.3" height="0"/>
    <cylinder id="blue-spawn-point" base="2.5,16,111.5" radius="0.3" height="0"/>
    <cylinder id="obs-spawn-point" base="-6.5,16,2.5" radius="0.1" height="0"/>
    <negative id="not-build-area">
        <cylinder base="0.5,16,-66.5" radius="17" height="54"/>
        <cylinder base="0.5,16,67.5" radius="17" height="54"/>
    </negative>
    <apply block-break="never" block-place="never" region="not-build-area" message="You may not edit this area!"/>
</regions>
<destroyables materials="leaves;leaves 2;stained clay;wool;log;log_2;wood;quartz_block;step;stained_glass;glowstone;snow;ice;packed_ice" mode-changes="false" sparks="false" repairable="false" show-progress="true" required="true" completion="92%">
    <destroyable id="red-mon" name="Red Tree" owner="blue-team">
        <region>
            <cylinder id="red-tree" base="0.5,0,-66.5" radius="16" height="70"/>
        </region>
    </destroyable>
    <destroyable id="blue-mon" name="Blue Tree" owner="red-team">
        <region>
            <cylinder id="blue-tree" base="0.5,0,67.5" radius="16" height="70"/>
        </region>
    </destroyable>
</destroyables>
<itemremove>
    <item>leaves</item>
    <item>leaves 2</item>
    <item>stained clay</item>
    <item>wool</item>
    <item>log</item>
    <item>log_2</item>
    <item>quartz_block</item>
    <item>step</item>
    <item>stained_glass</item>
</itemremove>
<gamerules>
    <randomTickSpeed>0</randomTickSpeed> <!-- Prevents leaves decaying -->
</gamerules>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
