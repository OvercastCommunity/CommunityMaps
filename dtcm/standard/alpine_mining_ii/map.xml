    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="16" material="arrow"/>
</kill-reward>
<block-drops>
    <rule>
        <filter>
            <material>gravel</material>
        </filter>
        <drops>
            <item>gravel</item>
        </drops>
    </rule>
    <rule>
        <filter>
            <material>lapis ore</material>
        </filter>
        <drops>
            <item amount="2" damage="4" material="ink sack"/>
        </drops>
        <experience>3</experience>
    </rule>
</block-drops>
