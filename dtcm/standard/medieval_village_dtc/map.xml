<map proto="1.4.2">
<name>Medieval Village DTC</name>
<version>1.0.1</version>
<objective>Leak lava from the enemy's obsidian core!</objective>
<gamemode>dtc</gamemode>
<created>2022-07-06</created>
<authors>
    <author uuid="dd8c3d79-3930-41f6-a815-621dc3d52649"/> <!-- StanleyTheCow -->
    <author uuid="e4cfa2d5-6b11-4e15-a893-9d92f18385f3"/> <!-- mariogoat -->
    <author uuid="74efe633-e238-465f-b167-d772b1c42107"/> <!-- Fbpr27 -->
</authors>
<contributors>
    <contributor uuid="e2d2c2c6-cea9-4510-9ab2-a091b5605b30" contribution="xml"/> <!-- Ruediger_LP -->
    <contributor uuid="6863869b-4b8c-4445-b778-a8e016775ae4" contribution="Feedback"/> <!-- Cazadorian -->
</contributors>
<teams>
    <team id="blue-team" color="blue" max="9">Blue</team>
    <team id="red-team" color="dark red" max="9">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" material="iron sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true"/>
        <item slot="2" material="diamond pickaxe" unbreakable="true"/>
        <item slot="3" material="iron axe" unbreakable="true">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="4" material="wood" amount="64"/>
        <item slot="5" material="glass" amount="64"/>
        <item slot="6" material="iron spade" unbreakable="true"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" material="bucket" amount="1"/>
        <item slot="28" material="arrow" amount="32"/>
        <helmet material="leather helmet" team-color="true" unbreakable="true"/>
        <chestplate material="leather chestplate" team-color="true" unbreakable="true"/>
        <leggings material="chainmail leggings" unbreakable="true">
            <enchantment>protection projectile</enchantment>
        </leggings>
        <boots material="leather boots" team-color="true" unbreakable="true"/>
        <effect duration="4">heal</effect>
        <effect duration="4">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="-90">
            <cylinder base="-30.5,23,17.5" radius="2" height="0"/>
        </region>
    </default>
    <spawn team="blue-team" kit="spawn-kit">
        <region>
            <point>-8.5, 11.5, -36.5</point>
        </region>
    </spawn>
    <spawn team="red-team" kit="spawn-kit">
        <region yaw="-180">
            <point>-8.5, 11.5, 71.5</point>
        </region>
    </spawn>
</spawns>
<cores material="obsidian" leak="3">
    <core team="blue-team">
        <region>
            <cuboid min="16,16,-38" max="20,19,-42"/>
        </region>
    </core>
    <core team="red-team">
        <region>
            <cuboid min="16,16,72" max="20,19,76"/>
        </region>
    </core>
</cores>
<regions>
    <union id="spawns">
        <cuboid min="-14,4,-44" max="-5,24,-27"/>
        <cuboid min="-14,4,78" max="-5,21,62"/>
    </union>
    <negative id="not-playingfield">
        <rectangle id="playingfield" min="-14,79" max="23,-44"/>
    </negative>
    <!-- applicators -->
    <apply block="never" region="spawns" message="You may not edit spawn!"/>
    <apply block="never" region="not-playingfield" message="You may not edit the void!"/>
</regions>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron spade</tool>
    <tool>iron axe</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>obsidian</item>
    <item>packed ice</item>
    <item>string</item>
    <item>red rose</item>
    <item>yellow flower</item>
    <item>flower pot item</item>
    <item>iron plate</item>
    <item>seeds</item>
    <item>sapling</item>
    <item>apple</item>
    <item>double plant</item>
    <item>item frame</item>
    <item>sugar cane</item>
    <item>water lily</item>
    <item>ink sack</item>
</itemremove>
<itemkeep>
    <item>iron sword</item>
    <item>bow</item>
    <item>diamond pickaxe</item>
    <item>iron axe</item>
    <item>wood</item>
    <item>glass</item>
    <item>iron spade</item>
    <item>cooked chicken</item>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<maxbuildheight>27</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
        <item material="wood" amount="16"/>
        <item material="arrow" amount="16"/>
    </kill-reward>
</kill-rewards>
</map>
