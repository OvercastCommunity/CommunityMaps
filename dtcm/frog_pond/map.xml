<map proto="1.5.0">
<name>Frog Pond</name>
<version>1.0.0</version>
<objective>Destroy the other team's monument!</objective>
<created>2026-01-26</created>
<constants>
    <constant id="eff.modes-preset">every-10m</constant>
    <constant id="eff.efficiency-tool">diamond pickaxe</constant>
    <constant id="eff.team-1">blue-team</constant>
    <constant id="eff.team-2">red-team</constant>
    <constant id="eff.t1-m1-region">red-monument</constant>
    <constant id="eff.t2-m1-region">blue-monument</constant>
</constants>
<include id="efficiency-variables"/>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="644521d7-9437-47c1-b1d2-698eb757df3d"/> <!-- minuyo -->
</authors>
<contributors>
    <contributor uuid="d5a64b26-15ea-46c4-8319-f9c83e82a1fa" contribution="XML"/> <!-- Eliminate -->
</contributors>
<teams>
    <team id="blue-team" color="blue" max="12">Blue</team>
    <team id="red-team" color="dark red" max="12" max-overfill="14">Red</team>
</teams>
<spawns>
    <default yaw="-90">
        <region>
            <point>-58.5,100,0.5</point>
        </region>
    </default>
    <spawn team="blue-team" kit="spawn-kit">
        <regions yaw="90">
            <point>22.5,13,61</point>
        </regions>
    </spawn>
    <spawn team="red-team" kit="spawn-kit">
        <regions yaw="-90">
            <point>-21.5,13,-60</point>
        </regions>
    </spawn>
</spawns>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" material="stone sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true"/>
        <item slot="2" material="diamond pickaxe" unbreakable="true"/>
        <item slot="3" material="wood" damage="1" amount="64"/>
        <item slot="4" material="iron spade" unbreakable="true"/>
        <item slot="5" material="iron axe" unbreakable="true"/>
        <item slot="6" material="shears" unbreakable="true"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" material="torch" amount="8"/>
        <item slot="28" material="arrow" amount="24"/>
        <item slot="30" material="wood" damage="1" amount="64"/>
        <helmet material="leather helmet" unbreakable="true" team-color="true"/>
        <chestplate material="leather chestplate" unbreakable="true" team-color="true"/>
        <effect amplifier="3" duration="3s">damage resistance</effect>
    </kit>
</kits>
<regions>
    <union id="spawns">
        <rectangle id="blue-spawn" min="13,56" max="26,71"/>
        <rectangle id="red-spawn" min="-25,-70" max="-12,-55"/>
    </union>
    <negative id="void-space">
        <rectangle id="play-space" min="-25,-70" max="26,71"/>
    </negative>
    <cuboid id="blue-monument" min="-8,16,41" max="-7,18,42"/>
    <cuboid id="red-monument" min="8,16,-41" max="9,18,-40"/>
    <apply region="void-space" block="never" message="You may not build here!"/>
    <apply region="blue-spawn" enter="blue-team" message="You may not enter the enemy spawn!"/>
    <apply region="red-spawn" enter="red-team" message="You may not enter the enemy spawn!"/>
    <apply region="spawns" use="spawn-blocks" block-place="never" block-break="gold-block" message="You may not modify the spawn area!"/>
</regions>
<filters>
    <material id="gold-block">gold block</material>
    <any id="spawn-blocks">
        <material>crafting table</material>
        <material>chest</material>
    </any>
    <material id="crafting-table">crafting table</material>
</filters>
<destroyables name="Monument" materials="obsidian" show-progress="true" mode-changes="true">
    <destroyable region="blue-monument" owner="blue-team"/>
    <destroyable region="red-monument" owner="red-team"/>
</destroyables>
<renewables>
    <renewable interval="20" grow="true" renew-filter="gold-block" region="spawns" particles="true" sound="true" avoid-players="1"/>
</renewables>
<damage>
    <deny>
        <region id="spawns"/>
    </deny>
</damage>
<kill-rewards>
    <kill-reward>
        <item material="arrow" amount="6"/>
        <item material="wood" damage="1" amount="16"/>
    </kill-reward>
</kill-rewards>
<toolrepair>
    <tool>leather helmet</tool>
    <tool>leather chestplate</tool>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron spade</tool>
    <tool>iron axe</tool>
    <tool>shears</tool>
    <tool>gold helmet</tool>
    <tool>gold chestplate</tool>
    <tool>gold leggings</tool>
    <tool>gold boots</tool>
    <tool>gold sword</tool>
    <tool>gold pickaxe</tool>
    <tool>gold axe</tool>
    <tool>gold spade</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>torch</item>
    <item>sapling</item>
    <item>apple</item>
    <item>seeds</item>
    <item>sugar cane</item>
    <item>water lily</item>
    <item>brown mushroom</item>
    <item>glowstone dust</item>
    <item>obsidian</item>
</itemremove>
<itemkeep>
    <item>wood</item>
    <item>arrow</item>
    <item>golden apple</item>
</itemkeep>
<maxbuildheight>27</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>