<map proto="1.5.0">
<name>Fox Dream</name>
<version>1.0.0</version>
<phase>staging</phase>
<objective>Destroy the enemy team's obsidian monument!</objective>
<created>2025-10-01</created>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="644521d7-9437-47c1-b1d2-698eb757df3d"/> <!-- minuyo -->
</authors>
<contributors>
    <contributor uuid="63ddf58a-ba2c-4d39-8481-6358bb46c63a" contribution="xml"/> <!-- samschaap -->
</contributors>
<teams>
    <team id="red-team" color="dark red" max="24">Red</team>
    <team id="yellow-team" color="yellow" max="24">Yellow</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="28" material="arrow" amount="64"/>
        <item slot="2" unbreakable="true" material="diamond pickaxe"/>
        <item slot="29" unbreakable="true" material="shears"/>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="30" unbreakable="true" material="iron spade"/>
        <item slot="4" amount="64" material="wood"/>
        <item slot="5" amount="64" material="wood"/>
        <item slot="6" amount="32" material="glass"/>
        <item slot="8" material="golden apple"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" team-color="true" material="leather leggings"/>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="3s" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default yaw="-90">
        <region>
            <point>-86.5,99,0.5</point>
        </region>
    </default>
    <spawn team="red-team" kit="spawn-kit" yaw="-90">
        <region>
            <point>-43.5,16,-56.5</point>
        </region>
    </spawn>
    <spawn team="yellow-team" kit="spawn-kit" yaw="90">
        <region>
            <point>44.5,16,57.5</point>
        </region>
    </spawn>
</spawns>
<filters>
    <material id="only-iron">iron block</material>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="red-spawn" min="-34,-62" max="-49,-51"/>
        <rectangle id="yellow-spawn" min="35,63" max="50,52"/>
    </union>
    <union id="iron">
        <cuboid id="red-iron" min="-24,11,-67" max="-11,23,-88"/>
        <cuboid id="yellow-iron" min="25,11,68" max="12,23,89"/>
    </union>
    <apply block="never" region="spawns" message="You may not modify the spawn area!"/>
    <apply enter="red-team" region="red-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply enter="yellow-team" region="yellow-spawn" message="You may not enter the enemy team's spawn!"/>
    <apply block="deny(void)" message="You may not modify the void area!"/>
</regions>
<destroyables name="Monument" materials="obsidian" required="true" mode-changes="true">
    <destroyable owner="red-team">
        <region>
            <cuboid min="24,18,-54" max="23,21,-53"/>
         </region>
    </destroyable>
    <destroyable owner="yellow-team">
        <region>
            <cuboid min="-23,18,55" max="-22,21,54"/>
         </region>
    </destroyable>
</destroyables>
<modes>
    <mode after="30m" material="beacon" name="`bBEACON MONUMENT MODE"/>
</modes>
<renewables>
    <renewable region="iron" renew-filter="only-iron"/>
</renewables>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>shears</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>obsidian</item>
    <item>beacon</item>
    <item>flint</item>
</itemremove>
<itemkeep>
    <item>arrow</item>
    <item>wood</item>
    <item>glass</item>
    <item>golden apple</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item amount="16" material="arrow"/>
        <item amount="16" material="wood"/>
    </kill-reward>
</kill-rewards>
<maxbuildheight>35</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
