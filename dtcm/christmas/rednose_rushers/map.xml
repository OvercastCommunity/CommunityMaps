<map proto="1.4.2">
<name>Rednose Rushers</name> <!-- Rind Rushers -->
<version>1.0</version> <!-- Regular 1.0 -->
<phase>development</phase>
<objective>Destroy the enemy's monument!</objective>
<created>2022-11-24</created>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="6863869b-4b8c-4445-b778-a8e016775ae4"/> <!-- Cazadorian -->
</authors>
<contributors>
    <contributor uuid="ec5ec930-5cf3-4f8a-ad9f-09056aeed71b" contribution="Aesthetic contributions"/> <!-- Tundren --> 
</contributors>
<teams>
    <team id="white" color="white" max="10">White</team>
    <team id="red" color="red" max="10">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow" enchantment="infinity"/>
        <item slot="2" material="stone pickaxe" unbreakable="true">
            <enchantment level="2">efficiency</enchantment>
        </item>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="4" material="stained glass" team-color="true" amount="48"/>
        <item slot="5" amount="32" material="wood" damage="5"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" material="water bucket"/>
        <item slot="28" material="arrow"/>
        <item slot="29" unbreakable="true" material="shears"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" team-color="true" material="leather leggings" />
        <boots unbreakable="true" team-color="true" material="leather boots" />
        <effect duration="4" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <default yaw="90">
        <region>
            <point>6.5,54,21.5</point>
        </region>
    </default>
    <spawn team="red" kit="spawn-kit" yaw="0">
        <regions>
            <point>-31.5,11,56.5</point>
        </regions>
    </spawn>
    <spawn team="white" kit="spawn-kit" yaw="180">
        <regions>
            <point>44.5,11,-13.5</point>
        </regions>
    </spawn>
</spawns>
<destroyables>
    <destroyable name="Red Monument" id="red-monument" show-progress="true" materials="emerald block;redstone block" completion="100%" required="true" owner="red" modes="gold-mode clay-mode">
        <region>
           <cuboid min="10,19,69" max="13,22,72"/>
        </region>
    </destroyable>
    <destroyable name="White Monument" id="white-monument" show-progress="true" materials="emerald block;redstone block" completion="100%" required="true" owner="white" modes="gold-mode clay-mode">
        <region>
           <cuboid min="0,19,-26" max="3,22,-29"/>
        </region>
    </destroyable>
</destroyables>
<modes>
    <mode id="gold-mode" after="20m" name="`6GOLD MONUMENT MODE" material="gold block"/>
    <mode id="clay-mode" after="40m" name="`eCLAY MONUMENT MODE" material="stained clay:4"/>
</modes>
<filters>
    <team id="only-white">white</team>
    <team id="only-red">red</team>
    <not id="deny-void">
       <void/>
    </not>
</filters>
<regions>
    <union id="spawn-protection">
        <rectangle id="red-spawn-protection" min="-27,64" max="-36,49"/>
        <rectangle id="white-spawn-protection" min="40,-6" max="49,-21"/>
    </union>
    <union id="lanes">
        <rectangle id="red-lane" min="15,52" max="-2,63"/>
        <rectangle id="white-lane" min="-2,-9" max="15,-20"/>
        <rectangle id="middle" min="-23,2" max="36,41"/>
    </union>
    <negative id="void-area">
        <region id="spawn-protection"/>
        <region id="lanes"/>
    </negative>
    <!-- filtering -->
    <apply enter="only-white" region="white-spawn-protection" message="You may not enter the opponent's spawn!"/>
    <apply enter="only-red" region="red-spawn-protection" message="You may not enter the opponent's spawn!"/>
    <apply block="never" region="spawn-protection" message="You may not modify the spawns!"/>
    <apply block-place="deny-void" region="void-area" message="You may not build in the void area!"/>
</regions>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>stone pickaxe</tool>
    <tool>iron axe</tool>
    <tool>shears</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>sapling</item>
    <item>redstone block</item>
    <item>emerald block</item>
    <item>coal block</item>
    <item>gold block</item>
    <item>stained clay</item>
    <item>step:7</item>
    <item>quartz stairs</item>
    <item>wool</item>
    <item>snow ball</item>
</itemremove>
<itemkeep>
    <item>wood</item>
    <item>stained glass</item>
    <item>golden apple</item>
    <item>water bucket</item>
    <item>bucket</item>
</itemkeep>
<block-drops>
    <rule>
        <filter>
            <material>wood</material>
        </filter>
        <drops>
            <item chance="0" material="wood"/>
        </drops>
    </rule>
</block-drops>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>28</maxbuildheight>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
        <item amount="16" material="stained glass" team-color="true"/>
        <item amount="8" material="wood" damage="5"/>
    </kill-reward>
</kill-rewards>
</map>