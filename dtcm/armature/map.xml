<map proto="1.5.0">
<name>Armature</name>
<version>1.1</version>
<include id="gapple-kill-reward"/>
<objective>Destroy the enemy's monument and repair yours!</objective>
<created>2022-11-19</created>
<constants>
    <if max-server-version="1.8.8"><constant id="gold-block-name">tile.blockGold.name</constant></if>
    <if min-server-version="1.21"><constant id="gold-block-name">block.minecraft.gold_block</constant></if>
</constants>
<authors>
    <author uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128"/> <!-- zzuf -->
</authors>
<teams>
    <team id="red-team" color="dark red" max="12">Red</team>
    <team id="yellow-team" color="yellow" max="12">Yellow</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" material="stone sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true" enchantment="infinity"/>
        <item slot="2" material="iron pickaxe" unbreakable="true"/>
        <item slot="3" material="shears" unbreakable="true"/>
        <item slot="4" amount="64" material="wool" team-color="true"/>
        <item slot="5" amount="32" material="glass"/>
        <item slot="6" name="`rAuto-Igniting TNT" lore="`cDoes not damage nearby blocks" enchantment="thorns:5" material="tnt"/>
        <item slot="8" material="golden apple"/>
        <item slot="28" material="arrow"/>
        <item slot="30" material="stone spade" unbreakable="true"/>
        <helmet material="leather helmet" team-color="true" unbreakable="true"/>
        <chestplate material="leather chestplate" team-color="true" unbreakable="true"/>
        <leggings material="chainmail leggings" unbreakable="true"/>
        <boots material="leather boots" team-color="true" unbreakable="true"/>
        <effect duration="6" amplifier="255">resistance</effect>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="spawn-kit">
        <regions>
            <point yaw="-90">-62.5,35,25.5</point> <!-- South -->
            <point yaw="-90">-62.5,35,-24.5</point> <!-- North -->
        </regions>
    </spawn>
    <spawn team="yellow-team" kit="spawn-kit">
        <regions>
            <point yaw="90">63.5,35,25.5</point> <!-- South -->
            <point yaw="90">63.5,35,-24.5</point> <!-- North -->
        </regions>
    </spawn>
    <default>
        <regions>
            <point yaw="180">0.5,32,32.5</point> <!-- South -->
            <point>0.5,32,-31.5</point> <!-- North -->
        </regions>
    </default>
</spawns>
<filters>
    <deny id="deny-beacon">
        <material>beacon</material>
    </deny>
    <material id="gold-block">gold block</material>
    <offset id="no-gold" vector="0,8,0" filter="not(gold-block)"/>
    <pulse id="gold-pulse" duration="0.25s" period="40s">
        <after duration="40s">
            <all>
                <match-running/>
                <filter id="no-gold"/>
            </all>
        </after>
    </pulse>
</filters>
<regions>
    <above y="21" id="ceiling"/>
    <apply block="never" region="ceiling"> <!-- intentionally prevent breaking past the build limit as well -->
        <message>{"translate":"match.maxBuildHeight"}</message>
    </apply>
    <point id="middle-spawner-point">0.5,6.5,0.5</point>
    <block id="middle-spawner-area">0,6,0</block>
    <complement id="middle-spawner-greater-area">
        <rectangle min="-2,-2" max="3,3"/>
        <region id="tha-block"/>
    </complement>
    <apply block="never" region="middle-spawner-greater-area" message="You may not edit this area"/>
    <apply block-break="gold-block" block-place="never" region="tha-block" message="`kIt consumes you"/>
    <union id="spawn-areas">
        <union id="red-spawn-areas">
            <rectangle min="-50,30" max="-68,21"/> <!-- South -->
            <rectangle min="-50,-20" max="-68,-29"/> <!-- North -->
        </union>
        <union id="yellow-spawn-areas">
            <rectangle min="51,30" max="69,21"/> <!-- South -->
            <rectangle min="51,-20" max="69,-29"/> <!-- North -->
        </union>
    </union>
    <apply block="never" region="spawn-areas" message="You may not modify the spawn areas!"/>
    <apply enter="red-team" region="red-spawn-areas" message="You may not enter the enemy's spawn!"/>
    <apply enter="yellow-team" region="yellow-spawn-areas" message="You may not enter the enemy's spawn!"/>
    <!-- Monuments -->
    <negative id="not-monuments">
        <union id="monuments">
            <cuboid id="red-monument" min="-77,18,-1" max="-80,15,2"/>
            <cuboid id="yellow-monument" min="78,18,2" max="81,15,-1"/>
        </union>
    </negative>
    <apply block-place="deny(gold-block)" region="not-monuments" message="You may only place `eGold Blocks`r in your damaged monument!"/>
    <apply use="deny-beacon"/>
    <negative id="void-area">
        <rectangle min="-22,28" max="23,-27"/> <!-- Middle -->
        <rectangle min="-45,9" max="-26,-8"/> <!-- Red pit area -->
        <rectangle min="46,-8" max="27,9"/> <!-- Yellow pit area -->
        <region id="spawn-areas"/>
    </negative>
    <apply block="deny(void)" region="void-area" message="You may not edit the void!"/>
    <block id="tha-block">0,8,0</block>
    <translate id="tha-block-hat" offset="0,1,0"><region id="tha-block"/></translate>
    <translate id="tha-block-shoes" offset="0,-1,0"><region id="tha-block"/></translate>
</regions>
<actions>
    <trigger filter="match-started" scope="match">
        <action>
            <fill material="step:4" region="tha-block-hat"/>
            <fill material="sea lantern" region="tha-block"/>
            <fill material="step:12" region="tha-block-shoes"/>
        </action>
    </trigger>
    <!--
    <trigger filter="all(player.target_x=0,player.target_y=8,player.target_z=0)" scope="player">
        <action>
            <message text="It consumes you, XML reader"/>
        </action>
    </trigger>
    -->
    <trigger filter="gold-pulse" scope="match">
        <action filter="no-gold">
            <fill material="gold block" region="tha-block"/>
            <message text="{'text':'','extra':[{'text':'[','color':'white'},{'text':'Au','color':'gold'},{'text':'] ','color':'white'},{'text':'A new ','color':'gray'},{'translate': '${gold-block-name}','color':'yellow'},{'text':' has appeared at ','color':'gray'},{'translate': 'misc.middle','color':'aqua'}]}"/>
        </action>
    </trigger>
    <action id="broken-msg" scope="player">
        <action filter="yellow-team">
            <set var="breaker" value="1"/>
            <switch-scope inner="match">
                <message>
                    <text>{"text":"","extra":[{"text":"[","color":"white"},{"text":"Au","color":"gold"},{"text":"] ","color":"white"},{translate: 'wool.touch.owned.player', with: ['{player}',{"translate": "${gold-block-name}","color":"yellow"},'`eYellow']}],"color":"gray"}</text>
                    <replacements>
                        <player id="player" var="breaker" style="color"/>
                    </replacements>
                </message>
            </switch-scope>
        </action>
        <action filter="red-team">
            <set var="breaker" value="1"/>
            <switch-scope inner="match">
                <message>
                    <text>{"text":"","extra":[{"text":"[","color":"white"},{"text":"Au","color":"gold"},{"text":"] ","color":"white"},{translate: 'wool.touch.owned.player', with: ['{player}',{"translate": "${gold-block-name}","color":"yellow"},'`4Red']}],"color":"gray"}</text>
                    <replacements>
                        <player id="player" var="breaker" style="color"/>
                    </replacements>
                </message>
            </switch-scope>
        </action>
    </action>
</actions>
<destroyables materials="gold block" show-progress="true" required="true" repairable="true">
    <destroyable owner="red-team" name="§4Monument§r" region="red-monument"/>
    <destroyable owner="yellow-team" name="§eMonument§r" region="yellow-monument"/>
</destroyables>
<itemkeep>
    <item>stone sword</item>
    <item>bow</item>
    <item>iron pickaxe</item>
    <item>stone spade</item>
    <item>golden apple</item>
    <item>wool</item>
    <item>glass</item>
    <item>tnt</item>
    <item>arrow</item>
    <item>gold block</item>
    <item>shears</item>
</itemkeep>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>long grass</item>
    <item>red rose:3</item>
    <item>sapling</item>
    <item>gravel</item>
    <item>flint</item>
    <item>stained clay</item>
</itemremove>
<toolrepair>
    <tool>stone sword</tool>
    <tool>arrow</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>stone spade</tool>
    <tool>shears</tool>
</toolrepair>
<block-drops>
    <rule>
        <filter>
            <all>
                <region id="monuments"/>
                <material>gold block</material>
            </all>
        </filter>
        <drops>
            <item chance="0" material="gold block"/>
        </drops>
    </rule>
    <rule>
        <filter>
            <all>
                <region id="tha-block"/>
                <material>gold block</material>
            </all>
        </filter>
        <kit deduct-items="false">
            <action>
                <action id="broken-msg"/>
                <set var="gold_blocks" value="gold_blocks+1"/>
            </action>
            <item material="gold block" prevent-sharing="true"/>
            <effect duration="10s" amplifier="3">slowness</effect>
        </kit>
        <replacement>sea lantern</replacement>
    </rule>
    <rule>
        <filter>
            <any>
                <material>stone:0</material>
                <material>stone:5</material>
                <material>stone:6</material>
                <material>double_step:8</material>
            </any>
        </filter>
        <drops>
            <item chance="1" material="cobblestone"/>
        </drops>
    </rule>
    <rule>
        <filter>
            <material>leaves</material>
        </filter>
        <drops>
            <item chance="0.05" material="apple"/>
        </drops>
    </rule>
</block-drops>
<variables>
    <variable id="breaker" scope="player" exclusive="1"/>
    <variable id="gold_blocks" scope="player" default="0"/>
    <variable id="mon_mode" default="0" scope="match"/>
</variables>
<stats>
    <stat value="gold_blocks" name="`eGold blocks`r broken"/>
</stats>
<tnt>
    <instantignite>true</instantignite>
    <fuse>2s</fuse>
    <blockdamage>false</blockdamage>
    <friendly-defuse>off</friendly-defuse>
</tnt>
<kill-rewards>
    <kill-reward>
        <item material="wool" team-color="true" amount="16"/>
        <item name="`rAuto-Igniting TNT" lore="`cDoes not damage nearby blocks" enchantment="thorns:5" material="tnt"/>
    </kill-reward>
</kill-rewards>
<hunger>
    <depletion>off</depletion>
</hunger>
<disabledamage>
    <damage ally="true" self="false" enemy="false" other="false">block explosion</damage>
</disabledamage>
</map>
