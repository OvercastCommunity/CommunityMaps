<map proto="1.4.0">
<name>Tumbleweed</name>
<version>1.0.0</version>
<objective>Capture the enemy's two wools!</objective>
<phase>development</phase>
<authors>
    <author uuid="0c44ca5a-6a42-49b7-81f2-58dc6d2ae3e9"/> <!-- Xerocoles -->
    <author uuid="b8add1ba-8e13-4673-bc73-4e3ed524d40e"/> <!-- Blazy -->
</authors>
<teams>
    <team id="red" color="dark red" max="40">Red</team>
    <team id="blue" color="blue" max="40">Blue</team>
</teams>
<kits>
    <kit id="spawn">
        <item slot="0" unbreakable="true">iron sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow infinite:1">bow</item>
        <item slot="28">arrow</item>
        <item slot="2" unbreakable="true" enchantment="dig speed:1">iron pickaxe</item>
        <item slot="3" unbreakable="true" enchantment="dig speed:1">iron axe</item>
        <item slot="30" unbreakable="true">iron spade</item>
        <item slot="4" amount="64" damage="3">wood</item>
        <item slot="31" amount="64" damage="3">wood</item>
        <item slot="5" amount="48">glass</item>
        <item slot="7">golden apple</item>
        <item slot="8" amount="64">golden carrot</item>
        <leggings unbreakable="true">chainmail leggings</leggings>
        <potion duration="6" amplifier="255">resistance</potion>
    </kit>
    <kit id="red-kit" parents="spawn">
        <chestplate color="993333">leather chestplate</chestplate>
        <boots color="993333">leather boots</boots>
    </kit>
    <kit id="blue-kit" parents="spawn">
        <chestplate color="334CB2">leather chestplate</chestplate>
        <boots color="334CB2">leather boots</boots>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="-90">
            <cuboid min="-169,57,-43" max="-170,57,-42"/>
        </region>
    </default>
    <spawn team="red" kit="red-kit">
        <regions>
            <cuboid min="-101,9,89" max="-102,9,88" yaw="180"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="blue-kit">
        <regions>
            <cuboid min="-79,9,-173" max="-80,9,-174" yaw="0"/>
        </regions>
    </spawn>
</spawns>
<wools>
    <wool team="blue" color="orange" craftable="false" location="-74,11,72">
        <monument>
            <block>-71.5,10,-165.5</block>
        </monument>
    </wool>
    <wool team="blue" color="yellow" craftable="false" location="-146,15,91">
        <monument>
            <block>-72.5,10,-165.5</block>
        </monument>
    </wool>
    <wool team="red" color="lime" craftable="false" location="-108,11,-158">
        <monument>
            <block>-109.5,10,80.5</block>
        </monument>
    </wool>
    <wool team="red" color="cyan" craftable="false" location="-36,15,-177">
        <monument>
            <block>-108.5,10,80.5</block>
        </monument>
    </wool>
</wools>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
    <not id="no-void">
        <void/>
    </not>
    <not id="deny-blue-wool-room">
        <any>
            <filter id="only-blue"/>
            <filter id="no-chest"/>
        </any>
    </not>
    <not id="deny-red-wool-room">
        <any>
            <filter id="only-red"/>
            <filter id="no-chest"/>
        </any>
    </not>
    <any id="no-chest">
        <material>chest</material>
    </any>
    <any id="only-iron">
        <material>iron block</material>
    </any>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="red-spawn" min="-125,64" max="-81,107"/>
        <rectangle id="blue-spawn" min="-56,-149" max="-100,-192"/>
    </union>
    <union id="wool-rooms">
        <union id="red-wool-rooms"> <!-- Red defends these -->
            <rectangle id="orange-wool-room" min="-65,71" max="-79,84"/>
            <rectangle id="yellow-wool-room" min="-138,80" max="-151,94"/>
        </union>
        <union id="blue-wool-rooms"> <!-- Blue defends these -->
            <rectangle id="lime-wool-room" min="-116,-156" max="-102,-169"/>
            <rectangle id="cyan-wool-room" min="-43,-165" max="-30,-179"/>
        </union>
    </union>
    <apply block="only-iron" region="spawns" message="You may not edit the spawn area!"/>
    <apply block="deny-blue-wool-room" region="blue-wool-rooms"/>
    <apply block="deny-red-wool-room" region="red-wool-rooms"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy team's spawn area!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy team's spawn area!"/>
    <apply enter="only-blue" region="red-wool-rooms" message="You may not enter your own wool room!"/>
    <apply enter="only-red" region="blue-wool-rooms" message="You may not enter your own wool room!"/>
    <apply block-place="no-void" block-break="always" region="everywhere" message="You may not edit the void here!"/>
</regions>
<renewables>
    <renewable rate="2" grow="false" particles="true" sound="true" avoid-entites="true" region="spawns">
        <renew-filter>
            <material>iron block</material>
        </renew-filter>
    </renewable>
</renewables>
<kill-rewards>
    <kill-reward>
        <item>golden apple</item>
    </kill-reward>
    <kill-reward>
        <item amount="20" damage="3">wood</item>
    </kill-reward>
    <kill-reward>
        <item amount="10">glass</item>
    </kill-reward>
</kill-rewards>
<toolrepair>
    <tool>bow</tool>
    <tool>iron sword</tool>
    <tool>iron pickaxe</tool>
    <tool>iron spade</tool>
    <tool>iron axe</tool>
</toolrepair>
<itemremove>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>arrow</item>
    <item>golden carrot</item>
    <item>string</item>
    <item>redstone</item>
    <item>seeds</item>
    <item>wood</item>
    <item>glass</item>
    <item>sapling</item>
    <item>stick</item>
    <item>brown mushroom</item>
</itemremove>
<maxbuildheight>29</maxbuildheight>
<timelock>on</timelock>
</map>
