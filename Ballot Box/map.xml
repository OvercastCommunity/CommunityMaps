    <item>bucket</item>
    <item>fence</item>
    <item>ladder</item>
    <item>trap door</item>
    <item>sign</item>
    <item>stone button</item>
    <item>redstone</item>
    <item>stone plate</item>
    <item>lever</item>
    <item>redstone torch on</item>
    <item>redstone torch off</item>
    <item>diode</item>
    <item>redstone block</item>
    <item>tnt</item>
    <item>stained clay</item>
    <item>arrow</item>
    <item>golden apple</item>
</itemremove>
