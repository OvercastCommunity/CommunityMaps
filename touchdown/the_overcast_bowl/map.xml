<map proto="1.5.0">
<!-- ======================================================================= -->
<!-- |  "The Overcast Bowl" feauring the "Brady GridIron" engine:            -->
<!-- |    - Winner:    Highest score at end of Time Limit                    -->
<!-- |    - Gameplay:  Any player can enter any Endzone                      -->
<!-- ======================================================================= -->
<name>The Overcast Bowl</name>
<version>1.1.1</version>
<variant id="christmas" world="christmas" override="true">The Blizzard Bowl</variant>
<if variant="default">
    <created>2025-05-01</created>
</if>
<if variant="christmas">
    <created>2024-09-22</created>
</if>
<constants>
    <constant id="time-limit">10m</constant>
    <constant id="team-size">11</constant>
    <constant id="team-one-name">BLU</constant>
    <constant id="team-two-name">RED</constant>
    <constant id="team-one-color">blue</constant>
    <constant id="team-two-color">red</constant>
    <constant id="team-one-spawn">-15.5,9,29.5</constant>
    <constant id="team-one-yaw">270</constant>
    <constant id="team-two-spawn">108.5,9,29.5</constant>
    <constant id="team-two-yaw">90</constant>
    <constant id="flag-post">46.5,4,29.5</constant>
    <constant id="flag-color">orange</constant>
    <constant id="gridiron-engine">true</constant>
    <constant id="melee-weapon">wood sword</constant>
    <constant id="indicator-outer-material">stained glass:4</constant>
    <constant id="indicator-inner-material">stained glass:1</constant>
</constants>
<include id="touchdown"/>
<authors>
    <author uuid="f610e558-a3c8-44fb-8622-68cc49dbc18f" contribution="Map"/> <!-- Julianswl -->
    <author uuid="ed9938e6-3b44-4149-88d9-dfa03e733008" contribution="Sidelines"/> <!-- justTNT__ -->
    <author uuid="bad165bd-458b-412e-b2a0-232a5b21f765" contribution="Moral Support"/> <!-- Soleclaw -->
    <author uuid="c25a6f7b-4c42-40da-8cd6-add53f0c84eb" contribution="XML Refinements/Adjustments"/> <!-- arcadeboss -->
</authors>
<contributors>
    <contributor uuid="c31e94b2-7678-4551-847e-989c1423323a" contribution="Tom Brady Author"/> <!-- TommyHillfigger -->
    <contributor uuid="b390b87a-47e8-40d8-968a-9e7e2582a88b" contribution="Tom Brady Author"/> <!-- MewTwoKing -->
    <contributor uuid="2fd57dff-4cff-4b60-96a4-d26e37759c03" contribution="Tom Brady XML"/> <!-- Furrie -->
    <contributor uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128" contribution="Bridge Snippets"/> <!-- zzuf -->
    <contributor uuid="e419983c-bb20-438d-b900-717f131a272f" contribution="XML Message Names"/> <!-- KuNet -->
</contributors>
<spawns>
    <default>
        <region yaw="180">
            <point>46.5,53,139.5</point>
        </region>
    </default>
</spawns>
<regions>
    <apply velocity="-1,1,0"> <!-- red -->
        <region>
            <cuboid min="104,8,20" max="106,10,39"/>
        </region>
    </apply>
    <apply velocity="1,1,0"> <!-- blue -->
        <region>
            <cuboid min="-13,8,20" max="-11,10,39"/>
        </region>
    </apply>
    <cuboid id="playing-field" min="-14,0,3" max="107,7,56"/>
    <cuboid id="team-one-portal" min="-14,0,3" max="-2,4,56"/> <!-- where team two scores -->
    <cuboid id="team-two-portal" min="95,0,3" max="107,4,56"/> <!-- where team one scores -->
    <cuboid id="flag-indicator-upper" min="45,13,28" max="48,18,31"/>
    <cuboid id="flag-indicator-lower" min="45,10,28" max="48,12,31"/>
    <cuboid id="flag-indicator-upper-inner" min="46,13,29" max="47,18,30"/>
    <cuboid id="flag-indicator-lower-inner" min="46,10,29" max="47,12,30"/>
</regions>
</map>
