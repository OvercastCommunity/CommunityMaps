    <kit id="custom-kit" parent="main-kit">
        <item slot="7" material="potion" damage="16394" name="Pokey Porky" lore="Slows your enemies" amount="2">
            <effect duration="7s" amplifier="2">slowness</effect>
        </item>
        <effect>speed</effect>
    </kit>
    <take filter="has-flag">
        <kit>
            <effect>slowness</effect>
        </kit>
    </take>
    <lend filter="player_state=${carry}">
        <kit>
            <effect duration="3s" amplifier="2">jump boost</effect>
            <effect duration="7s">speed</effect>
            <effect duration="12s">strength</effect>
        </kit>
    </lend>
