<map proto="1.4.0">
<name>La Piazza</name>
<version>1.0.1</version>
<gamemode>ffa</gamemode>
<objective>Get the most kills possible!</objective>
<authors>
    <author uuid="1aad55f7-2dea-4f22-85ca-ad9de3a78609" contribution="Map author and creator"/> <!-- Technodono -->
</authors>
<contributors>
    <contributor uuid="ec5ec930-5cf3-4f8a-ad9f-09056aeed71b" contribution="Built the clock tower"/> <!-- Tundren -->
</contributors>
<players max="32"/>
<rules>
    <rule>Fall damage is disabled!</rule>
</rules>
<time>8m</time>
<score>
    <kills>1</kills>
</score>
<spawns>
    <default>
        <regions>
            <block>-38,19,79</block>
        </regions>
    </default>
    <spawn spread="true" kit="spawn">
        <regions yaw="0">
            <block>-18,13,-8</block>
            <block>-38,13,-9</block>
            <block>-58,13,-8</block>
            
            <block>-18,18,-8</block>
            <block>-58,18,-8</block>
            
            <block>-58,13,36</block>
            <block>-18,13,36</block>
            
            <block>-58,18,36</block>
            <block>-18,18,36</block>
            
            <block>-8,13,-2</block>
            <block>-70,13,-1</block>
        </regions>
        <regions yaw="90">
            <block>26,13,76</block>
            <block>27,13,56</block>
            <block>26,13,36</block>
            
            <block>26,18,76</block>
            <block>26,18,36</block>
            
            <block>20,13,26</block>
            
            <block>-59,13,56</block>
        </regions>
        <regions yaw="45">
            <block>17,13,1</block>
        </regions>
        <regions yaw="-45">
            <block>-94,13,0</block>
        </regions>
        <regions yaw="-90">
            <block>-102,13,76</block>
            <block>-103,13,56</block>
            <block>-102,13,36</block>
            
            <block>-102,18,76</block>
            <block>-102,18,36</block>
            
            <block>-96,13,26</block>
            
            <block>-16,13,56</block>
        </regions>
        <regions yaw="180">
            <block>-25,13,76</block>
            <block>-51,13,76</block>
            
            <block>-25,19,75</block>
            <block>-51,19,75</block>
            
            <block>-38,13,35</block>
        </regions>
    </spawn>
</spawns>
<kits>
    <kit id="spawn" force="true">
        <item slot="0" name="`6`l`oSabre" unbreakable="true">stone sword</item>
        <item slot="1">bow</item>
        <item slot="2" amount="6" projectile="arrow" name="`rCrossbow" lore="`r`7Right-click to fire!" material="firework charge"/>
        <item slot="8" amount="10">arrow</item>
        <potion duration="2" amplifier="25">heal</potion>
        <potion duration="2" amplifier="25">damage resistance</potion>
        <chestplate color="7f7f7f" material="leather chestplate"/>
        <leggings color="f2d8b2" material="leather leggings"/>
        <boots color="262626" material="leather boots"/>
        <!-- Important! gamemode -->
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<projectiles> 
    <projectile
        id="arrow"
        name="crossbow bolt"
        velocity="4"
        damage="7"
        throwable="true"
        cooldown="3s"/>
</projectiles>
<filters>
    <any id="useable">
        <material>stone button</material>
        <material>dark oak door</material>
        <material>iron door</material>
    </any>
    <any id="iron-door">
        <material>stone button</material>
        <material>iron door</material>
    </any>
    <participating id="playing"/>
</filters>
<regions>
    <cuboid id="jump" min="-39,13,69" max="-36,14,72"/>
    <cuboid id="obspawn" min="-33,19,77.5" max="-41,24,83"/>
    <apply block="never" region="everywhere"/>
    <apply use="useable" region="everywhere"/>
    <apply block-physics="iron-door" region="everywhere"/>
    <apply velocity="0,1.5,0" region="jump"/>
    <apply enter="never" filter="playing" region="obspawn" message="You may not enter the observer's spawn"/>
</regions>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>firework charge</item>
    <item>golden apple</item>
</itemremove>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
<timelock>on</timelock>
<hunger>
    <depletion>off</depletion>
</hunger>
<killreward>
    <item amount="6">arrow</item>
    <item amount="3" projectile="arrow" name="`rCrossbow" lore="`r`7Right-click to fire!" material="firework charge"/>
    <item amount="1">golden apple</item>
</killreward>
</map>