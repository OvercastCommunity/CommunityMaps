<?xml version="1.0"?>
<map proto="1.4.0">
<name>Keipha CTW</name>
<version>1.1.0</version>
<objective>Capture the wool!</objective>
<phase>development</phase>
<gamemode>ctw</gamemode>
<authors>
    <author uuid="1bac62d3-1553-41b6-a70b-613396071c5d"/> <!--  zZKiIng  -->
    <author uuid="fe3608b7-d105-4029-8800-34b3147065b6"/> <!--  Polizei5  -->
</authors>
<contributors>
    <contributor uuid="44072e9e-77c1-4afd-9c7d-39d5cb143fa0" contribution="contributing"/> <!--  Mami  -->
</contributors>
<teams>
    <team id="blue-team" color="blue" max="35">Blue</team>
    <team id="red-team" color="red" max="35">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" material="iron sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true" enchantment="arrow infinite"/>
        <item slot="2" material="iron pickaxe" unbreakable="true"/>
        <item slot="3" material="iron axe" unbreakable="true"/>
        <item slot="4" material="wood" damage="5" amount="64"/>
	    <item slot="6" material="glass" amount="64"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" material="golden carrot" amount="64"/>
        <item slot="28" material="arrow"/>
        <item slot="31" material="wood" damage="5" amount="64"/>
        <item slot="22" material="wood" damage="5" amount="64"/>
        <helmet material="gold helmet" unbreakable="true"/>
        <chestplate material="chainmail chestplate" unbreakable="true"/>
     </kit>
     <kit id="blue-kit" parent="spawn-kit">
        <leggings material="leather leggings" color="2471A3" unbreakable="true"/>
        <boots material="leather boots" color="2471A3" unbreakable="true"/>
	<item slot="5" material="stained clay" damage="11" amount="64"/>
    </kit>
    <kit id="red-kit" parent="spawn-kit">
        <leggings material="leather leggings" color="CB4335" unbreakable="true"/>
        <boots material="leather boots" color="CB4335" unbreakable="true"/>
	<item slot="5" material="stained clay" damage="14" amount="64"/>
    </kit>
</kits>
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="-90">
        <region>
			<point>-87,83,-150</point>
        </region>
    </spawn>
    <spawn team="red-team" kit="red-kit" yaw="90">
        <region>
			<point>69,83,86</point>
        </region>
    </spawn>
    <default>
        <region>
            <cylinder base="-9,47,-32" radius="1" height="0" yaw="0"/>
        </region>
    </default>
</spawns>
<filters>
    <team id="only-blue">blue-team</team>
    <team id="only-red">red-team</team>
    <not id="not-void">
        <void/>
    </not>
    <all id="reds-woolrooms-filter">
        <team>blue-team</team>
        <filter id="woolrooms-filter"/>
    </all>
    <all id="blues-woolrooms-filter">
        <team>red-team</team>
        <filter id="woolrooms-filter"/>
    </all>
    <any id="woolrooms-filter">
        <material>web</material>
        <material>wood</material>
    </any>
	<not id="wood-bridge">
		<any>
			<material>wood step:0</material>
			<material>wood double step:0</material>
		</any>
	</not>
	<any id="iron-blocks">
		<material>iron block</material>
	</any>
</filters>
<regions>
    <block id="purple-wool">-83,15,-143</block>
    <block id="magenta-wool">-83,15,-157</block>
    <block id="cyan-wool">65,15,79</block>
    <block id="lightblue-wool">65,15,93</block>
    <union id="spawns">
		<rectangle id="blue-spawn" min="-90,-160" max="-65,-100"/>
		<rectangle id="red-spawn" min="73,97" max="48,37"/>
    </union>
	<union id="spawn-drop">
		<rectangle id="blue-drop" min="-84,-152" max="-89,-147"/>
		<rectangle id="red-drop" min="72,84" max="67,89"/>
	</union>
    <union id="blues-woolrooms"> <!-- blue defends / red attacks -->
        <cylinder id="blue-team-lightblue-wool" base="-33,0,-212" radius="12" height="35"/> <!-- light blue woolroom -->
        <cylinder id="blue-team-cyan-wool" base="24,0,-200" radius="12" height="35"/> <!-- cyan woolroom -->
    </union>
    <union id="reds-woolrooms"> <!-- red defends / blue attacks -->
        <cylinder id="red-team-magenta-wool" base="16,0,149" radius="12" height="35"/>  <!-- magenta woolroom -->
        <cylinder id="red-team-purple-wool" base="-41,0,137" radius="12" height="35"/> <!-- purple woolroom -->
	</union>
    <negative id="not-build-area">
        <union id="build-area">
            <rectangle min="33,34" max="18,49"/> <!-- spawn to first Island red-->
	        <rectangle min="-40,55" max="-51,34"/> <!-- side red -->
            <rectangle min="33,34" max="-51,-98"/> <!-- mid-->
            <rectangle min="33,-119" max="22,-98"/> <!-- blue side -->
	    <rectangle min="-36,-113" max="-51,-98"/> <!-- spawn to frist Island blue-->
        </union>
    </negative>
    <!-- applicators -->
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-red" region="blues-woolrooms" message="You may not enter your own wool room!"/>
    <apply enter="only-blue" region="reds-woolrooms" message="You may not enter your own wool room!"/>
    <apply block-break="iron-blocks" block-place="never" region="spawns" message="You may not edit spawn!"/>
    <apply block="blues-woolrooms-filter" region="blues-woolrooms" message="You may not edit the wool room!"/>
    <apply block="reds-woolrooms-filter" region="reds-woolrooms" message="You may not edit the wool room!"/>
    <apply block-place="not-void" block-break="wood-bridge" region="not-build-area" message="You may not edit the void"/>
</regions>
<damage>
	<deny>
		<all>
			<cause>fall</cause>
			<region id="spawn-drop"/>
		</all>
	</deny>
</damage>
<wools craftable="false">
	<wool team="blue-team" color="purple" monument="purple-wool" location="-41,10,136"/>
	<wool team="blue-team" color="magenta" monument="magenta-wool" location="16,10,148"/>
	<wool team="red-team" color="light blue" monument="lightblue-wool" location="34,10,-212"/>
	<wool team="red-team" color="cyan" monument="cyan-wool" location="23,10,-200"/>
</wools>
<itemremove>
   	<item>golden carrot</item>
	<item>gold helmet</item>
	<item>chainmail chestplate</item>
	<item>leather leggings</item>
	<item>leather boots</item>
	<item>wood</item>
	<item>glass</item>
	<item>stained clay</item>
	<item>string</item>
	<item>38</item>
	<item>seeds</item>
	<item>sapling</item>
</itemremove>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>arrow</tool>
</toolrepair>
<maxbuildheight>32</maxbuildheight>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
        <item material="wood" damage="5" amount="32"/>
		<item material="glass" amount="16"/>
    </kill-reward>
</kill-rewards>
</map>

