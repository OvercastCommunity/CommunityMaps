<map proto="1.4.0">
<name>Royal Rumble II</name>
<version>2.0.1</version>
<objective>Score your flag in the enemy hoops, Most points wins!</objective>
<authors>
    <author uuid="1aad55f7-2dea-4f22-85ca-ad9de3a78609"/> <!--  Technodono  -->
</authors>
<rules>
    <rule>Fall damage is disabled!</rule>
</rules>
<gamemode>ctf</gamemode>
<game>Flag Runners</game>
<!--  Tips -->
<broadcasts>
    <tip after="45s" every="2m">Make sure you defend your goal from the enemy carrier!</tip>
    <tip after="15s" every="1m">Your goals are on enemy turf! Take a team with you to help you survive</tip>
</broadcasts>
<!--  Teams and Kits  -->
<teams>
    <team id="red-team" color="red" max="7">Red</team>
    <team id="blue-team" color="blue" max="7">Blue</team>
</teams>
<kits>
    <kit id="spawn">
        <item slot="0" unbreakable="true">iron sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" amount="6" projectile="arrow" name="`rCrossbow" lore="`r`7Right-click to fire!" material="firework charge"/>
        <item slot="3">golden apple</item>
        <item slot="8" amount="12">arrow</item>
        <chestplate unbreakable="true">chainmail chestplate</chestplate>
        <boots unbreakable="true">chainmail boots</boots>
		<potion duration="2" amplifier="10">regeneration</potion>
		<potion duration="2" amplifier="10">damage_resistance</potion>
    </kit>
    <kit id="red-kit" parents="spawn">
        <helmet color="ff0000" unbreakable="true">leather helmet</helmet>
        <leggings color="ff0000" unbreakable="true">leather leggings</leggings>
    </kit>
    <kit id="blue-kit" parents="spawn">
        <helmet color="004aff" unbreakable="true">leather helmet</helmet>
        <leggings color="004aff" unbreakable="true">leather leggings</leggings>
    </kit>
</kits>
<!--  Spawns and respawns  -->
<spawns>
    <spawn team="red-team" kit="red-kit" yaw="-90">
        <region>
            <block id="red-spawnpoint">-53,8,0</block>
        </region>
    </spawn>
    <spawn team="blue-team" kit="blue-kit" yaw="90">
        <region>
            <block id="blue-spawnpoint">53,8,0</block>
        </region>
    </spawn>
    <default yaw="0">
        <region>
            <block id="obs-spawnpoint">0,12,20</block>
        </region>
    </default>
</spawns>
<projectiles> 
    <projectile
        id="arrow"
        name="crossbow bolt"
        velocity="4"
        damage="7"
        throwable="true"
        cooldown="3s"/>
</projectiles>
<!-- spawn region stuff   -->
<regions>
    <apply block="never">
        <everywhere/>
    </apply>
    <!-- Enter -->
    <apply enter="blue-not-flag" region="blue-spawn" message="You may not enter the opposing team's spawn!"/>
    <apply enter="red-not-flag" region="red-spawn" message="You may not enter the opposing team's spawn!"/>
    <!-- Apply Kits -->
	<apply kit="red-kit" region="blue-rings" filter="only-red"/>
	<apply kit="blue-kit" region="red-rings" filter="only-blue"/>
	<!-- Apply vel -->
    <apply velocity="-0.5,0.7,0.0" region="blue-pads"/>
    <apply velocity="0.5,0.7,0.0" region="red-pads"/>
    <apply velocity="0.0,1.2,-0.4" region="mid-pad-near"/>
    <apply velocity="0.0,1.2,0.4" region="mid-pad-far"/>
    <apply velocity="0.0,1.4,0.0" region="center-pad"/>
    <!--  Goal regions  -->
    <union id="red-rings">
        <cuboid id="red-ring-left" min="-40,11,-12" max="-41,18,-6"/>
        <cuboid id="red-ring-right" min="-40,11,7" max="-41,18,13"/>
    </union>
    <union id="blue-rings">
        <cuboid id="blue-ring-left" min="41,11,-12" max="42,18,-6"/>
        <cuboid id="blue-ring-right" min="41,11,7" max="42,18,13"/>
    </union>
    <!--  Spawns regions  -->
    <rectangle id="blue-spawn" min="50,-2" max="56,3"/>
    <rectangle id="red-spawn" min="-49,3" max="-55,-2"/>
    <!--  Jumpads and Boost lanes  -->
    <union id="blue-pads">
         <cuboid id="blue-pad-left" min="23,9,18" max="26,9.5,13"/>
         <cuboid id="blue-pad-right" min="23,9,-17" max="26,9.5,-12"/>
    </union>
    <union id="red-pads">
        <cuboid id="red-pad-left" min="-22,9,18" max="-25,9.5,13"/>
        <cuboid id="red-pad-right" min="-22,9,-17" max="-25,9.5,-12"/>
    </union>
    <cuboid id="mid-pad-near" min="-1,11,7" max="2,11.5,8"/>
    <cuboid id="mid-pad-far" min="2,11,-7" max="-1,11.5,-6"/>
    <cuboid id="center-pad" min="-0.5,9,-0.5" max="1.5,9.5,1.5"/>
</regions>
<portals>
    <!-- portals to ref chairs -->
    <portal region="red-rings" destination="blue-spawnpoint" filter="only-blue"/>
    <portal region="blue-rings" destination="red-spawnpoint" filter="only-red"/>
</portals>
<!--  Filters  -->
<filters>
    <all id="blue-not-flag">
        <team id="only-blue">blue-team</team>
        <not id="not-blue-carrying-flag">
            <carrying-flag id="-blue-carrying-flag">blue-flag</carrying-flag>
        </not>
    </all>
    <all id="red-not-flag">
        <team id="only-red">red-team</team>
        <not id="not-red-carrying-flag">
            <carrying-flag id="-red-carrying-flag">red-flag</carrying-flag>
        </not>
    </all>
</filters>

<!--  Tools and Misc item stuff  -->
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather leggings</item>
    <item>chainmail boots</item>
    <item>chainmail chestplate</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>firework charge</item>
</itemremove>
<disabledamage>
    <!-- Disable fall damage -->
    <damage>fall</damage>
</disabledamage>
<hunger>
    <depletion>off</depletion>
</hunger>
<!-- Gamemode -->
<game-mode>adventure</game-mode>
<!-- Keep it at night -->
<timelock>on</timelock>
<!-- Scoring and Flag settings  -->
<killreward>
    <item amount="4">arrow</item>
    <item amount="1">golden apple</item>
    <item amount="3" projectile="arrow" name="`rCrossbow" lore="`r`7Right-click to fire!" material="firework charge"/>
</killreward>
<score>
    <mercy>3</mercy>
</score>
<time overtime="1s" max-overtime="2m">8m</time>
<flags>
    <flag id="red-flag" name="Red Flag" color="red" pickup-filter="only-red" required="false" carry-message="Carry this to the enemies goal!">
        <post id="red-post" recover-time="5s" respawn-time="7s">-41,9,0</post>
        <net points="1" region="blue-rings" capture-filter="only-red"/>
    </flag>
    <flag id="blue-flag" name="Blue Flag" color="blue" pickup-filter="only-blue" required="false" carry-message="Carry this to the enemies goal!">
        <post id="blue-post" recover-time="5s" respawn-time="7s">41,9,0</post>
        <net points="1" region="red-rings" capture-filter="only-blue"/>
    </flag>
</flags>
</map>
