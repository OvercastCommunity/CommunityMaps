<map proto="1.4.0">
<name>Hirap</name>
<version>1.0</version>
<objective>Capture the Flag!</objective>
<gamemode>ctf</gamemode>
<phase>development</phase>
<time result="score" overtime="1m" max-overtime="2m">12m</time>
<authors>
    <author uuid="97d1cc45-0f69-482b-9974-09351aef9dfa"/> <!-- lunaceee -->
    <author uuid="2d372806-0e62-4e44-87f7-2394540f5203"/> <!-- Tkes -->
    <author uuid="ec5ec930-5cf3-4f8a-ad9f-09056aeed71b"/> <!--Tundren-->
</authors>
<contributors>
    <contributor uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06" contribution="Feedback"/> <!--strangey-->
</contributors>
<broadcasts>
    <tip after="1s" every="120s">The Right side Flags are harder to get to, but easier to escape from!</tip>
    <tip after="1s" every="120s">The Left side Flags are easier to get to, but harder to escape from!</tip>
</broadcasts>
<teams>
    <team id="blue" color="blue" max="12">Blue</team>
    <team id="red" color="dark red" max="12">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="16" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="3">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="5" amplifier="10">damage resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="flag-pickup" force="true">
        <effect duration="1" amplifier="2">absorption</effect>
        <effect duration="200" amplifier="1">slowness</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="reset-pickup" force="true">
        <effect duration="0" amplifier="1">slowness</effect>
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<!--SPAWNS-->
<spawns>
    <default>
        <region yaw="90">
            <cylinder base="130.5,57,31.5" height="1" radius="0.5"/>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <region yaw="180">
            <cylinder base="132.5,18,100.5" height="0" radius="0.5"/>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <region yaw="0">
            <cylinder base="128.5,18,-37.5" height="0" radius="0.5"/>
        </region>
    </spawn>
</spawns>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
</filters>
<!--Flags-->
<flags>
    <!--red team flags-->
    <!--Hard flag-->
    <flag id="red-flag1" name="Right Flag" owner="red" color="red"
      pickup-filter="only-blue" recover-time="15s" respawn-time="15s"
      pickup-kit="flag-pickup" drop-kit="reset-pickup">
        <post yaw="0">156,14,-15</post>
        <net points="1">
            <region>
                <cylinder base="135.5,7,78.5" radius="4" height="2"/>
            </region>
            <capture-filter>
                <not>
                    <flag-carried>blue-flag1</flag-carried>
                </not>
            </capture-filter>
        </net>
    </flag>
    <!--easy flag-->
    <flag id="red-flag2" name="Left Flag" owner="red" color="red"
      pickup-filter="only-blue" recover-time="15s" respawn-time="15s"
       pickup-kit="flag-pickup" drop-kit="reset-pickup">
        <post yaw="0">110,14,-10</post>
        <net points="1">
            <region>
                <cylinder base="135.5,7,78.5" radius="4" height="2"/>
            </region>
            <capture-filter>
                <not>
                    <flag-carried>blue-flag2</flag-carried>
                </not>
            </capture-filter>
        </net>
    </flag>
    <!--Blue team flags-->
    <!--hard flag-->
    <flag id="blue-flag1" name="Right Flag" owner="blue" color="blue"
      pickup-filter="only-red" 
     pickup-kit="flag-pickup" drop-kit="reset-pickup">
        <post yaw="180">104,14,77</post>
        <net points="1">
            <region>
                <cylinder base="125.5,7,-15.5" radius="4" height="2"/>
            </region>
            <capture-filter>
                <not>
                    <flag-carried>red-flag1</flag-carried>
                </not>
            </capture-filter>
        </net>
    </flag>
    <!--Easy Flag-->
    <flag id="blue-flag2" name="Left Flag" owner="blue" color="blue"
        pickup-filter="only-red" recover-time="15s" respawn-time="15s"
        pickup-kit="flag-pickup" drop-kit="reset-pickup">
        <post yaw="180">150,14,72</post>
        <net points="1">
            <region>
                <cylinder base="125.5,7,-15.5" radius="4" height="2"/>
            </region>
            <capture-filter>
                <not>
                <flag-carried>red-flag2</flag-carried>
                </not>
            </capture-filter>
        </net>
    </flag>
</flags>
<score>
    <mercy>5</mercy>
</score>
<spawners>
    <spawner id="gapple-spawner" delay="8s">
        <spawn-region>
            <point>130,9,31</point>
        </spawn-region>
        <player-region>
            <cylinder base="130.5,9,31.5" radius="3" height="6"/>
        </player-region>
        <item material="golden apple"/>
    </spawner>
</spawners>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="8" material="arrow"/>
</kill-reward>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
