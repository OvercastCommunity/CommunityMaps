<!--  Filters  -->
<filters>
    <not id="no-flag">
        <same-team>
            <carrying-flag>flag</carrying-flag>
        </same-team>
    </not>
    <team id="only-blue">blue-team</team>
    <team id="only-red">red-team</team>
    <all id="blue-no-flag">
        <not>
            <carrying-flag>flag</carrying-flag>
        </not>
        <team>blue-team</team>
    </all>
    <all id="red-no-flag">
        <not>
            <carrying-flag>flag</carrying-flag>
        </not>
        <team>red-team</team>
    </all>
</filters>
<!--  Spawners  -->
