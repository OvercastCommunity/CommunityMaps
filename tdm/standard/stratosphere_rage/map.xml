<?xml version="1.0"?>
<map proto="1.4.0">
<name>Stratosphere Rage</name>
<version>1.0</version>
<objective>Be the team with the most kills after 8 minutes!</objective>
<gamemode>cp</gamemode>
<gamemode>rage</gamemode>
<authors>
    <author uuid="6863869b-4b8c-4445-b778-a8e016775ae4"/>
    <!-- Cazadorian -->
</authors>
<contributors>
    <contributor uuid="5c79d2c9-a4f0-4343-a84b-e1720f13009b" contribution="Made my XML actually work"/> <!-- CoWinkKeyDinkInc -->
</contributors>
<rules>
    <rule>Fall damage is disabled!</rule>
</rules>
<time>8m</time>
<score>
    <kills>1</kills>
    <deaths>1</deaths>
</score>
<rage/>
<teams>
    <team id="red" color="red" max="20">Red</team>
    <team id="blue" color="blue" max="20">Blue</team>
</teams>
<spawns>
    <spawn team="red" kit="teams" yaw="0">
        <regions>
            <region id="red-spawn"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="teams" yaw="180">
        <regions>
            <region id="blue-spawn"/>
        </regions>
    </spawn>
    <default yaw="90">
        <regions>
            <point>0.5,130,0.5</point>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="teams">
        <item slot="0" unbreakable="true" enchantment="damage all:10" lore="`aInsta kill!">gold sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow damage:10" lore="`aInsta kill!">bow</item>
        <item slot="2" amount="2">arrow</item>
        <effect duration="5">speed</effect>
        <!-- change this back to instant health once we figure out how that works -->
        <effect duration="3" amplifier="100">regeneration</effect>
        <effect duration="3" amplifier="100">damage resistance</effect>
        <helmet material="leather helmet" team-color="true" unbreakable="true"/>
        <chestplate material="leather chestplate" team-color="true" unbreakable="true"/>
        <leggings material="leather leggings" team-color="true" unbreakable="true"/>
        <boots material="leather boots" attributes="generic.movementSpeed:base:0.40" team-color="true" unbreakable="true"/>
    </kit>
</kits>
<broadcasts>
    <tip after="1s" every="3m">Kills are worth 1 point and the Pit is worth 0.5 points per second!</tip>
</broadcasts>
<regions>
    <point id="red-spawn">0,78,-71</point>
    <point id="blue-spawn">0,78,74</point>
    <union id="jump-pads">
        <union id="red-jump-pads">
            <cuboid id="red-left-main" min="30,78,-33" max="31,80,-30"/> <!-- +x -->
            <cuboid id="red-left-island" min="49,85,-25" max="46,87,-26"/> <!-- +z -->
            <cuboid id="red-spawn-jump" min="2,78,-61" max="-1,80,-62"/> <!-- +z -->
            <cuboid id="red-right-main" min="-30,78,-30" max="-29,80,-33"/> <!-- -x -->
            <cuboid id="red-right-island" min="-45,85,-25" max="-48,87,-26"/> <!-- +z -->
        </union>
        <union id="blue-jump-pads">
            <cuboid id="blue-left-main" min="-30,78,36" max="-29,80,33"/> <!-- -x -->
            <cuboid id="blue-left-island" min="-48,85,28" max="-45,87,29"/> <!-- -z -->
            <cuboid id="blue-spawn-jump" min="-1,78,65" max="2,80,64"/> <!-- -z -->
            <cuboid id="blue-right-main" min="31,78,33" max="30,80,36"/> <!-- +x -->
            <cuboid id="blue-right-island" min="46,85,28" max="49,87,29"/> <!-- -z -->
        </union>
        <union id="middle-jump-pads">
            <cuboid id="east-island" min="41,93,3" max="42,95,0"/> <!-- -x -->
            <cuboid id="west-island" min="-40,93,0" max="-41,95,3"/> <!-- +x -->
            <cuboid id="west-bottom" min="6,67,0" max="5,68,3"/> <!-- -x +y -->
            <cuboid id="east-bottom" min="-5,67,3" max="-4,68,0"/> <!-- +x +y -->
        </union>
    </union>
    <apply velocity="@-2.5,1.3,0" region="blue-left-main"/>
    <apply velocity="@-2.5,1.3,0" region="red-right-main"/>
    <apply velocity="@2.5,1.3,0" region="blue-right-main"/>
    <apply velocity="@2.5,1.3,0" region="red-left-main"/>
    <apply velocity="@0,1.7,-5" region="blue-left-island"/>
    <apply velocity="@0,1.7,5" region="red-right-island"/>
    <apply velocity="@0,1.7,-5" region="blue-right-island"/>
    <apply velocity="@0,1.7,5" region="red-left-island"/>
    <apply velocity="@3,1.5,0" region="west-island"/>
    <apply velocity="@-3,1.5,0" region="east-island"/>
    <apply velocity="@-0.2,1.6,0" region="west-bottom"/>
    <apply velocity="@0.2,1.6,0" region="east-bottom"/>
    <apply velocity="@0,0.8,-3" region="blue-spawn-jump"/>
    <apply velocity="@0,0.8,3" region="red-spawn-jump"/>
    <apply block="never" region="everywhere"/>
</regions>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>glass bottle</item>
    <item>potion</item>
    <item>arrow</item>
</itemremove>
<toolrepair>
    <tool>gold sword</tool>
    <tool>bow</tool>
</toolrepair>
<kill-reward>
    <item amount="2" material="arrow"/>
</kill-reward>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
<hunger>
    <depletion>off</depletion>
</hunger>
<control-points capture-time="1s" incremental="true" neutral-state="false" show-progress="true" required="false" scaled-time="true" time-multiplier="0.5">
    <control-point name="Pit" points="0.5">
        <capture-region>
            <cuboid min="4,67,-2" max="-3,69,5"/>
        </capture-region>
        <progress-display-region>
            <cuboid min="4,66,-2" max="-3,67,5"/>
        </progress-display-region>
        <owner-display-region>
            <cuboid min="0,70,1" max="0,97,1"/>
        </owner-display-region>
    </control-point>
</control-points>
</map>
