<map proto="1.5.0">
<name>Cornucopia</name>
<version>1.0.4</version>
<variant id="green" override="true" world="green">Green Cornucopia</variant>
<variant id="purple" override="true" world="purple">Purple Cornucopia</variant>
<constants>
    <if variant="default,purple">
        <constant id="time-limit">3m</constant>
        <constant id="wb-appear">50s</constant>
        <constant id="wb-start">1m</constant>
        <constant id="wb-closing-duration">90s</constant>
    </if>
    <if variant="default">
        <constant id="team-size">12</constant>
        <constant id="obs-spawn">0.5,63,0.5</constant>
        <constant id="obs-spawn-yaw">-90</constant>
        <constant id="blue-spawn">-18.5,4,26.5</constant>
        <constant id="blue-spawn-yaw">-135</constant>
        <constant id="red-spawn">-18.5,4,-25.5</constant>
        <constant id="red-spawn-yaw">-45</constant>
        <constant id="maxbuildheight">18</constant>
    </if>
    <if variant="green">
        <constant id="team-size">16</constant>
        <constant id="obs-spawn">0.5,66,0.5</constant>
        <constant id="obs-spawn-yaw">180</constant>
        <constant id="blue-spawn">23.5,5,23.5</constant>
        <constant id="blue-spawn-yaw">135</constant>
        <constant id="red-spawn">-22.5,5,23.5</constant>
        <constant id="red-spawn-yaw">-135</constant>
        <constant id="maxbuildheight">20</constant>
        <constant id="time-limit">4m</constant>
        <constant id="wb-appear">1m50s</constant>
        <constant id="wb-start">2m</constant>
        <constant id="wb-closing-duration">60s</constant>
    </if>
    <if variant="purple">
        <constant id="team-size">8</constant>
        <constant id="obs-spawn">0.5,65,0.5</constant>
        <constant id="obs-spawn-yaw">90</constant>
        <constant id="blue-spawn">0.5,11,-24.5</constant>
        <constant id="blue-spawn-yaw">0</constant>
        <constant id="red-spawn">0.5,11,25.5</constant>
        <constant id="red-spawn-yaw">180</constant>
        <constant id="maxbuildheight">22</constant>
    </if>
</constants>
<objective>Eliminate the other team before the time is up!</objective>
<gamemode>blitz</gamemode>
<authors>
    <author uuid="644521d7-9437-47c1-b1d2-698eb757df3d"/> <!-- minuyo -->
</authors>
<contributors>
    <contributor uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128" contribution="XML"/> <!-- zzuf -->
</contributors>
<broadcasts>
    <alert after="1s">Border starts closing in at `f${wb-start}`r!</alert>
    <alert after="${wb-start}">The border is `c`lclosing`r!</alert>
</broadcasts>
<teams>
    <team id="blue-team" color="blue" dye-color="blue" max="${team-size}">Blue</team>
    <team id="red-team" color="dark red" dye-color="red" max="${team-size}">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <helmet material="leather helmet" team-color="true" unbreakable="true"/>
        <chestplate material="leather chestplate" team-color="true" unbreakable="true"/>
        <leggings material="leather leggings" team-color="true" unbreakable="true"/>
        <boots material="leather boots" team-color="true" unbreakable="true"/>
        <effect duration="2" amplifier="255">resistance</effect>
    </kit>
</kits>
<spawns>
    <spawn team="blue-team" kit="spawn-kit" yaw="${blue-spawn-yaw}">
        <region>
            <point>${blue-spawn}</point>
        </region>
    </spawn>
    <spawn team="red-team" kit="spawn-kit" yaw="${red-spawn-yaw}">
        <region>
            <point>${red-spawn}</point>
        </region>
    </spawn>
    <default yaw="${obs-spawn-yaw}">
        <region>
            <cylinder id="obs-spawn" base="${obs-spawn}" radius="3" height="0"/>
        </region>
    </default>
</spawns>
<regions>
    <apply block="deny(void)" message="You may not build blocks on the void!"/>
</regions>
<time>${time-limit}</time>
<blitz/>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
</itemremove>
<world-borders center="0.5,0.5">
    <world-border size="512"/>
    <world-border size="128" after="${wb-appear}" duration="1s"/>
    <world-border size="36" after="${wb-start}" duration="${wb-closing-duration}" damage="20"/>
</world-borders>
<maxbuildheight>${maxbuildheight}</maxbuildheight>
</map>
