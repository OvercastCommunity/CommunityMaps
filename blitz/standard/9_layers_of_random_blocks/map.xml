<?xml version="1.0"?>
<map proto="1.4.2">
<name>9 Layers of Random Blocks</name>
<version>1.0.1</version>
<objective>Eliminate the other team before 10 minutes is up</objective>
<created>2022-06-12</created>
<authors>
    <author uuid="dd8c3d79-3930-41f6-a815-621dc3d52649" contribution="Map design and layout"/>
    <!-- StanleyTheCow -->
</authors>
<contributors>
    <contributor uuid="5c79d2c9-a4f0-4343-a84b-e1720f13009b" contribution="Some XML Help"/> 
    <!-- CoWinkKeyDinkInc -->
</contributors>
<teams>
    <team id="blue-team" color="blue" max="12">Blue</team>
    <team id="red-team" color="dark red" max="12">Red</team>
    <team id="yellow-team" color="yellow" max="12">Yellow</team>
    <team id="green-team" color="green" max="12">Green</team>
</teams>
<regions>
    <negative id="playable">
        <rectangle min="-64,-64" max="64,64"/>
    </negative>
    <apply enter="never" message="You may not leave the playable area!" region="playable"/>
</regions>
<kits>
    <kit id="spawn">
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" amount="64" material="cooked chicken"/>
        <item slot="2" unbreakable="true" material="stone pickaxe"/>
        <potion duration="10" amplifier="1">heal</potion>
        <potion duration="20">damage resistance</potion>
    </kit>
    <kit id="red-kit" parents="spawn">
        <helmet color="cd0000" material="leather helmet"/>
        <chestplate color="cd0000" material="leather chestplate"/>
        <leggings color="cd0000" material="leather leggings"/>
        <boots color="cd0000" enchantment="protection fall:2" material="leather boots"/>
    </kit>
    <kit id="blue-kit" parents="spawn">
        <helmet color="0066cc" material="leather helmet"/>
        <chestplate color="0066cc" material="leather chestplate"/>
        <leggings color="0066cc" material="leather leggings"/>
        <boots color="0066cc" enchantment="protection fall:2" material="leather boots"/>
    </kit>
    <kit id="yellow-kit" parents="spawn">
        <helmet color="cd0000" material="leather helmet"/>
        <chestplate color="cd0000" material="leather chestplate"/>
        <leggings color="cd0000" material="leather leggings"/>
        <boots color="cd0000" enchantment="protection fall:2" material="leather boots"/>
    </kit>
    <kit id="green-kit" parents="spawn">
        <helmet color="cd0000" material="leather helmet"/>
        <chestplate color="cd0000" material="leather chestplate"/>
        <leggings color="cd0000" material="leather leggings"/>
        <boots color="cd0000" enchantment="protection fall:2" material="leather boots"/>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="red-kit">
        <regions yaw="135">
            <cuboid min="20,31,22" max="22,31,20"/>
        </regions>
    </spawn>
    <spawn team="blue-team" kit="blue-kit">
        <regions yaw="-135">
            <cuboid min="-19,31,20" max="-21,31,22"/>
        </regions>
    </spawn>
    <spawn team="yellow-team" kit="yellow-kit">
        <regions yaw="-45">
            <cuboid min="-19,31,-21" max="-21,31,-19"/>
        </regions>
    </spawn>
    <spawn team="green-team" kit="green-kit">
        <regions yaw="45">
            <cuboid min="22,31,-19" max="20,31,-21"/>
        </regions>
    </spawn>
  <default>
      <regions yaw="0">
          <cuboid min="-1,32,1" max="1,32,-1"/>
      </regions>
  </default>
</spawns>
<time>10m</time>
<blitz>
    <lives>1</lives>
</blitz>
<world-borders center="0.5, 0.5">
    <world-border size="128"/>
    <world-border size="20" after="5m" duration="5m"/>
</world-borders>
</map>
