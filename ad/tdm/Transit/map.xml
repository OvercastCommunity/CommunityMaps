<?xml version="1.0"?>
<map proto="1.0.0">
<name>Transit</name>
<version>1.0.3</version>
<phase>development</phase>
<objective>Bombers should get to the scorebox and Guards should block their way!</objective>
<created>2022-07-27</created>
<gamemode>Rage</gamemode>
<gamemode>AD</gamemode>
<authors>
    <author uuid="5876ff18-006d-4a1d-83d8-53abd8002578"/> <!-- LKFJimmy -->
    <author uuid="f2efb814-9e02-4d17-bdf5-8ed449f9df77"/> <!-- Alexander_ -->
</authors>
<rules>
    <rule>Fall damage is disabled!</rule>
</rules>
<broadcasts>
    <tip after="1s" every="1m">Use Cobweb to block Bombers from scoring!</tip>
    <tip after="1s" every="1m">Use TNT to break the Cobweb from Guards!</tip>
    <tip after="4s" every="1m">Don't fall onto the rail!</tip>
    <tip after="7s" every="1m">The scorebox is located in the last compartment!</tip>
</broadcasts>
<teams>
    <team color="red" max="8" max-overfill="10">Bombers</team>
    <team color="yellow" max="8" max-overfill="10">Guards</team>
</teams>
<score>
    <time>5m</time>
    <box value="8" filter="only-red">
        <region name="red-score"/>
    </box>
    <kills>2</kills>
    <deaths>0</deaths>
</score>
<rage/>
<kits>
    <kit name="spawn">
        <clear/>
        <item slot="0" enchantment="damage all:10" unbreakable="true" name="`bSword">iron sword</item>
        <potion duration="oo" amplifier="-4">health boost</potion>
        <potion duration="oo" amplifier="1">night vision</potion>
        <potion duration="3" amplifier="25">heal</potion>
        <potion duration="3" amplifier="25">damage resistance</potion>
    </kit>
    <kit name="red" parents="spawn">
	<potion duration="oo" amplifier="3">speed</potion>
        <chestplate color="FF0C0C" unbreakable="true">leather chestplate</chestplate>
        <leggings color="FF0C0C" unbreakable="true">leather leggings</leggings>
        <boots color="FF0C0C" unbreakable="true">leather boots</boots>
        <item slot="1" amount="3" name="`4Landmine `6| `bFuse: 0.7s `6| `bPower: 2" lore="`9Use this strategically! It could be helpful...">tnt</item>
    </kit>
    <kit name="yellow" parents="spawn">
	<potion duration="oo" amplifier="1">speed</potion>
        <chestplate color="FFCC0C" unbreakable="true">leather chestplate</chestplate>
        <leggings color="FFCC0C" unbreakable="true">leather leggings</leggings>
        <boots color="FFCC0C" unbreakable="true">leather boots</boots>
        <item slot="1" enchantment="arrow damage:10" unbreakable="true" name="`cBow">bow</item>
        <item slot="2" amount="5">web</item>
        <item slot="8" amount="1">arrow</item>
    </kit>
	<kit name="default">
	    <potion duration="oo" amplifier="1">night vision</potion>
	</kit>
        <kit name="force-kill" force="true">
        <health>1</health>
        <effect duration="oo" amplifier="25">wither</effect>
    </kit>
</kits>
<tnt>
    <instantignite>on</instantignite>
    <licensing>off</licensing>
    <friendly-defuse>off</friendly-defuse>
    <fuse>0.7s</fuse>
    <power>2</power>
    <blockdamage>true</blockdamage>
</tnt>
<filters>
    <team name="only-red">Bombers</team>
    <team name="only-yellow">Guards</team>
    <any name="tntnweb">
        <block>tnt</block>
        <block>web</block>
        <block damage="8">stained_glass_pane</block>
    </any>
</filters>
<regions>
    <apply block="tntnweb" message="You may only use TNT or cobweb!">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
    <apply enter="only-red" message="You may not enter this area!">
            <union>
                <cuboid min="-18,32,-2" max="-23,34,3"/>
                <cuboid min="142,18,18" max="145,22,13"/>
                <cuboid min="142,18,-12" max="145,22,-17"/>
            </union>
    </apply>
    <union name="red-score">
        <cuboid min="141,18,18" max="148,22,13"/>
        <cuboid min="141,18,-12" max="148,22,-17"/>
    </union>
    <apply enter="only-yellow" message="You may not enter this area!">
        <cuboid min="144,18,-2" max="149,22,3"/>
    </apply>
    <union name="restricted">
        <cuboid min="-18,32,-2" max="-23,37,3"/>
        <cuboid min="144,18,-2" max="149,23,3"/>
        <cuboid min="141,18,18" max="148,22,13"/>
        <cuboid min="141,18,-12" max="148,22,-17"/>
        <cuboid min="144,17,11" max="148,22,20"/>
        <cuboid min="144,17,-19" max="148,22,-10"/>
        <cuboid min="24,17,-19" max="159,22,-18"/>
        <cuboid min="24,17,19" max="159,22,20"/>
        <cuboid min="-oo,-oo,-oo" max="oo,17,oo"/>
    </union>
    <apply block="deny-all" region="restricted"/>
    <apply kit="force-kill">
        <cuboid min="-oo,-oo,-oo" max="oo,15.5,oo"/>
    </apply>
</regions>
<portals>
    <!-- portals from score zones to bases -->
    <portal observers="deny-all" x="@-19.5" y="@32" z="@0.5" yaw="@-90" filter="only-red">
        <region name="red-score"/>
    </portal>
</portals>
<!-- Spawn -->
<spawns>
    <spawn team="Bombers" kit="red" yaw="-90">
        <cylinder base="-20.5,32,0.5" radius="1" height="0"/>
    </spawn>
    <spawn team="Guards" kit="yellow" yaw="90">
        <cylinder base="146.5,18,0.5" radius="1" height="0"/>
    </spawn>
    <default yaw="90" kit="default">
        <cylinder base="148.5,25.5,0.5" radius="2" height="0"/>
    </default>
</spawns>
<itemremove>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>iron sword</item>
    <item>tnt</item>
    <item>arrow</item>
    <item>web</item>
    <item>string</item>
    <item>iron trapdoor</item>
    <item>painting</item>
    <item>bow</item>
    <item>arrow</item>
    <item>potion</item>
    <item>item frame</item>
    <item>golden apple</item>
    <item>cooked mutton</item>
    <item>cooked beef</item>
    <item>cooked rabbit</item>
    <item>carrot item</item>
    <item>pumpkin pie</item>
</itemremove>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
</toolrepair>
<kill-reward filter="only-red">
    <item amount="2" name="`4Landmine `6| `bFuse: 0.7s `6| `bPower: 2" lore="`9Use this strategically! It could be helpful...">tnt</item>
</kill-reward>
<kill-reward filter="only-yellow">
    <item amount="2">web</item>
    <item>arrow</item>
</kill-reward>
<disabledamage>
    <damage ally="true" self="true" enemy="false" other="false">block explosion</damage>
    <damage>fall</damage>
</disabledamage>
<hunger>
    <depletion>off</depletion>
</hunger>
<renewables>
    <renewable rate="1" particles="true" sound="false" avoid-players="5">
        <region><cuboid min="-oo,18,-oo" max="oo,21,oo"/></region>
        <renew-filter><any><material damage="8">stained_glass_pane</material></any></renew-filter>
    </renewable>
</renewables>
</map>
