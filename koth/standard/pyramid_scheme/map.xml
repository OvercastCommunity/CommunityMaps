<map proto="1.4.2">
<name>Pyramid Scheme</name>
<version>1.0.0</version>
<objective>Be the first team to reach 750 points!</objective>
<authors>
    <author uuid="2ca8072f-74be-4798-85b8-bbce03aa91af"/> <!-- Tywnis -->
</authors>
<teams>
    <team id="blue-team" color="blue" max="12">Blue</team>
    <team id="red-team" color="dark red" max="12">Red</team>
</teams>
<kits>
    <kit id="main-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="7" amount="16" material="arrow"/>
        <item slot="8" amount="64" material="golden carrot"/>
        <chestplate unbreakable="true" material="chainmail chestplate"/>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="3" amplifier="10">resistance</effect>
        <effect duration="3" amplifier="10">regeneration</effect>
    </kit>
    <kit id="blue-kit" parents="main-kit">
        <helmet   unbreakable="true" color="0066cc" material="leather helmet"/>
        <leggings unbreakable="true" color="0066cc" material="leather leggings"/>
    </kit>
    <kit id="red-kit" parents="main-kit">
        <helmet   unbreakable="true" color="cd0000" material="leather helmet"/>
        <leggings unbreakable="true" color="cd0000" material="leather leggings"/>
    </kit>
</kits>
<spawns>
    <default>
        <regions>
            <point yaw="135">13.5,33,13.5</point>
        </regions>
    </default>
    <spawn team="blue-team" kit="blue-kit">
        <regions>
            <point yaw="-90">-70.5,30,-18.5</point>
        </regions>
    </spawn>
    <spawn team="red-team" kit="red-kit">
        <regions>
            <point yaw="0">-18.5,30,-70.5</point>
        </regions>
    </spawn>
</spawns>
<filters>
    <team id="only-blue">blue-team</team>
    <team id="only-red">red-team</team>
</filters>
<regions>
    <apply block="never">
        <region>
            <everywhere/>
        </region>
    </apply>
</regions>
<control-points incremental="true" show-progress="true">
    <control-point name="Village" neutral-state="true" required="false" capture-time="5s" points="1">
        <capture><cylinder base="-4.5,21,-4.5" radius="6.5" height="2"/></capture>
        <progress><cylinder base="-4.5,20,-4.5" radius="6.5" height="1"/></progress>
        <captured><cylinder base="-4.5,20,-4.5" radius="6.5" height="1"/></captured>
    </control-point>
    <control-point name="Summit" neutral-state="true" required="false" capture-time="5s" points="1">
        <capture><cylinder base="-48.5,35,-48.5" radius="6.5" height="2"/></capture>
        <progress><cylinder base="-48.5,34,-48.5" radius="6.5" height="1"/></progress>
        <captured><cylinder base="-48.5,34,-48.5" radius="6.5" height="1"/></captured>
    </control-point>
    <control-point name="Tomb" neutral-state="true" required="false" capture-time="5s" points="1">
        <capture><cylinder base="-41.5,13,-41.5" radius="6.5" height="2"/></capture>
        <progress><cylinder base="-41.5,12,-41.5" radius="6.5" height="1"/></progress>
        <captured><cylinder base="-41.5,12,-41.5" radius="6.5" height="1"/></captured>
    </control-point>
</control-points>
<kill-rewards>
    <kill-reward>
        <item amount="8" material="arrow"/>
        <item material="golden apple"/>
    </kill-reward>
</kill-rewards>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>golden carrot</item>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>arrow</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
</itemkeep>
<score>
    <limit>750</limit>
</score>
</map>
