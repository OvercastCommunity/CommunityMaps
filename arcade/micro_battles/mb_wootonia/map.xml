<map proto="1.5.0">
<constant id="use-default-teams">false</constant>
<include id="micro-battles"/>
<name>MB: Wootonia</name>
<variant id="modern" world="modern" override="true" min-server-version="1.21.10">MB: Wootonia Deluxe</variant>
<version>1.2.0</version>
<created>2025-12-14</created>
<authors>
    <author uuid="1aad55f7-2dea-4f22-85ca-ad9de3a78609"/> <!-- Technodono -->
</authors>
<constant id="world-border-start-size">95</constant>
<constant id="map-radius">29.5</constant>
<constant id="default-walls-height">18</constant>
<teams>
    <team id="blue-team" color="dark aqua" max="8">Team Zak</team>
    <team id="green-team" color="green" max="8">Team Boom</team>
    <team id="red-team" color="light purple" max="8">Team Vim</team>
    <team id="yellow-team" color="gold" max="8">Team Rok</team>
</teams>
<kits>
    <kit id="new-kit">
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" unbreakable="true" material="stone pickaxe"/>
        <item slot="3" unbreakable="true" material="stone spade"/>
        <item slot="4" unbreakable="true" material="shears"/>
        <item slot="8" amount="8" material="apple"/>
        <item slot="28" amount="8" material="arrow"/>
        <chestplate locked="true" unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings locked="true" unbreakable="true" material="chainmail leggings"/>
        <boots locked="true" unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="oo">night vision</effect>
    </kit>
    <kit id="obs">
        <effect duration="oo">night vision</effect>
    </kit>
</kits>
<spawns>
    <spawn team="blue-team" kit="new-kit">
        <regions>
            <point yaw="-45">-18,6,-18</point> <!-- Blue team should be in NW quadrant -->
        </regions>
    </spawn>
    <spawn team="green-team" kit="new-kit">
        <regions>
            <point yaw="45">19,6,-18</point> <!-- Green team should be in NE quadrant -->
        </regions>
    </spawn>
    <spawn team="red-team" kit="new-kit"> 
        <regions>
            <point yaw="135">19,6,19</point> <!-- Red team should be in SE quadrant -->
        </regions>
    </spawn>
    <spawn team="yellow-team" kit="new-kit">
        <regions>
            <point yaw="225">-18,6,19</point> <!-- Yellow team should be in SW quadrant -->
        </regions>
    </spawn>
    <default kit="obs">
        <regions>
            <point yaw="0">0.5,32,0.5</point> <!-- Obs spawn, should be modified as needed -->
        </regions>
    </default>
</spawns>
<regions>
    <apply block-physics="never" region="everywhere"/>
</regions>
<world>
    <if variant="default">
        <timeset>18000</timeset>
    </if>
    <if variant="modern">
        <timeset>6000</timeset>
    </if>
</world>
<block-drops>
    <rule>
        <filter>
            <material>snow block</material>
        </filter>
        <drops>
            <item>snow block</item>
        </drops>
    </rule>
    <rule>
        <filter>
            <material>82</material>
        </filter>
        <drops>
            <item>82</item>
        </drops>
    </rule>
    <rule>
        <filter>
            <material>iron block</material>
        </filter>
        <drops>
            <item>wool</item>
        </drops>
    </rule>
    <if variant="modern">
        <rule>
            <filter>
                <material>stripped pale oak wood</material>
            </filter>
            <drops>
                <item>smooth quartz</item>
            </drops>
        </rule>
            <rule>
            <filter>
                <material>smooth quartz</material>
            </filter>
            <drops>
                <item>smooth quartz</item>
            </drops>
        </rule>
        <rule>
            <filter>
                <material>light blue concrete</material>
            </filter>
            <drops>
                <item>light blue wool</item>
            </drops>
        </rule>
        <rule>
            <filter>
                <material>lime concrete</material>
            </filter>
            <drops>
                <item>lime wool</item>
            </drops>
        </rule>
        <rule>
            <filter>
                <material>orange concrete</material>
            </filter>
            <drops>
                <item>orange wool</item>
            </drops>
        </rule>
        <rule>
            <filter>
                <material>pink concrete</material>
            </filter>
            <drops>
                <item>pink wool</item>
            </drops>
        </rule>
    </if>
</block-drops>
<itemremove>
    <item>cobblestone</item>
</itemremove>
</map>
