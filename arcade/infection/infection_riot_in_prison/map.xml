<map proto="1.4.2">
<name>Infection: Riot in Prison</name>
<version>1.0.2</version>
<objective>The prisoners must resist for 14 minutes against the prison police.</objective>
<gamemode>arcade</gamemode>

<rules>
    <rule>Fall damage is off</rule>w
    <rule>Name tags of Prison Police don't show</rule>
    <rule>Prison Police constant have speed I and night vision</rule>
    <rule>Prisoners have night vision for 1 minute</rule>
</rules>

<time result="Prisoners">14m</time>

<authors>
    <author uuid="065c76d6-32b8-4b3a-8270-db350f876844"/> <!-- Put0veda -->
</authors>

<contributors>
    <contributor uuid="065c76d6-32b8-4b3a-8270-db350f876844" contribution="xml"/> <!-- Put0veda -->
    <contributor uuid="3a3f756e-7925-409a-be5e-e8c1694b3e2c" contribution="Map Additions" /> <!-- Shimane -->
</contributors>

<broadcasts>
    <tip after="0s">Prison Police have speed I</tip>
    <alert after= "0s">Prison Police will be released from the main entrance after 30s!</alert>
    <alert after= "0s">Vamos UWU!</alert>
</broadcasts>

<teams>
    <team id="Prisoners" color="green" max="40" show-name-tags="false" plural="true">Prisoners</team>
    <team id="Prison Police" color="dark aqua" max="6" max-overfill="6" show-name-tags="false" plural="true">Prison Police</team>
</teams>

<!--Kits -->

<kits>
  <kit id="prison police-kit-start">
      <helmet locked="true" material="gold helmet" damage="2"/>
      <chestplate  unbreakable="true" material="gold chestplate"/>
      <leggings  unbreakable="true" material="gold leggings"/>
      <boots  unbreakable="true" material="gold boots"/>
      <item slot="0" unbreakable="true" material="gold sword" name="`2`Macana"/>
      <effect duration="50" amplifier="1">increase damage</effect>
      <effect duration="oo" amplifier="1">speed</effect>
      <effect duration="oo">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="prison police-kit">
      <helmet locked="true" material="gold helmet" damage="2"/>
      <chestplate unbreakable="true" material="gold chestplate"/>
      <leggings unbreakable="true" material="gold leggings"/>
      <boots unbreakable="true" material="gold boots"/>
      <item slot="0" unbreakable="true" material="gold sword" name="`2`Macana"/>
      <effect duration="15" amplifier="1">increase damage</effect>
      <effect duration="oo" amplifier="1">speed</effect>
      <effect duration="oo">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="prison police-kit-4">
      <helmet locked="true" material="gold helmet" damage="2"/>
      <chestplate unbreakable="true" material="gold chestplate"/>
      <leggings unbreakable="true" material="gold leggings"/>
      <boots unbreakable="true" material="gold boots"/>
      <item slot="0" unbreakable="true" material="gold sword" name="`2`Macana"/>
      <effect duration="30" amplifier="1">increase damage</effect>
      <effect duration="oo" amplifier="1">speed</effect>
      <effect duration="oo">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="prison police-kit-6">
      <helmet locked="true" material="gold helmet" damage="2"/>
      <chestplate unbreakable="true" material="diamond chestplate"/>
      <leggings unbreakable="true" material="diamond leggings"/>
      <boots unbreakable="true" material="gold boots"/>
      <item slot="0" unbreakable="true" material="diamond sword" name="`2`Macana"/>
      <effect duration="45" amplifier="1">increase damage</effect>
      <effect duration="oo" amplifier="1">speed</effect>
      <effect duration="oo">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="prisoners-kit">
      <helmet locked="true" unbreakable="true" material="leather helmet"/>
      <chestplate locked="true" unbreakable="true" material="iron chestplate"/>
      <leggings locked="true" unbreakable="true" material="chainmail leggings"/>
      <boots locked="true" unbreakable="true" material="leather boots"/>
      <item slot="0" unbreakable="true" material="iron sword"/>
      <item slot="1" unbreakable="true" material="bow"/>
      <item slot="2" material="arrow" amount="15"/>
      <effect duration="1m">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>

  <kit id="prison police-switch-kit" force="true">
      <team-switch team="Prison Police"/>
  </kit>
</kits>

<!--filters-->

<filters>
    <team id="only-prisoners">Prisoners</team>
    <team id="only-prison police">Prison Police</team>
    <not id="before-10s">
        <time id="after-10s">11s</time>
    </not>
    <not id="before-8m">
        <time id="after-8m">8m</time>
    </not>
    <not id="before-12m">
        <time id="after-12m">12m</time>
    </not>


</filters>

<!--Spawns-->

<spawns>
  <default>
      <region yaw="90">
          <cylinder base="-140.881,44,71.354" height="1" radius="1"/>
      </region>
  </default>
  <spawn filter="before-10s" team="Prison Police" kit="prison police-kit-start">
      <regions yaw="90">
          <point>-180.153,44,73.163</point>
      </regions>
  </spawn>
  <spawn filter="after-8m" team="Prison Police" kit="prison police-kit-4">
      <regions yaw="90">
          <point>-180.153,44,73.163</point>
      </regions>
  </spawn>
  <spawn filter="after-12m" team="Prison Police" kit="prison police-kit-6">
      <regions yaw="90">
          <point>-180.153,44,73.163</point>
      </regions>
  </spawn>
  <spawn filter="after-10s" team="Prison Police" kit="prison police-kit">
      <regions yaw="90">
          <point>-180.153,44,73.163</point>
      </regions>
  </spawn>
  <spawn filter="before-10s" team="Prisoners" kit="prisoners-kit">
    <region yaw="0">
        <cylinder base="-140.881,44,71.354" height="0" radius="0.5"/>
    </region>
  </spawn>
  <spawn filter="after-10s" team="Prisoners" kit="prison police-switch-kit">
      <region yaw="90">
          <point>-180.153,44,73.163</point>
      </region>
  </spawn>

</spawns>

<!-- Police Release-->

<modes show-before="25s">
    <mode id="start-game" after="45s" material="air" name="The prison police are comming"/>
</modes>


<!--Killrewards-->

<kill-rewards>
        <kill-reward>
            <kit>
                <effect duration="5" amplifier="4">regeneration</effect>
                <item amount="4">arrow</item>
            </kit>
            <filter>
                <all>
                    <team>Prisoners</team>
                    <kill-streak count="5" repeat="true"/>
                </all>
            </filter>
        </kill-reward>
        <kill-reward>
            <kit>
                <effect duration="5" amplifier="3">regeneration</effect>
            </kit>
            <filter>
                <all>
                    <team>Prison Police</team>
                </all>
            </filter>
        </kill-reward>
</kill-rewards>
<control-points>
    <control-point id="win-point" name="Prisoners Win!" required="true" capture-time="10s" show-progress="true">
        <capture>
            <everywhere/>
        </capture>
    </control-point>
</control-points>
<itemremove>
        <item>arrow</item>
        <item>leather helmet</item>
        <item>leather chestplate</item>
        <item>leather leggings</item>
        <item>leather boots</item>
        <item>chainmail chestplate</item>
        <item>chainmail leggings</item>
        <item>chainmail boots</item>
        <item>chainmail helmet</item>
        <item>stone sword</item>
        <item>iron sword</item>
        <item>gold sword</item>
        <item>armor stand</item>
        <item>bow</item>
        <item>iron boots</item>
        <item>iron chestplate</item>
        <item>diamond chestplate</item>
        <item>diamond leggings</item>
        <item>diamond sword</item>
        <item>gold boots</item>
        <item>gold chestplate</item>
        <item>gold chestplate</item>
        <item>gold leggings</item>
</itemremove>

<hunger>
    <depletion>off</depletion>
</hunger>

<damage>
    <deny>
        <attacker>
            <filter id="before-10s"/>
        </attacker>
    </deny>
    <deny>
        <all>
            <cause>fall</cause>
            <team>Prisoners</team>
        </all>
    </deny>
</damage>

<world>
    <timeset>13000</timeset>
</world>

<respawn auto="true"/>
</map>