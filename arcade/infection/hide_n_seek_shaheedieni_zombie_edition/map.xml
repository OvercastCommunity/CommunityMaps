<map proto="1.4.2">
<name>Hide n' Seek: Shaheedieni - Zombies Edition</name>
<version>1.0.2</version>
<objective>Humans must survive for 8 minutes against zombies.</objective>
<gamemode>arcade</gamemode>
<created>2021-08-29</created>
<rules>
    <rule>Fall damage is off</rule>w
    <rule>Name tags of Zombies don't show</rule>
    <rule>Zombies constant have speed I and night vision</rule>
    <rule>Humans have night vision for 1 minute</rule>
</rules>
<time result="Humans">7m</time>
<authors>
    <author uuid="97d1cc45-0f69-482b-9974-09351aef9dfa"/> <!--  lunaceee  -->
    <author uuid="c24e6f53-33a6-4003-98fd-f6c10f7f2bc8"/> <!--  Ludavigi  -->
    <author uuid="a53b7c56-ddc6-4fcb-a121-9a3829aabc28"/> <!--  MajorMcDonalds  -->
    <author uuid="20985d45-20c1-45f7-a7e9-daeaf7c08c2e"/> <!--  ImJeezus  -->
    <author uuid="b8add1ba-8e13-4673-bc73-4e3ed524d40e"/> <!--  Blazy  -->
    <author uuid="30401f63-f5bb-4f24-9a5a-0ecd5f706115"/> <!--  Dentmaged  -->
    <author uuid="db11ebfe-2241-4590-be96-23985d424ac7"/> <!--  _hej  -->
    <author uuid="6c5d7783-27fd-4ac5-8a1d-ba35206edf53"/> <!--  _nathy  -->
    <author uuid="1b68fb32-ad08-410f-ad7d-27dabc44fef7"/> <!--  Pipeee  -->
    <author uuid="14909274-9ac0-44cd-9fa3-aee57868bcf6"/> <!--  Detail  -->
    <author uuid="95763a18-eb88-44e7-8a10-780acffceae8"/> <!--  Creephunter  -->
    <author uuid="0efc927c-e167-4705-9675-28d19dbae6e0"/> <!--derlox-->
    <author uuid="3979a557-b092-43e6-8b0c-2b0682f486bf"/> <!--  IcyCode  -->
    <author uuid="8be9bdec-e392-418f-b72a-dc3f3845051d"/> <!--  Aymbaut  -->
    <author uuid="bd133f12-724a-4ca9-af7b-f808810aa835"/> <!--  Ref  -->
    <author uuid="55ccb56c-43ec-4a7d-b689-76450eea34a3"/> <!--  krovax  -->
</authors>
<broadcasts>
    <tip after="0s">There are multiple traps around the map! Be careful!</tip>
    <tip after="0s">Zombies have speed I</tip>
    <tip after="0s">There are hidden items inside chests around the map.</tip>
    <alert after= "0s">Zombies will be released from the helicopter after 30s!</alert>
</broadcasts>
<teams>
    <team id="Humans" color="green" max="50" show-name-tags="false" plural="true">Humans</team>
    <team id="Zombies" color="dark aqua" max="8" max-overfill="8" show-name-tags="false" plural="true">Zombies</team>
</teams>

<!--Kits -->

<kits>
  <kit id="zombie-kit-start">
      <helmet locked="true" material="skull item" damage="2"/>
      <chestplate  unbreakable="true" material="leather chestplate"/>
      <leggings  unbreakable="true" material="leather leggings"/>
      <boots  unbreakable="true" material="leather boots"/>
      <item slot="0" unbreakable="true" material="stone sword" name="`2`lInfection Sword"/>
      <effect duration="50" amplifier="1">increase damage</effect>
      <effect duration="oo" amplifier="1">speed</effect>
      <effect duration="oo">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="zombie-kit">
      <helmet locked="true" material="skull item" damage="2"/>
      <chestplate unbreakable="true" material="leather chestplate"/>
      <leggings unbreakable="true" material="leather leggings"/>
      <boots unbreakable="true" material="leather boots"/>
      <item slot="0" unbreakable="true" material="stone sword" name="`2`lInfection Sword"/>
      <effect duration="15" amplifier="1">increase damage</effect>
      <effect duration="oo" amplifier="1">speed</effect>
      <effect duration="oo">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="zombie-kit-4">
      <helmet locked="true" material="skull item" damage="2"/>
      <chestplate unbreakable="true" material="chainmail chestplate"/>
      <leggings unbreakable="true" material="leather leggings"/>
      <boots unbreakable="true" material="leather boots"/>
      <item slot="0" unbreakable="true" material="stone sword" name="`2`lInfection Sword"/>
      <effect duration="30" amplifier="1">increase damage</effect>
      <effect duration="oo" amplifier="1">speed</effect>
      <effect duration="oo">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="zombie-kit-6">
      <helmet locked="true" material="skull item" damage="2"/>
      <chestplate unbreakable="true" material="diamond chestplate"/>
      <leggings unbreakable="true" material="diamond leggings"/>
      <boots unbreakable="true" material="leather boots"/>
      <item slot="0" unbreakable="true" material="stone sword" name="`2`lInfection Sword"/>
      <effect duration="45" amplifier="1">increase damage</effect>
      <effect duration="oo" amplifier="1">speed</effect>
      <effect duration="oo">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="human-kit">
      <helmet locked="true" unbreakable="true" material="chainmail helmet"/>
      <chestplate locked="true" unbreakable="true" material="iron chestplate"/>
      <leggings locked="true" unbreakable="true" material="chainmail leggings"/>
      <boots locked="true" unbreakable="true" material="iron boots"/>
      <item slot="0" unbreakable="true" material="iron sword"/>
      <item slot="1" unbreakable="true" material="bow"/>
      <item slot="2" material="arrow" amount="12"/>
      <effect duration="1m">night vision</effect>
      <game-mode>adventure</game-mode>
  </kit>
  <kit id="zombie-switch-kit" force="true">
      <team-switch team="Zombies"/>
  </kit>
</kits>

<!--filters-->

<filters>
    <team id="only-humans">Humans</team>
    <team id="only-zombies">Zombies</team>
    <not id="before-10s">
        <time id="after-10s">11s</time>
    </not>
    <not id="before-4m">
        <time id="after-4m">4m</time>
    </not>
    <not id="before-6m">
        <time id="after-6m">6m</time>
    </not>


</filters>

<!--Spawns-->

<spawns>
  <default>
      <region yaw="90">
          <cylinder base="62.5,83,-38" height="1" radius="1"/>
      </region>
  </default>
  <spawn filter="before-10s" team="Zombies" kit="zombie-kit-start">
      <regions yaw="90">
          <point>25,58,-39.5</point>
      </regions>
  </spawn>
  <spawn filter="after-4m" team="Zombies" kit="zombie-kit-4">
      <regions yaw="90">
          <point>25,12,-39.5</point>
      </regions>
  </spawn>
  <spawn filter="after-6m" team="Zombies" kit="zombie-kit-6">
      <regions yaw="90">
          <point>25,12,-39.5</point>
      </regions>
  </spawn>
  <spawn filter="after-10s" team="Zombies" kit="zombie-kit">
      <regions yaw="90">
          <point>25,12,-39.5</point>
      </regions>
  </spawn>
  <spawn filter="before-10s" team="Humans" kit="human-kit">
    <region yaw="0">
        <cylinder base="54.5,12,-58.5" height="0" radius="0.5"/>
    </region>
  </spawn>
  <spawn filter="after-10s" team="Humans" kit="zombie-switch-kit">
      <region yaw="90">
          <point>25,12,-39.5</point>
      </region>
  </spawn>

</spawns>

<!-- Zombie Release-->

<modes show-before="25s">
    <mode id="start-game" after="30s" material="air" name="Zombies are being released"/>
</modes>
<destroyables name="helicopter" materials="stained clay" required="false" show="false" owner="Zombies">
    <destroyable id="helicopter" modes="start-game">
        <region>
            <block>24,57,-39</block>
            <block>24,57,-40</block>
            <block>24,57,-41</block>
            <block>25,57,-39</block>
            <block>25,57,-40</block>
            <block>25,57,-41</block>
        </region>
    </destroyable>
</destroyables>

<!--Killrewards-->

<kill-rewards>
        <kill-reward>
            <kit>
                <effect duration="5" amplifier="4">regeneration</effect>
                <item amount="4">arrow</item>
            </kit>
            <filter>
                <all>
                    <team>Humans</team>
                    <kill-streak count="5" repeat="true"/>
                </all>
            </filter>
        </kill-reward>
        <kill-reward>
            <kit>
                <effect duration="5" amplifier="3">regeneration</effect>
            </kit>
            <filter>
                <all>
                    <team>Zombies</team>
                </all>
            </filter>
        </kill-reward>
</kill-rewards>
<control-points>
    <control-point id="win-point" name="Zombies Win!" required="true" capture-time="10s" show-progress="true">
        <capture>
            <everywhere/>
        </capture>
    </control-point>
</control-points>
<itemremove>
        <item>arrow</item>
        <item>leather helmet</item>
        <item>leather chestplate</item>
        <item>leather leggings</item>
        <item>leather boots</item>
        <item>chainmail chestplate</item>
        <item>chainmail leggings</item>
        <item>chainmail boots</item>
        <item>chainmail helmet</item>
        <item>skull item</item>
        <item>stone sword</item>
        <item>iron sword</item>
        <item>armor stand</item>
        <item>bow</item>
        <item>iron boots</item>
        <item>iron chestplate</item>
        <item>diamond chestplate</item>
        <item>diamond leggings</item>
</itemremove>
<hunger>
    <depletion>off</depletion>
</hunger>
<damage>
    <deny>
        <attacker>
            <filter id="before-10s"/>
        </attacker>
    </deny>
    <deny>
        <all>
            <cause>fall</cause>
            <team>Zombies</team>
        </all>
    </deny>
</damage>
<world>
    <timeset>13000</timeset>
</world>
<respawn auto="true"/>
</map>
