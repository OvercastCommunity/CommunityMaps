        <filter>
            <pulse period="1s" duration="0.5s"  filter="always" />
        </filter>
        <action>
            <message text="round_state {r}">
                <replacements>
                    <decimal id="r" value="round_state" />
                </replacements>
            </message>
            <message text="current_round {r}">
                <replacements>
                    <decimal id="r" value="current_round" />
                </replacements>
            </message>
        </action>
    </trigger> -->
</actions>
