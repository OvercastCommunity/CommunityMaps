<map proto="1.5.0">
<name>Knockout Stick Fight: Pond Edition</name>
<version>1.0.1</version>
<phase>staging</phase>
<objective>Eliminate the other teams!</objective>
<created>2025-12-08</created>
<include id="void-death"/>
<constant id="void-plane">43</constant>
<authors>
    <author uuid="e4cfa2d5-6b11-4e15-a893-9d92f18385f3"/> <!-- mariogoat -->
    <author uuid="f8753ae6-a7ed-4d88-8d6d-537a5b1687e4"/> <!-- guini2 -->
</authors>
<contributors>
    <contributor uuid="63ddf58a-ba2c-4d39-8481-6358bb46c63a" contribution="xml"/> <!-- samschaap -->
</contributors>
<teams>
    <team id="beavers" color="dark aqua" max="10" plural="true">Beavers</team>
    <team id="ducks" color="yellow" max="10" plural="true">Ducks</team>
    <team id="herons" color="gray" max="10" plural="true">Herons</team>
    <team id="frogs" color="green" max="10" plural="true">Frogs</team>
</teams>
<time>5m</time>
<kits>
    <kit id="stick">
        <item slot="0" material="stick" name="`r`lKnockback 1 Stick">
            <enchantment>knockback</enchantment>
        </item>
        <helmet material="leather helmet" team-color="true" locked="true" unbreakable="true"/>
        <effect amplifier="255" duration="3s">damage resistance</effect>
        <effect>regeneration</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="stick2" force="true">
        <item slot="0" material="stick" name="`r`a`lKnockback 2 Stick">
            <enchantment level="2">knockback</enchantment>
        </item>
    </kit>
    <kit id="stick3" force="true">
        <item slot="0" material="stick" name="`r`e`lKnockback 3 Stick">
            <enchantment level="3">knockback</enchantment>
        </item>
    </kit>
    <kit id="stick10" force="true">
        <item slot="0" material="stick" name="`r`c`lKnockback 10 Stick">
            <enchantment level="10">knockback</enchantment>
        </item>
    </kit>
    <give kit="stick2" filter="1m"/>
    <give kit="stick3" filter="2m"/>
    <give kit="stick10" filter="4m"/>
</kits>
<spawns>
    <default>
        <region yaw="135">
            <point>-91.5,43,117.5</point>
        </region>
    </default>
    <spawn team="beavers" kit="stick">
        <region yaw="135">
            <point>-45.5,46,106.5</point>
        </region>
    </spawn>
    <spawn team="ducks" kit="stick">
        <region yaw="-135">
            <point>-101.5,46,106.5</point>
        </region>
    </spawn>
    <spawn team="herons" kit="stick">
        <region yaw="45">
            <point>-45.5,46,50.5</point>
        </region>
    </spawn>
    <spawn team="frogs" kit="stick">
        <region yaw="-45">
            <point>-101.5,46,50.5</point>
        </region>
    </spawn>
</spawns>
<filters>
    <all id="1m">
        <time>1m</time>
        <participating/>
    </all>
    <all id="2m">
        <time>2m</time>
        <participating/>
    </all>
    <all id="4m">
        <time>4m</time>
        <participating/>
    </all>
</filters>
<regions>
    <union id="out-of-bounds">
        <negative>
            <circle id="playable-area" center="-73.5,78.5" radius="51"/>
        </negative>
        <circle center="-91.5,117.5" radius="9"/> <!-- Obs spawn -->
        <circle center="-32.5,61.5" radius="9"/> <!-- Lilypad -->
    </union>
    <apply block="never"/>
</regions>
<portals>
    <portal y="@-150" sound="false" observers="never" region="out-of-bounds"/>
</portals>
<spawners>
    <spawner delay="15s">
        <player-region>
            <cylinder base="-73.5,43,78.5" radius="3" height="5"/>
        </player-region>
        <spawn-region>
            <point>-73.5,44,78.5</point>
        </spawn-region>
        <potion>
            <effect duration="30s" amplifier="2">speed</effect>
        </potion>
    </spawner>
</spawners>
<broadcasts>
    <tip after="5s" every="1m">The Water, Lilypads, and Sand are out of bounds!</tip>
    <tip after="10s" every="1m">Watch out for holes in the map!</tip>
    <alert after="1m">Your sticks are now knockback 2!</alert>
    <alert after="2m">Your sticks are now knockback 3!</alert>
    <alert after="4m">Your sticks are now knockback 10!</alert>
</broadcasts>
<itemremove>
    <item>stick</item>
    <item>leather helmet</item>
</itemremove>
<hunger>
    <depletion>off</depletion>
</hunger>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
<blitz>
    <lives>1</lives>
    <broadcastLives>true</broadcastLives>
</blitz>
</map>
