    <union id="east-stairs">
        <block>-1,75,-19</block>
        <block>-1,73,-13</block>
        <block>-1,73,15</block>
        <block>-1,75,21</block>
    </union>
    <union id="west-stairs">
        <block>1,75,-19</block>
        <block>1,73,-13</block>
        <block>1,73,15</block>
        <block>1,75,21</block>
    </union>
    <union id="lanterns">
        <block>0,75,-19</block>
        <block>0,73,-13</block>
        <block>0,73,15</block>
        <block>0,75,21</block>
    </union>
    <!-- make these high enoungh to land on upperplatform without falling back down all the time -->
    <apply velocity="-0.3,1.6,0" region="blue-jumppads"/>
    <apply velocity="0.3,1.6,0" region="red-jumppads"/>
    <apply block="never" region="everywhere"/>
