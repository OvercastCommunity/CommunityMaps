    <block id="score-box-beacon">0,46,1</block>
    <union id="lime-block-beacons">
        <block>0,66,-29</block>
        <block>0,66,31</block>
    </union>
    <union id="quartz-slabs">
        <!-- organized North East first, then rotates clockwise -->
        <union id="slabs-1">
            <block>1,75,20</block>
            <block>1,75,22</block>
            <block>-1,75,22</block>
            <block>-1,75,20</block>
        </union>
        <union id="slabs-2">
            <block>1,73,14</block>
            <block>1,73,16</block>
            <block>-1,73,16</block>
            <block>-1,73,14</block>
        </union>
        <union id="slabs-3">
            <block>1,73,-14</block>
            <block>1,73,-12</block>
            <block>-1,73,-12</block>
            <block>-1,73,-14</block>
        </union>
        <union id="slabs-4">
            <block>1,75,-20</block>
            <block>1,75,-18</block>
            <block>-1,75,-18</block>
            <block>-1,75,-20</block>
        </union>
    </union>
    <!-- organized from north tower to south tower -->
    <union id="north-stairs">
        <block>0,75,-18</block>
        <block>0,73,-12</block>
        <block>0,73,16</block>
        <block>0,75,22</block>
    </union>
    <union id="south-stairs">
        <block>0,75,-20</block>
