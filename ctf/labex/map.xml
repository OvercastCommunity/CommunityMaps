<map proto="1.5.0">
<name>Lab'ex</name>
<version>1.0</version>
<objective>Capture the other team's flag 3 times to win!</objective>
<created>2026-01-08</created>
<phase>staging</phase>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="9a65277a-575e-484d-affb-b55ccd4c1deb"/> <!-- Pqlette -->
</authors>
<contributors>
    <contributor uuid="613b82ff-4cac-47d1-97d4-a0c45b8281fb" contribution="Building support"/> <!-- MarkAndILikePigs -->
    <contributor uuid="69803996-1115-414c-b698-5986535f02b4" contribution="Building support"/> <!-- miniature_Joe -->
    <contributor uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128" contribution="XML"/> <!-- zzuf -->
</contributors>
<teams>
    <team id="blue-team" color="blue" max="24">Blue</team>
    <team id="orange-team" color="gold" max="24">Orange</team>
</teams>
<time result="score">10m</time>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow">
            <enchantment>infinity</enchantment>
        </item>
        <item slot="28" material="arrow"/>
        <item slot="7" material="compass"/>
        <item slot="8" material="golden apple"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" material="gold chestplate"/>
        <leggings unbreakable="true" team-color="true" material="leather leggings"/>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="4s" amplifier="255">resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="135">
            <point>-10.5,52,119.5</point>
        </region>
    </default>
    <spawn team="blue-team" kit="spawn-kit">
        <regions>
            <point yaw="-90">-115.5,30,124.5</point>
            <point yaw="180">-123.5,30,116.5</point>
        </regions>
    </spawn>
    <spawn team="orange-team" kit="spawn-kit">
        <regions>
            <point yaw="90">-13.5,30,6.5</point>
            <point yaw="0">-5.5,30,14.5</point>
        </regions>
    </spawn>
</spawns>
<filters>
    <carrying-flag id="flag-carrier-blue">blue-flag</carrying-flag>
    <carrying-flag id="flag-carrier-orange">orange-flag</carrying-flag>
</filters>
<regions>
    <union id="team-spawns">
        <cuboid id="blue-spawn" min="32,0,286" max="42,oo,273"/>
        <cuboid id="orange-spawn" min="111,0,169" max="101,oo,182"/>
    </union>
    <union id="return-nets">
        <cylinder id="blue-return-platform" base="75.5,13,290.5" radius="1.5" height="6"/>
        <cylinder id="orange-return-platform" base="67.5,13,164.5" radius="1.5" height="6"/>
    </union>
    <apply block="never"/>
</regions>
<flags>
    <flag id="blue-flag" name="Blue Flag" owner="blue-team" color="blue">
        <post yaw="45" pickup-filter="orange-team" recover-time="10s">-98.5,20,99.5</post>
    </flag>
    <flag id="orange-flag" name="Orange Flag" owner="orange-team" color="orange">
        <post yaw="-135" pickup-filter="blue-team" recover-time="10s">-30.5,20,31.5</post>
    </flag>
    <flags points="1">
        <net flag="blue-flag">
            <region>
                <cylinder base="-30.5,20,31.5" height="4" radius="2"/>
            </region>
        </net>
        <net flag="orange-flag">
            <region>
                <cylinder base="-98.5,20,99.5" height="4" radius="2"/>
            </region>
        </net>
    </flags>
</flags>
<kill-rewards>
    <kill-reward>
        <kit>
            <effect duration="10s">speed</effect>
        </kit>
    </kill-reward>
</kill-rewards>
<score>
    <limit>3</limit>
</score>
<compass show-distance="true">
    <player holder-filter="orange-team" filter="flag-carrier-orange" show-player="true"/>
    <flag holder-filter="orange-team">blue-flag</flag>
    <player holder-filter="blue-team" filter="flag-carrier-blue" show-player="true"/>
    <flag holder-filter="blue-team">orange-flag</flag>
</compass>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>arrow</tool>
    <tool>compass</tool>
</toolrepair>
<itemkeep>
    <item>golden apple</item>
</itemkeep>
<itemremove>
    <item>leather helmet</item>
    <item>gold chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
</itemremove>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>

