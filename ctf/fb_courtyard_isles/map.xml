<map proto="1.5.0">
<name>FB: Courtyard Isles</name>
<variant id="comp" override="true">FB: Tourney Isles</variant>
<version>2.0.0</version>
<phase>development</phase>
<created>2025-12-29</created>
<constants>
    <constant id="team-size">12</constant>
    <constant id="build-limit">18</constant>
    <constant id="outer-island-chest-region">outer-chests</constant>
    <constant id="central-island-chest-region">central-chests</constant>
    <constant id="symmetry-mode">1</constant>
    <constant id="map-center">0.5,0.0,0.5</constant>
    <constant id="team-two-mirror-dir">-1,0,1</constant>
    <constant id="team-three-mirror-dir">0,0,1</constant>
    <constant id="team-four-mirror-dir">1,0,1</constant>
    <if variant="comp">
        <constant id="kill-teams">1</constant> <!-- When teams are killed and this feature is enabled players are sent to obs instead of swapping teams (Used primarily for comp) -->
    </if>
    <constant id="obs-yaw">180</constant>
    <constant id="obs-pitch">0</constant>
    <constant id="team-one-yaw">0</constant>
    <constant id="team-one-pitch">0</constant>
    <constant id="team-one-flag-post-1-yaw">-90</constant>
    <constant id="team-one-flag-post-2-yaw">90</constant>
    <constant id="team-two-yaw">-90</constant>
    <constant id="team-two-pitch">0</constant>
    <constant id="team-two-flag-post-1-yaw">180</constant>
    <constant id="team-two-flag-post-2-yaw">0</constant>
    <constant id="team-three-yaw">180</constant>
    <constant id="team-three-pitch">0</constant>
    <constant id="team-three-flag-post-1-yaw">-90</constant>
    <constant id="team-three-flag-post-2-yaw">90</constant>
    <constant id="team-four-yaw">90</constant>
    <constant id="team-four-pitch">0</constant>
    <constant id="team-four-flag-post-1-yaw">180</constant>
    <constant id="team-four-flag-post-2-yaw">0</constant>
</constants>
<include id="flag-battles"/>
<authors>
    <author uuid="1aad55f7-2dea-4f22-85ca-ad9de3a78609" contribution="Map Author"/> <!-- Technodono -->
</authors>
<broadcasts>
    <tip after="1s" every="3m">Scoring flags in enemy goals will reduce their lives!</tip>
    <tip after="90s" every="3m">Explosives and other supplies can be found in loot chests!</tip>
</broadcasts>
<regions>
    <point id="obs-spawnpoint">0.5,41,1.5</point>
    <point id="team-one-spawnpoint">0.5,14,-73</point>
    <cuboid id="team-one-portal" min="-2,6,-54" size="5,6,1"/>
    <cuboid id="team-one-portal-indicator" min="-2,34,-55" size="5,-10,1"/>
    <block id="team-one-flag-1-post">-13,14,-68</block>
    <block id="team-one-flag-2-post">13, 14,-68</block>
    <union id="team-one-spawnroom">
        <cuboid min="-2,14,-70" size="5,oo,-4"/> <!-- Extend above spawn a fair bit to block enemies from entering-->
        <cuboid min="-7,14,-72" max="8,oo,-79"/>
    </union>
    <union id="outer-chests">
        <union id="nw-outer-chests">
            <block>-58,12,-46</block>
            <block>-46,12,-58</block>
        </union>
        <mirror normal="0,0,1" origin="${map-center}" region="nw-outer-chests"/>
        <mirror normal="1,0,1" origin="${map-center}" region="nw-outer-chests"/>
        <mirror normal="1,0,0" origin="${map-center}" region="nw-outer-chests"/>
    </union>
    <union id="central-chests">
        <block id="north-chest">0,12,-12</block>
        <mirror normal="-1,0,1" origin="${map-center}" region="north-chest"/>
        <mirror normal="0,0,1" origin="${map-center}" region="north-chest"/>
        <mirror normal="1,0,1" origin="${map-center}" region="north-chest"/>
    </union>
    <cuboid id="team-one-spawnroom-door" min="-2,14,-70" size="5,4,-4"/>
    <cuboid id="map-buildable-area" min="-79,0,-79" max="80,60,80"/>
</regions>
<world>
    <timelock>on</timelock>
    <timeset>1200</timeset>
</world>
</map>
