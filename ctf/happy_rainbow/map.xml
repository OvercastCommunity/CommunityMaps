    </union>
    <union id="red-net">
        <cuboid min="-35,2,25" max="-30,8,35"/>
        <cuboid min="-34,2,31" max="-24,8,36"/>
        <cuboid min="-26,2,28" max="-23,4,23"/>
        <cuboid min="-27,2,27" max="-22,4,24"/>
    </union>
    <union id="yellow-net">
        <cuboid min="-24,2,-35" max="-34,8,-30"/>
        <cuboid min="-30,2,-34" max="-35,8,-24"/>
        <cuboid min="-26,2,-22" max="-23,4,-27"/>
        <cuboid min="-27,2,-23" max="-22,4,-26"/>
    </union>
    <union id="green-net">
        <cuboid min="36,2,-24" max="31,8,-34"/>
        <cuboid min="35,2,-30" max="25,8,-35"/>
        <cuboid min="24,2,-22" max="27,4,-27"/>
        <cuboid min="23,2,-23" max="28,4,-26"/>
    </union>
    <union id="blue-net">
        <cuboid min="25,2,36" max="35,8,31"/>
        <cuboid min="31,2,35" max="36,8,25"/>
        <cuboid min="24,2,28" max="27,4,23"/>
        <cuboid min="23,2,27" max="28,4,24"/>
    </union>
    <union id="gapple">
        <cuboid min="-2,3,-1" max="3,4,2"/>
        <cuboid min="-1,3,-2" max="2,4,3"/>
    </union>
    <apply block="interactable"/>
    <apply block="never" region="everywhere"/>
    <apply enter="only-red" region="red-protection" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-yellow" region="yellow-protection" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-green" region="green-protection" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-blue" region="blue-protection" message="You may not enter the enemy's spawn!"/>
</regions>
<kill-rewards>
    <kill-reward>
        <item amount="4">snowball</item>
    </kill-reward>
</kill-rewards>
<unless variant="rage">
    <spawners>
        <spawner spawn-region="gapple-point" player-region="gapple" delay="3s">
            <item amount="1" material="golden apple"/>
        </spawner>
    </spawners>
</unless>
<renewables>
    <renewable interval="7s" grow="true" particles="true" sound="false" region="everywhere">
        <renew-filter>
            <any>
                <material>wool</material>
            </any>
        </renew-filter>
    </renewable>
</renewables>
<block-drops>
    <rule trample="true" region="parkour">
        <filter>
            <material>wool</material>
        </filter>
        <replacement>95:0</replacement>
    </rule>
</block-drops>
<falling-blocks>
    <rule delay="30">
        <filter>
            <material>95:0</material>
        </filter>
    </rule>
</falling-blocks>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>stone sword</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>snowball</item>
</itemkeep>
<hunger>
    <depletion>off</depletion>
</hunger>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
</map>
